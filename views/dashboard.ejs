        }

        /* AZ EREDETI K√ÅRTYA ST√çLUS */
        .card-custom {
            background: var(--dark-card);
            border: 1px solid var(--border);
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.5);
        }

        /* --- EZ AZ EGYETLEN √öJ√çT√ÅS: A SZ√ñVEG ST√çLUSA --- */
        .fox-message-highlight {
