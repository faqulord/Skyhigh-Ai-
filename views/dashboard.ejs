        function startTimer() {
            const countdownDisplay = document.getElementById('countdownDisplay'); if(!countdownDisplay) return;
            const matchTimeStr = "<%= (dailyTip && dailyTip.matchTime) ? dailyTip.matchTime : '' %>";
            function update() {
                const now = new Date(); let targetDate = new Date();
                if (matchTimeStr && matchTimeStr.includes(':')) { const parts = matchTimeStr.split(':'); targetDate.setHours(parseInt(parts[0]), parseInt(parts[1]), 0, 0); if (now > targetDate) { countdownDisplay.innerText = "√âL≈ê"; return; } } else { targetDate.setHours(11, 0, 0, 0); if(now > targetDate) targetDate.setDate(targetDate.getDate() + 1); }
                const diff = targetDate - now; if(diff < 0) { countdownDisplay.innerText = "00:00:00"; return; }
                const hrs = Math.floor(diff / 3600000); const min = Math.floor((diff % 3600000) / 60000); const sec = Math.floor((diff % 60000) / 1000);
