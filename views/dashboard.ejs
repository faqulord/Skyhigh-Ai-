<body class="bg-black text-white p-4">
    <div class="max-w-4xl mx-auto">
        <header class="flex justify-between items-center py-6">
            <h1 class="text-2xl font-black italic text-purple-600">SKYHIGH NEURAL</h1>
            <div id="countdown" class="text-xs font-mono bg-zinc-900 px-4 py-2 rounded-full border border-white/10">
                KÖVETKEZŐ TIPP: 00:00:00
            </div>
        </header>

        <div class="bg-zinc-900 p-8 rounded-[2rem] border border-purple-500/30 shadow-2xl relative overflow-hidden">
            <div class="absolute top-0 right-0 p-4 opacity-10 text-6xl italic font-black">AI</div>
            <p class="text-[10px] uppercase tracking-[5px] text-zinc-500 mb-4 font-bold">Today's Master Prediction</p>
            
            <% if (dailyTip) { %>
                <h2 class="text-4xl font-black italic uppercase mb-2"><%= dailyTip.match %></h2>
                <div class="flex gap-4 mb-6">
                    <span class="bg-purple-600 px-4 py-1 rounded-lg font-black italic text-xl tracking-tighter"><%= dailyTip.odds %></span>
                    <span class="text-xl font-bold italic py-1"><%= dailyTip.prediction %></span>
                </div>
                <p class="text-sm text-zinc-400 italic border-l-2 border-purple-500 pl-4"><%= dailyTip.reasoning %></p>
            <% } else { %>
                <p class="text-zinc-600 italic">A robot jelenleg elemzi a meccseket... Várd meg a reggel 8:00-at!</p>
            <% } %>
        </div>

        <div class="mt-12">
            <h3 class="text-[10px] font-bold uppercase tracking-widest text-zinc-500 mb-6">History Log (Last 30 Days)</h3>
            <div class="grid grid-cols-1 gap-2">
                <% history.forEach(item => { %>
                    <div class="bg-zinc-900/50 p-4 rounded-xl border border-white/5 flex justify-between items-center">
                        <span class="text-xs font-bold"><%= item.date %></span>
                        <span class="text-xs italic text-zinc-400"><%= item.match %></span>
                        <span class="text-xs font-black text-purple-500"><%= item.prediction %></span>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <script>
        function updateTimer() {
            const now = new Date();
            const target = new Date();
            target.setHours(8, 0, 0, 0);
            if (now > target) target.setDate(target.getDate() + 1);
            const diff = target - now;
            const h = Math.floor(diff/3600000).toString().padStart(2,'0');
            const m = Math.floor((diff%3600000)/60000).toString().padStart(2,'0');
            const s = Math.floor((diff%60000)/1000).toString().padStart(2,'0');
            document.getElementById('countdown').innerText = `KÖVETKEZŐ TIPP: ${h}:${m}:${s}`;
        }
        setInterval(updateTimer, 1000); updateTimer();
    </script>
</body>