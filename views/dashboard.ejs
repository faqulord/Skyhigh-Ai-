<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh AI | Terminál</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #050505; color: white; font-family: sans-serif; overflow-x: hidden; }
        .tech-card { background: #0c0c0e; border: 1px solid #1f1f22; border-radius: 20px; }
        .onboarding-overlay { background: rgba(0,0,0,0.95); backdrop-blur: 15px; }
        .pricing-modal { background: rgba(0,0,0,0.9); backdrop-blur: 20px; }
    </style>
</head>
<body class="p-4 md:p-10 max-w-7xl mx-auto">

    <header class="flex justify-between items-center mb-10">
        <h1 class="text-2xl font-black italic tracking-tighter uppercase">Skyhigh<span class="text-purple-500">.AI</span></h1>
        <div class="flex items-center gap-4">
            <% if (isAdmin) { %>
                <a href="/admin" class="bg-red-600 px-4 py-2 rounded-xl text-[10px] font-black uppercase">Admin Panel</a>
            <% } %>
            <a href="/logout" class="text-zinc-500 text-xs font-bold uppercase">Kilépés</a>
        </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-10">
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 uppercase font-bold tracking-widest mb-1">Licenc</p>
            <p class="text-lg font-black <%= user.hasLicense ? 'text-green-500' : 'text-red-500 animate-pulse' %>">
                <%= user.hasLicense ? 'AKTÍV' : 'INAKTÍV' %>
            </p>
        </div>
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 uppercase font-bold mb-1">Következő Tipp</p>
            <div id="countdown" class="text-2xl font-mono font-black">00:00:00</div>
        </div>
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 uppercase font-bold mb-1">Bankroll</p>
            <p class="text-xl font-mono font-bold text-purple-500"><%= (user.startingCapital || 0).toLocaleString() %> Ft</p>
        </div>
    </div>

    <div class="mb-10">
        <div class="tech-card p-8 md:p-12 border-purple-600/30 bg-purple-600/5 relative overflow-hidden text-center">
            <% if (!user.hasLicense) { %>
                <div class="absolute inset-0 bg-black/90 z-20 flex flex-col items-center justify-center p-6">
                    <i class="fas fa-lock text-4xl mb-4 text-zinc-800"></i>
                    <h3 class="text-xl font-black mb-2 uppercase">A MAI MASTER TIPP ZÁROLT</h3>
                    <p class="text-xs text-zinc-500 mb-6 italic">Csak aktív licencel rendelkező operátoroknak.</p>
                    <button onclick="openPricing()" class="bg-white text-black px-10 py-4 rounded-2xl font-black uppercase text-xs tracking-widest">Aktiválás</button>
                </div>
            <% } %>

            <h2 class="text-[10px] font-black text-purple-500 uppercase tracking-[10px] mb-8">Napi Stratégiai Elemzés</h2>
            <div id="waiting" class="py-12 text-zinc-600 italic">Várakozás a 08:00-as piaci adatokra...</div>
            <div id="activeTip" class="hidden">
                <h3 class="text-3xl md:text-5xl font-black mb-4 uppercase italic"><%= dailyTip ? dailyTip.match : 'Elemzés...' %></h3>
                <div class="inline-block bg-purple-600 px-8 py-2 rounded-full mb-6 font-black text-sm tracking-widest">
                    <%= dailyTip ? dailyTip.prediction : '' %> @ <%= dailyTip ? dailyTip.odds : '' %>
                </div>
                <p class="text-zinc-400 text-sm italic max-w-3xl mx-auto border-t border-zinc-900 pt-6">"<%= dailyTip ? dailyTip.reasoning : '' %>"</p>
                <div class="mt-8 p-4 bg-black border border-zinc-800 rounded-2xl inline-block">
                    <p class="text-[9px] text-zinc-500 uppercase mb-1 font-bold">Javasolt Tét (5%)</p>
                    <p class="text-xl font-mono font-bold text-green-500"><%= (user.startingCapital * 0.05).toLocaleString() %> Ft</p>
                </div>
            </div>
        </div>
    </div>

    <div id="pricingModal" class="hidden fixed inset-0 z-50 pricing-modal flex items-center justify-center p-6">
        <div class="max-w-4xl w-full grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="tech-card p-10 border-zinc-800 text-center flex flex-col">
                <h4 class="text-xs font-bold text-zinc-500 uppercase mb-2">Havi Hozzáférés</h4>
                <p class="text-4xl font-black mb-8">20.000 Ft</p>
                <button onclick="buy('monthly')" class="mt-auto bg-zinc-900 border border-zinc-700 py-4 rounded-2xl font-black uppercase text-[10px]">Kiválasztás</button>
            </div>
            <div class="tech-card p-10 border-purple-500/50 bg-purple-500/5 text-center flex flex-col relative">
                <div class="absolute top-4 right-[-30px] bg-purple-600 text-[8px] font-black px-10 py-1 rotate-45 uppercase">Best Value</div>
                <h4 class="text-xs font-bold text-purple-400 uppercase mb-2">Éves Licenc</h4>
                <p class="text-4xl font-black mb-8">180.000 Ft</p>
                <button onclick="buy('yearly')" class="mt-auto bg-purple-600 py-4 rounded-2xl font-black uppercase text-[10px] text-white">Aktiválás Most</button>
            </div>
            <button onclick="closePricing()" class="md:col-span-2 text-xs text-zinc-600 uppercase font-bold mt-4">Vissza</button>
        </div>
    </div>

    <div class="tech-card flex flex-col h-[500px]">
        <div id="chatBox" class="flex-1 p-6 overflow-y-auto space-y-4 bg-[#080808] text-sm"></div>
        <form id="chatForm" class="p-4 border-t border-zinc-800 flex gap-2">
            <input type="text" id="userInput" placeholder="Üzenet a Core-nak..." class="flex-1 bg-black rounded-xl px-4 outline-none border border-zinc-800 focus:border-purple-600">
            <button class="bg-purple-600 w-12 h-12 rounded-xl flex items-center justify-center"><i class="fas fa-paper-plane"></i></button>
        </form>
    </div>

    <% if (!user.startingCapital || user.startingCapital == 0) { %>
    <div id="onboarding" class="onboarding-overlay fixed inset-0 flex items-center justify-center z-[100] p-6 text-center">
        <div class="bg-zinc-950 p-10 border border-zinc-800 rounded-[40px] max-w-md shadow-2xl">
            <h2 class="text-2xl font-black mb-4 italic uppercase">Szoftver <span class="text-purple-600">Aktiválása</span></h2>
            <div class="grid grid-cols-2 gap-3 mb-6">
                <button onclick="setCap(50000)" class="bg-zinc-900 py-4 rounded-2xl font-bold">50.000 Ft</button>
                <button onclick="setCap(100000)" class="bg-zinc-900 py-4 rounded-2xl font-bold">100.000 Ft</button>
                <input type="number" id="customCap" placeholder="Egyéni" class="col-span-2 bg-black border border-zinc-800 p-4 rounded-2xl text-center">
            </div>
            <button onclick="saveCap()" class="w-full bg-white text-black py-4 rounded-2xl font-black uppercase">Indítás</button>
        </div>
    </div>
    <% } %>

    <script>
        function updateUI() {
            const now = new Date();
            const h = now.getHours();
            if(h >= 8) {
                document.getElementById('activeTip').classList.remove('hidden');
                document.getElementById('waiting').classList.add('hidden');
            }
            const target = new Date(); target.setHours(8,0,0,0);
            if(now > target) target.setDate(target.getDate()+1);
            const diff = target - now;
            const hours = Math.floor(diff/3600000).toString().padStart(2,'0');
            const mins = Math.floor((diff%3600000)/60000).toString().padStart(2,'0');
            const secs = Math.floor((diff%60000)/1000).toString().padStart(2,'0');
            document.getElementById('countdown').innerText = `${hours}:${mins}:${secs}`;
        }
        setInterval(updateUI, 1000); updateUI();

        function openPricing() { document.getElementById('pricingModal').classList.remove('hidden'); }
        function closePricing() { document.getElementById('pricingModal').classList.add('hidden'); }
        async function buy(plan) {
            const res = await fetch('/api/activate-license', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({plan}) });
            if((await res.json()).success) location.reload();
        }

        function setCap(v) { document.getElementById('customCap').value = v; }
        async function saveCap() {
            const capital = document.getElementById('customCap').value;
            await fetch('/api/set-capital', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({capital}) });
            location.reload();
        }

        const chatBox = document.getElementById('chatBox');
        document.getElementById('chatForm').onsubmit = async (e) => {
            e.preventDefault();
            const msg = document.getElementById('userInput').value;
            if(!msg) return;
            document.getElementById('userInput').value = '';
            chatBox.innerHTML += `<div class="flex justify-end mb-4"><div class="bg-purple-600 p-3 rounded-2xl rounded-tr-none text-xs font-bold">${msg}</div></div>`;
            const res = await fetch('/api/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message:msg}) });
            const data = await res.json();
            chatBox.innerHTML += `<div class="flex justify-start mb-4"><div class="bg-zinc-900 p-4 rounded-2xl rounded-tl-none border border-zinc-800 text-xs italic"><strong class="text-purple-500 block text-[9px] uppercase mb-1">Skyhigh Core</strong>${data.reply}</div></div>`;
            chatBox.scrollTop = chatBox.scrollHeight;
        };
    </script>
</body>
</html>