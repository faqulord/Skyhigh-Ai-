                        <div class="d-flex justify-content-center gap-2 mb-3">
                            <span class="badge bg-dark border border-secondary"><%= dailyTip.league %></span>
                            <span class="badge bg-dark border border-secondary"><%= dailyTip.bookmaker %></span>
