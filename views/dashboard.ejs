<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh AI | Executive Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap');
        
        body { 
            background-color: #000000; 
            color: #ffffff; 
            font-family: 'Inter', sans-serif; 
            overflow-x: hidden;
        }

        /* Üveg kártyák (Glassmorphism) */
        .glass-card {
            background: rgba(20, 20, 20, 0.6);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.08);
            border-radius: 24px;
        }

        /* AI Chat Buborék Animáció (Pop-in) */
        @keyframes slideIn {
            from { opacity: 0; transform: translateY(20px) scale(0.95); }
            to { opacity: 1; transform: translateY(0) scale(1); }
        }
        
        .ai-bubble {
            background: #1a1a1a;
            border: 1px solid #333;
            padding: 16px 20px;
            border-radius: 20px 20px 20px 4px; /* Bal alsó sarok hegyes */
            color: #e5e5e5;
            font-size: 13px;
            line-height: 1.6;
            margin-bottom: 16px;
            max-width: 90%;
            box-shadow: 0 4px 15px rgba(0,0,0,0.3);
            animation: slideIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
            opacity: 0; /* Kezdetben láthatatlan */
        }

        .user-bubble {
            background: #ffffff;
            color: black;
            border-radius: 20px 20px 4px 20px;
            margin-left: auto;
        }

        /* Avatar */
        .ai-avatar {
            width: 32px; height: 32px;
            border-radius: 50%;
            background: linear-gradient(135deg, #a855f7, #6366f1);
            display: flex; align-items: center; justify-content: center;
            font-size: 14px; color: white;
            box-shadow: 0 0 15px rgba(168, 85, 247, 0.4);
        }

        /* Prémium Blur (A titokhoz) */
        .premium-blur {
            filter: blur(8px);
            opacity: 0.6;
            user-select: none;
            transition: 0.5s;
        }
        
        /* Gombok */
        .btn-action {
            background: white; color: black;
            font-weight: 600; font-size: 12px;
            padding: 14px; border-radius: 14px;
            text-align: center; display: block; width: 100%;
            transition: transform 0.2s;
        }
        .btn-action:hover { transform: scale(1.02); }

        .btn-admin {
            position: fixed; bottom: 20px; right: 20px;
            background: #f59e0b; color: black; font-weight: 700;
            padding: 10px 20px; border-radius: 50px;
            box-shadow: 0 10px 30px rgba(245, 158, 11, 0.3);
            z-index: 100; font-size: 12px; text-transform: uppercase;
        }
    </style>
</head>
<body class="min-h-screen p-6 md:p-12 flex flex-col">

    <% 
        const today = new Date();
        const dateStr = today.toLocaleDateString('hu-HU', { month: 'long', day: 'numeric' });
    %>

    <header class="flex justify-between items-center mb-10 max-w-6xl mx-auto w-full">
        <div class="flex items-center gap-4">
            <div class="h-10 w-10 rounded-full bg-zinc-900 border border-zinc-800 flex items-center justify-center text-zinc-500">
                <i class="fas fa-user"></i>
            </div>
            <div>
                <h1 class="text-lg font-semibold text-white"><%= user.fullname %></h1>
                <div class="flex items-center gap-2">
                    <span class="w-1.5 h-1.5 rounded-full <%= user.hasLicense ? 'bg-green-500' : 'bg-zinc-600' %>"></span>
                    <p class="text-[10px] text-zinc-500 uppercase tracking-widest font-medium">
                        <%= user.hasLicense ? 'Prémium Tag' : 'Vendég Fiók' %>
                    </p>
                </div>
            </div>
        </div>
        <a href="/logout" class="text-xs text-zinc-500 hover:text-white transition">Kijelentkezés</a>
    </header>

    <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 max-w-6xl mx-auto w-full">

        <div class="lg:col-span-8 flex flex-col gap-6">
            
            <div class="glass-card flex-1 min-h-[500px] flex flex-col p-6 relative overflow-hidden">
                <div class="absolute top-0 right-0 w-64 h-64 bg-purple-900/10 rounded-full blur-3xl -z-10"></div>

                <div class="flex items-center gap-3 border-b border-white/5 pb-4 mb-6">
                    <div class="ai-avatar"><i class="fas fa-robot"></i></div>
                    <div>
                        <h3 class="text-sm font-medium text-white">Skyhigh AI</h3>
                        <p class="text-[10px] text-purple-400 uppercase tracking-wider">Személyes Asszisztens</p>
                    </div>
                </div>

                <div id="chatContainer" class="flex-1 overflow-y-auto pr-2">
                    </div>

                <div class="mt-4 relative">
                    <input type="text" placeholder="Írj választ..." class="w-full bg-zinc-900/50 border border-zinc-800 rounded-xl px-5 py-4 text-sm text-white focus:outline-none focus:border-zinc-600 transition placeholder-zinc-600">
                    <button class="absolute right-3 top-3 text-zinc-400 hover:text-white p-1">
                        <i class="fas fa-arrow-up"></i>
                    </button>
                </div>
            </div>

        </div>

        <div class="lg:col-span-4 space-y-6">

            <% if (user.hasLicense) { %>
                <div class="glass-card p-6 border-green-500/30">
                    <p class="text-xs text-zinc-500 uppercase tracking-widest mb-1">Mai Teljesítmény</p>
                    <h2 class="text-4xl font-light text-white mb-2">+4.8%</h2>
                    <div class="w-full bg-zinc-800 h-1 rounded-full overflow-hidden">
                        <div class="bg-green-500 h-full w-[40%]"></div>
                    </div>
                    <p class="text-[10px] text-green-400 mt-2">Célkitűzés teljesítve</p>
                </div>

                <div class="glass-card p-6">
                    <div class="flex justify-between items-center mb-4">
                        <span class="text-[10px] font-bold bg-white text-black px-2 py-1 rounded"><%= dateStr %></span>
                        <span class="text-[10px] text-zinc-400">PREMIER LEAGUE</span>
                    </div>
                    <div class="text-center">
                        <p class="text-lg font-medium">Man. City vs Liverpool</p>
                        <div class="mt-4 bg-zinc-800/50 p-3 rounded-xl border border-zinc-700/50">
                            <span class="text-xs text-zinc-400 block mb-1">AI Választás:</span>
                            <span class="text-sm font-bold text-white">HAZAI (1.85)</span>
                        </div>
                    </div>
                </div>

            <% } else { %>
                <div class="glass-card p-0 relative overflow-hidden group">
                    <div class="p-6">
                        <div class="flex justify-between items-center mb-6">
                            <span class="text-[10px] font-bold bg-zinc-800 text-zinc-400 px-2 py-1 rounded"><%= dateStr %></span>
                            <span class="text-[10px] text-green-500 flex items-center gap-1">
                                <span class="w-1.5 h-1.5 rounded-full bg-green-500 animate-pulse"></span> Élő
                            </span>
                        </div>
                        
                        <div class="premium-blur opacity-40">
                            <h3 class="text-center text-xl font-bold mb-2">TITKOS MÉRKŐZÉS</h3>
                            <div class="flex justify-between mt-4">
                                <span>Hazai</span>
                                <span>Vendég</span>
                            </div>
                        </div>

                        <div class="absolute inset-0 flex flex-col items-center justify-center bg-black/10 backdrop-blur-[2px]">
                            <div class="bg-zinc-900/90 border border-zinc-700 p-4 rounded-2xl text-center shadow-2xl transform transition group-hover:scale-105 duration-300">
                                <i class="fas fa-lock text-white mb-2"></i>
                                <p class="text-xs font-medium text-white mb-1">Prémium Elemzés</p>
                                <p class="text-[10px] text-zinc-400">94%-os valószínűség</p>
                            </div>
                        </div>
                    </div>
                    
                    <div class="p-4 border-t border-white/5 bg-zinc-900/30">
                        <a href="/fizetes" class="btn-action">
                            Elemzés Feloldása
                        </a>
                    </div>
                </div>

                <div class="glass-card p-5 flex items-center gap-4">
                    <div class="h-10 w-10 rounded-full bg-green-500/10 flex items-center justify-center text-green-500">
                        <i class="fas fa-check"></i>
                    </div>
                    <div>
                        <p class="text-xs text-zinc-400">Tegnapi Eredmény</p>
                        <p class="text-sm font-medium text-white">Sikeres Zárás ✅</p>
                    </div>
                </div>
            <% } %>

        </div>
    </div>

    <% if (isAdmin) { %> 
        <a href="/admin" class="btn-admin">
            <i class="fas fa-shield-alt mr-2"></i> Admin
        </a> 
    <% } %>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const container = document.getElementById('chatContainer');
            const hasLicense = <%= user.hasLicense %>;
            const fullName = "<%= user.fullname %>";
            const firstName = fullName.split(' ')[0]; // Csak a keresztnevet használjuk, közvetlenebb

            // Üzenet hozzáadása animációval
            function addAiMessage(text, delay) {
                setTimeout(() => {
                    const bubble = document.createElement('div');
                    bubble.className = 'ai-bubble';
                    bubble.innerHTML = text; // HTML engedélyezve a formázáshoz
                    container.appendChild(bubble);
                    
                    // Görgetés az aljára
                    container.scrollTo({ top: container.scrollHeight, behavior: 'smooth' });
                }, delay);
            }

            // A FORGATÓKÖNYV
            // 1. Üdvözlés
            addAiMessage(`Üdvözöllek, <strong>${firstName}</strong>.`, 600);

            // 2. Bemutatkozás (Mindenkinek)
            addAiMessage(`A Skyhigh AI asszisztense vagyok. Az én feladatom, hogy felügyeljem a befektetéseidet és biztosítsam a matematikai alapú profitot.`, 2000);

            if (hasLicense) {
                // PRÉMIUM ÜGYFÉLNEK
                addAiMessage(`A rendszered státusza: <span class="text-green-400 font-bold">AKTÍV</span>.`, 3500);
                addAiMessage(`A mai piaci elemzés elkészült. A kockázat minimalizálva, a várható hozam pozitív. A konkrét instrukciókat a jobb oldali panelen találod.`, 5000);
            } else {
                // ÚJ (INGYENES) ÜGYFÉLNEK
                addAiMessage(`Jelenleg <strong>Vendég</strong> módban vagy.`, 3500);
                addAiMessage(`Lefuttattam a globális keresést a mai napra. Találtam egy kiemelkedően magas valószínűségű lehetőséget a Premier League-ben.`, 5000);
                addAiMessage(`Mivel a fiókod még nincs aktiválva, a részleteket biztonsági okokból elhomályosítottam. Ha készen állsz a kezdésre, a jobb oldalon tudod feloldani a hozzáférést.`, 7500);
            }
        });
    </script>

</body>
</html>