    <% } %>

    <div id="toast" class="toast"><span>üöÄ</span><span>FIX PROFIT. ZSIV√ÅNY MATEK.</span></div>

    <div id="manifestoModal" class="flex items-center justify-center p-5 overflow-y-auto">
        <div class="thin-purple-border bg-[#0a0a0a] w-full max-w-md p-8 rounded-[2.5rem] relative my-10">
            <button onclick="closeManifesto()" class="absolute top-5 right-7 text-zinc-600 font-bold text-3xl">√ó</button>
            <div class="text-center mb-8"><div class="text-5xl mb-4">ü¶ä</div><h2 class="orbitron text-2xl font-black orange-neon uppercase tracking-widest">Zsiv√°ny Ki√°ltv√°ny</h2><p class="text-xs text-zinc-500 font-black tracking-widest uppercase mt-2">A 6%-os Aggressz√≠v Strat√©gia</p></div>
            <div class="space-y-6 text-sm leading-relaxed text-zinc-300 font-medium">
                <div class="bg-zinc-900/60 p-6 rounded-[2rem] border border-white/5 shadow-inner text-base">
                    <p class="text-[10px] text-zinc-500 uppercase font-black text-center mb-5 tracking-widest">100.000 Ft START (üî• 6%)</p>
                    <div class="space-y-4">
                        <div class="flex justify-between border-b border-white/5 pb-2"><span>1. √©v v√©g√©n:</span><span class="text-white font-black text-lg">~1.800.000 Ft</span></div>
                        <div class="flex justify-between border-b border-white/5 pb-2"><span>2. √©v v√©g√©n:</span><span class="text-white font-black text-lg">~32.000.000 Ft</span></div>
                        <div class="flex justify-between text-orange-400 font-black pt-2 italic"><span>3. √©v v√©g√©n:</span><span class="orange-neon text-xl">~500.000.000 Ft</span></div>
                    </div>
                </div>
                <p class="text-center text-purple-400 font-black uppercase tracking-widest py-3 border-y border-purple-500/20 text-xs">A fegyelem szabads√°g. A t≈ëke hatalom. A R√≥ka a kulcs.</p>
            </div>
            <button onclick="closeManifesto()" class="w-full bg-purple-600 text-white font-black py-6 rounded-3xl mt-10 uppercase text-xs tracking-widest shadow-xl">VAD√ÅSSZUNK! ü¶ä</button>
        </div>
    </div>

    <script>
        function openManifesto() { document.getElementById('manifestoModal').style.display = 'flex'; document.body.style.overflow = 'hidden'; }
        function closeManifesto() { document.getElementById('manifestoModal').style.display = 'none'; document.body.style.overflow = 'auto'; }
        function toggleBankEdit() { document.getElementById('bankForm').classList.toggle('hidden'); }
        function startTimer() {
            const countdownDisplay = document.getElementById('countdownDisplay');
            const hasTip = <%= (dailyTip && dailyTip.isPublished) ? "true" : "false" %>;
            const matchTimeStr = "<%= (dailyTip && dailyTip.matchTime) ? dailyTip.matchTime : '' %>";
            function update() {
                const now = new Date();
                let targetDate = new Date();
                if (hasTip && matchTimeStr) {
                    const [h, m] = matchTimeStr.split(':');
                    targetDate.setHours(parseInt(h), parseInt(m), 0, 0);
                    if (now > targetDate) { countdownDisplay.innerText = "√âL≈ê"; return; }
                } else { targetDate.setHours(11,0,0,0); if(now > targetDate) targetDate.setDate(targetDate.getDate()+1); }
                const diff = targetDate - now;
                const hrs = Math.floor(diff/3600000);
                const min = Math.floor((diff%3600000)/60000);
                const sec = Math.floor((diff%60000)/1000);
                countdownDisplay.innerText = `${hrs.toString().padStart(2,'0')}:${min.toString().padStart(2,'0')}:${sec.toString().padStart(2,'0')}`;
            }
            setInterval(update, 1000); update();
        }
        window.addEventListener('load', () => {
            startTimer();
            const toast = document.getElementById('toast');
            setTimeout(() => toast.classList.add('show'), 1000);
            setTimeout(() => toast.classList.remove('show'), 5000);
            const quotes = <%- JSON.stringify(foxQuotes) %>;
            const qEl = document.getElementById('dynamicQuote');
            let idx = 0;
            if(qEl) setInterval(() => { idx = (idx+1)%quotes.length; qEl.innerText = '"' + quotes[idx] + '"'; }, 5000);
        });
    </script>
</body>
</html>