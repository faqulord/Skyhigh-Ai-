<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh AI | Vez√©rl≈ëpult</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap');
        body { background-color: #050505; color: white; font-family: 'Inter', sans-serif; }
        
        /* K√°rtya St√≠lus */
        .card { 
            background: #0a0a0a; 
            border: 1px solid #1a1a1a; 
            border-radius: 16px; 
            padding: 20px;
            position: relative;
            overflow: hidden;
        }
        
        /* Anim√°lt Szkennel√©s (A m√©zesmadzag) */
        .scanner-line {
            position: absolute; top: 0; left: 0; width: 100%; height: 2px;
            background: #22c55e;
            box-shadow: 0 0 10px #22c55e;
            animation: scan 3s infinite linear;
            opacity: 0.5;
        }
        @keyframes scan { 0% { top: 0; } 100% { top: 100%; } }

        /* A "Titkos" Hom√°ly */
        .blur-secret { 
            filter: blur(6px); 
            user-select: none; 
            background: #111; 
            color: transparent; 
            text-shadow: 0 0 8px rgba(255,255,255,0.5);
        }

        /* Gombok */
        .btn-unlock { 
            background: linear-gradient(90deg, #22c55e, #16a34a); color: black; 
            font-weight: 900; text-transform: uppercase; letter-spacing: 1px; font-size: 11px;
            padding: 12px; border-radius: 8px; width: 100%; display: block; text-align: center;
            box-shadow: 0 0 20px rgba(34, 197, 94, 0.3);
            animation: pulse-green 2s infinite;
        }
        @keyframes pulse-green { 0% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); } 70% { box-shadow: 0 0 0 10px rgba(34, 197, 94, 0); } 100% { box-shadow: 0 0 0 0 rgba(34, 197, 94, 0); } }

        .btn-admin { background: gold; color: black; font-weight: 900; padding: 10px; border-radius: 8px; text-align: center; display: block; margin-bottom: 20px; text-transform: uppercase; font-size: 10px; }

        /* Chat */
        .chat-bubble { background: #111; border: 1px solid #222; padding: 12px; border-radius: 12px; font-size: 12px; color: #ccc; margin-bottom: 8px; }
        .ai-label { color: #a855f7; font-weight: 900; font-size: 9px; text-transform: uppercase; display: block; margin-bottom: 2px; }
    </style>
</head>
<body class="p-4 md:p-6 max-w-6xl mx-auto pb-20">

    <header class="flex justify-between items-center mb-8 border-b border-zinc-900 pb-4">
        <div>
            <h1 class="text-lg font-black uppercase tracking-tight text-white"><%= user.fullname %></h1>
            <div class="flex items-center gap-2">
                <span class="w-2 h-2 rounded-full <%= user.hasLicense ? 'bg-green-500' : 'bg-yellow-500' %>"></span>
                <p class="text-[10px] text-zinc-500 uppercase font-bold tracking-widest">
                    <%= user.hasLicense ? 'PRO PARTNER' : 'INGYENES TAG' %>
                </p>
            </div>
        </div>
        <a href="/logout" class="text-[10px] font-bold text-zinc-600 hover:text-white uppercase border border-zinc-800 px-3 py-1 rounded">Kil√©p√©s</a>
    </header>

    <% if (isAdmin) { %> <a href="/admin" class="btn-admin">üëë Admin Panel</a> <% } %>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">

        <div class="space-y-6">
            
            <div class="card border-green-500/30">
                <% if (!user.hasLicense) { %>
                    <div class="scanner-line"></div> <% } %>
                
                <div class="flex justify-between items-center mb-4">
                    <h3 class="text-xs font-black uppercase text-green-500 tracking-widest"><i class="fas fa-satellite-dish mr-1 animate-pulse"></i> √âl≈ë Elemz√©s</h3>
                    <span class="text-[9px] font-bold bg-green-900/30 text-green-400 px-2 py-1 rounded">MAI NAP</span>
                </div>

                <div class="space-y-3">
                    <div class="flex justify-between text-[10px] text-zinc-400 uppercase font-bold">
                        <span>Megb√≠zhat√≥s√°g</span>
                        <span class="text-white">Magas (94.2%)</span>
                    </div>
                    <div class="w-full bg-zinc-800 h-1.5 rounded-full overflow-hidden">
                        <div class="bg-green-500 h-full w-[94%]"></div>
                    </div>

                    <div class="flex justify-between text-[10px] text-zinc-400 uppercase font-bold mt-2">
                        <span>Liga / Sport</span>
                        <span class="text-white">Premier League ‚öΩ</span>
                    </div>

                    <div class="bg-zinc-900 p-3 rounded-lg border border-zinc-800 mt-2 text-center relative">
                        <% if (user.hasLicense) { %>
                            <p class="text-lg font-black text-white">MAN. CITY vs LIVERPOOL</p>
                            <p class="text-xs text-green-500 font-bold uppercase">Tipp: Hazai (1.85)</p>
                        <% } else { %>
                            <div class="absolute inset-0 flex items-center justify-center z-10">
                                <i class="fas fa-lock text-white/50 text-xl"></i>
                            </div>
                            <p class="text-lg font-black blur-secret">TITKOS CSAPATOK</p>
                            <p class="text-xs blur-secret">Tipp: Hazai (1.85)</p>
                        <% } %>
                    </div>
                </div>

                <% if (!user.hasLicense) { %>
                    <div class="mt-4">
                        <p class="text-[10px] text-zinc-500 text-center mb-3">A r√©szletek megtekint√©s√©hez licenc sz√ºks√©ges.</p>
                        <a href="/fizetes" class="btn-unlock">
                            TIPP FELOLD√ÅSA <i class="fas fa-unlock ml-1"></i>
                        </a>
                    </div>
                <% } %>
            </div>

            <div class="card opacity-60 hover:opacity-100 transition">
                <h3 class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-2">Tegnapi Eredm√©ny</h3>
                <div class="flex items-center gap-3">
                    <div class="w-8 h-8 rounded-full bg-green-500/20 flex items-center justify-center text-green-500">
                        <i class="fas fa-check"></i>
                    </div>
                    <div>
                        <p class="text-xs font-bold text-white">NYERTES TIPP ‚úÖ</p>
                        <p class="text-[9px] text-zinc-500 uppercase">Profit: +18.500 Ft (Egyetlen nap alatt)</p>
                    </div>
                </div>
            </div>

        </div>

        <div class="lg:col-span-2 space-y-6">
            
            <div class="card h-[400px] flex flex-col">
                <div class="flex items-center gap-3 border-b border-zinc-800 pb-3 mb-2">
                    <div class="relative">
                        <div class="w-10 h-10 rounded-full bg-zinc-900 border border-purple-600 flex items-center justify-center">
                            <i class="fas fa-robot text-purple-500"></i>
                        </div>
                        <div class="absolute bottom-0 right-0 w-2.5 h-2.5 bg-green-500 border-2 border-black rounded-full"></div>
                    </div>
                    <div>
                        <h3 class="text-sm font-bold text-white">Skyhigh AI Asszisztens</h3>
                        <p class="text-[9px] text-purple-400 font-bold uppercase">Profi Sportfogad√≥ Robot</p>
                    </div>
                </div>

                <div id="chatBox" class="flex-1 overflow-y-auto pr-2">
                    </div>

                <div class="mt-2 relative">
                    <input type="text" placeholder="K√©rdezz valamit..." class="w-full bg-zinc-900 border border-zinc-800 rounded-lg px-4 py-3 text-xs text-white focus:border-purple-500 outline-none">
                </div>
            </div>

        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chatBox = document.getElementById('chatBox');
            const hasLicense = <%= user.hasLicense %>;
            const userName = "<%= user.fullname %>";
            
            const messages = [
                { text: `Szia ${userName}! √ân a Skyhigh AI vagyok.`, delay: 500 },
                { text: "Lefuttattam a mai glob√°lis szkennel√©st.", delay: 1500 },
                { text: "Tal√°ltam egy <strong class='text-white'>KIEMELT KOCK√ÅZATMENTES</strong> lehet≈ës√©get a Premier League-ben.", delay: 3500 },
                hasLicense 
                    ? { text: "Mivel akt√≠v tag vagy, a tippet l√°thatod a bal oldalon. Sok sikert!", delay: 5000 }
                    : { text: "A r√©szleteket elhom√°lyos√≠tottam a bal oldalon. Ez a tipp matematikailag 94%-os biztons√°g√∫. Ha komolyan gondolod a vagyon√©p√≠t√©st, oldd fel a licencet, √©s kezdj√ºk el.", delay: 5000 }
            ];

            function addMessage(msg) {
                const div = document.createElement('div');
                div.className = 'chat-bubble opacity-0 transition duration-500';
                div.innerHTML = `<span class="ai-label">Skyhigh AI</span>${msg.text}`;
                chatBox.appendChild(div);
                setTimeout(() => div.classList.remove('opacity-0'), 100);
                chatBox.scrollTop = chatBox.scrollHeight;
            }

            messages.forEach(m => setTimeout(() => addMessage(m), m.delay));
        });
    </script>
</body>
</html>