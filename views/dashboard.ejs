                <h3 class="text-xl font-black text-white mb-5"><%= dailyTip.match %></h3>
                <div class="bg-zinc-900/80 p-6 rounded-[2rem] border border-white/5 w-full mb-5 shadow-inner"><p class="text-3xl font-black orange-neon-xl tracking-widest"><%= dailyTip.prediction %></p><p class="text-sm font-black text-white mt-2 uppercase tracking-[0.3em]">Odds: <span class="text-purple-400"><%= dailyTip.odds %></span></p></div>
                <div class="bg-black/40 p-5 rounded-2xl border border-zinc-800 shadow-inner italic"><p class="text-sm purple-pink-text-gradient leading-relaxed">"<%= dailyTip.memberMessage %>"</p></div>
            </div>
