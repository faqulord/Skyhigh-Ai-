            <% if (user.isAdmin) { %><a href="/admin" class="text-purple-400 text-xs font-bold">HQ</a><% } %>
            <a href="/logout" class="bg-zinc-900 px-4 py-2 rounded-full text-[10px] font-bold text-zinc-400">EXIT</a>
        </div>
    </header>

    <div class="mb-8">
        <p class="text-zinc-500 text-[10px] font-bold uppercase mb-1 tracking-widest"><%= displayDate %></p>
        <h2 class="text-2xl font-bold mb-2 tracking-tight">√údv, <span class="text-purple-500"><%= user.fullname.split(' ')[0] %></span>!</h2>
        <p class="text-xs text-zinc-400 italic">"<%= randomQuote %>"</p>
    </div>

    <% if (dailyTip && dailyTip.isPublished) { %>
        <div class="startup-card p-6 border-t-2 border-purple-600">
            <div class="text-center mb-8">
                <p class="text-[9px] text-zinc-500 font-bold uppercase tracking-[4px] mb-3"><%= dailyTip.league %></p>
                <h3 class="text-lg font-black leading-tight mb-6"><%= dailyTip.match %></h3>
                <div class="bg-black/50 p-6 rounded-2xl border border-zinc-800">
                    <p class="text-[10px] text-zinc-500 uppercase font-black mb-1">A R√≥ka Tippje</p>
                    <p class="text-2xl font-black gradient-text mb-1"><%= dailyTip.prediction %></p>
                    <p class="text-sm font-bold">Odds: <span class="text-purple-500"><%= dailyTip.odds %></span></p>
                </div>
            </div>

            <div class="bg-purple-900/10 border border-purple-500/20 p-5 rounded-xl relative mb-6">
                <span class="absolute -top-3 left-4 bg-[#111] px-2 text-xl">ü¶ä</span>
                <p class="text-xs text-zinc-300 italic leading-relaxed">
                    "<%= dailyTip.memberMessage %>"
                </p>
            </div>

            <div class="flex justify-between items-center bg-zinc-900/50 p-4 rounded-xl border border-zinc-800">
                <div class="text-[10px] text-zinc-500 font-bold uppercase leading-none">Aj√°nlott T√©ted (10%)</div>
