    <title>Skyhigh AI | Terminal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;600;800&family=JetBrains+Mono:wght@500&display=swap');
        
        body { 
            background-color: #050505; 
            color: white; 
            font-family: 'Inter', sans-serif; 
        }

        /* TACTICAL CARD STYLE */
        .tech-card {
            background: #0f0f11;
            border: 1px solid #27272a;
            border-radius: 12px;
            overflow: hidden;
            position: relative;
        }

        /* AI CHAT STYLE */
        .chat-container {
            height: 550px;
            display: flex;
            flex-direction: column;
            background: radial-gradient(circle at top right, #1a1025 0%, #0f0f11 40%);
        }

        /* Bubor√©k anim√°ci√≥ */
        @keyframes messagePop {
            0% { opacity: 0; transform: translateY(10px) scale(0.98); }
            100% { opacity: 1; transform: translateY(0) scale(1); }
        }

        .ai-message {
            background: #1e1e22;
            border-left: 3px solid #a855f7; /* Lila cs√≠k az AI-nak */
            padding: 16px;
            margin-bottom: 12px;
            border-radius: 4px 12px 12px 4px;
            font-size: 13px;
            line-height: 1.5;
            color: #d4d4d8;
            animation: messagePop 0.4s ease-out forwards;
            opacity: 0; /* Kezdetben rejtett */
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        .ai-name {
            font-family: 'JetBrains Mono', monospace;
            font-size: 10px;
            color: #a855f7;
            text-transform: uppercase;
            font-weight: bold;
            margin-bottom: 4px;
            display: block;
        }

        /* STATS & LOCKS */
        .stat-value { font-family: 'JetBrains Mono', monospace; letter-spacing: -1px; }

        .blur-secret {
            filter: blur(8px);
            user-select: none;
            opacity: 0.5;
        }

        .btn-activate {
            background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
            color: black;
            font-weight: 800;
            text-transform: uppercase;
            font-size: 11px;
            letter-spacing: 1px;
            padding: 14px;
            border-radius: 8px;
            width: 100%;
            display: block;
            text-align: center;
            box-shadow: 0 0 20px rgba(34, 197, 94, 0.2);
            transition: 0.2s;
        }
        .btn-activate:hover { transform: translateY(-2px); box-shadow: 0 0 30px rgba(34, 197, 94, 0.4); }

        .btn-admin {
            position: fixed; bottom: 20px; right: 20px;
            background: #f59e0b; color: black; font-weight: 800; font-size: 10px;
            padding: 10px 20px; border-radius: 4px; text-transform: uppercase; z-index: 50;
        }
    </style>
</head>
<body class="p-4 md:p-8 max-w-7xl mx-auto pb-24">

