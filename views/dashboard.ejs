<div class="terminal-card p-6 mb-8">
    <% if (user.hasLicense && dailyTip) { %>
        <h3 class="text-xs font-black text-purple-500 uppercase tracking-[5px] mb-4">LIVE MASTER TIP</h3>
        <div class="flex justify-between items-center mb-6">
            <p class="text-2xl font-black italic"><%= dailyTip.match %></p>
            <span class="bg-purple-600 text-white px-4 py-1 rounded-full text-xs font-bold uppercase"><%= dailyTip.odds %></span>
        </div>
        <div class="bg-zinc-900/50 p-4 rounded-xl border border-white/5 mb-6">
            <p class="text-[10px] text-zinc-500 uppercase mb-2">AI Reasoning (Elemzés)</p>
            <p class="text-sm italic text-zinc-300">"<%= dailyTip.reasoning %>"</p>
        </div>
    <% } else if (!user.hasLicense) { %>
        <div class="text-center py-10">
            <i class="fas fa-lock text-3xl text-zinc-700 mb-4"></i>
            <p class="text-sm font-bold uppercase tracking-widest text-zinc-500">A Master Tipp eléréséhez aktív licenc szükséges</p>
            <button onclick="activateLicense()" class="mt-6 bg-white text-black px-10 py-3 rounded-full font-black uppercase text-[10px] tracking-widest hover:bg-purple-600 hover:text-white transition">Licenc Vásárlása</button>
        </div>
    <% } else { %>
        <p class="text-center text-zinc-500 italic uppercase text-[10px]">A robot elemzi a mai piacot... Várj türelemmel (08:00)</p>
    <% } %>
</div>