        function toggleBankEdit() { document.getElementById('bankForm').classList.toggle('hidden'); }
        
        function startTimer() {
            const countdownDisplay = document.getElementById('countdownDisplay');
            const hasTip = <%= (dailyTip && dailyTip.isPublished) ? "true" : "false" %>;
            const matchTimeStr = "<%= (dailyTip && dailyTip.matchTime) ? dailyTip.matchTime : '' %>";
            function update() {
                const now = new Date();
                let targetDate = new Date();
                if (hasTip && matchTimeStr) {
                    const [h, m] = matchTimeStr.split(':');
                    targetDate.setHours(parseInt(h), parseInt(m), 0, 0);
                    if (now > targetDate) { countdownDisplay.innerText = "√âL≈ê"; return; }
                } else { targetDate.setHours(11,0,0,0); if(now > targetDate) targetDate.setDate(targetDate.getDate()+1); }
                const diff = targetDate - now;
                const hrs = Math.floor(diff/3600000);
                const min = Math.floor((diff%3600000)/60000);
                const sec = Math.floor((diff%60000)/1000);
                countdownDisplay.innerText = `${hrs.toString().padStart(2,'0')}:${min.toString().padStart(2,'0')}:${sec.toString().padStart(2,'0')}`;
            }
            setInterval(update, 1000); update();
        }

