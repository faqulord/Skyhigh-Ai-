<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh AI | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #000; color: white; font-family: sans-serif; }
        .tech-card { background: #0c0c0e; border: 1px solid #1f1f22; border-radius: 20px; }
    </style>
</head>
<body class="p-4 md:p-10 max-w-7xl mx-auto">
    <header class="flex justify-between items-center mb-10">
        <h1 class="text-2xl font-black italic tracking-tighter uppercase">Skyhigh<span class="text-purple-500">.AI</span></h1>
        <div class="flex items-center gap-4">
            <% if (isAdmin) { %>
                <a href="/admin" class="bg-red-600 px-4 py-2 rounded-xl text-[10px] font-black">ADMIN</a>
            <% } %>
            <a href="/logout" class="text-zinc-500 text-xs font-bold uppercase">Kil√©p√©s</a>
        </div>
    </header>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 font-bold uppercase mb-1">Licenc</p>
            <p class="text-lg font-black <%= user.hasLicense ? 'text-green-500' : 'text-red-500' %> uppercase">
                <%= user.hasLicense ? 'Akt√≠v' : 'Inakt√≠v' %>
            </p>
        </div>
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 font-bold uppercase mb-1">K√∂vetkez≈ë Tipp</p>
            <div id="countdown" class="text-2xl font-mono font-black text-white">00:00:00</div>
        </div>
        <div class="tech-card p-6 text-center">
            <p class="text-[9px] text-zinc-500 font-bold uppercase mb-1">Bankroll</p>
            <p class="text-xl font-mono font-bold text-purple-500"><%= (user.startingCapital || 0).toLocaleString() %> Ft</p>
        </div>
    </div>

    <div class="tech-card p-8 md:p-12 border-purple-600/30 bg-purple-600/5 relative text-center mb-8">
        <% if (!user.hasLicense) { %>
            <div class="absolute inset-0 bg-black/90 z-20 flex flex-col items-center justify-center p-6 rounded-2xl">
                <i class="fas fa-lock text-4xl mb-4"></i>
                <h3 class="text-xl font-black uppercase mb-4">Master Elemz√©s Z√°rolva</h3>
                <button onclick="openPricing()" class="bg-white text-black px-10 py-4 rounded-2xl font-black uppercase text-xs">Licenc Aktiv√°l√°sa</button>
            </div>
        <% } %>
        <h2 class="text-[10px] font-black text-purple-500 uppercase tracking-[10px] mb-8">Napi Master Elemz√©s</h2>
        <div id="waiting" class="py-12 text-zinc-600 italic">V√°rakoz√°s a 08:00-as adatokra...</div>
        <div id="activeTip" class="hidden">
            <h3 class="text-3xl font-black mb-4 uppercase italic"><%= dailyTip ? dailyTip.match : '' %></h3>
            <p class="text-zinc-400 text-sm italic max-w-2xl mx-auto">"<%= dailyTip ? dailyTip.reasoning : '' %>"</p>
        </div>
    </div>

    <div class="tech-card flex flex-col h-[500px]">
        <div id="chatBox" class="flex-1 p-6 overflow-y-auto space-y-4 bg-[#080808] text-sm">
            <div class="bg-zinc-900 p-4 rounded-2xl rounded-tl-none border border-zinc-800 text-zinc-300">
                <strong class="text-purple-500 block text-[10px] uppercase mb-1">Skyhigh Core AI üëã</strong>
                √údv√∂zl√∂m, <%= user.fullname %>! K√©szen √°llok a mai profit termel√©sre.
            </div>
        </div>
        <form id="chatForm" class="p-4 border-t border-zinc-800 flex gap-2">
            <input type="text" id="userInput" placeholder="√úzenet..." class="flex-1 bg-black rounded-xl px-4 outline-none border border-zinc-800">
            <button class="bg-purple-600 w-12 h-12 rounded-xl"><i class="fas fa-paper-plane"></i></button>
        </form>
    </div>

    <div id="pricingModal" class="hidden fixed inset-0 z-50 bg-black/95 flex items-center justify-center p-6">
        <div class="max-w-4xl w-full grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="tech-card p-10 text-center flex flex-col">
                <p class="text-4xl font-black mb-8">20.000 Ft</p>
                <button onclick="buy('monthly')" class="mt-auto bg-purple-600 py-4 rounded-2xl font-black uppercase">Havi Licenc</button>
            </div>
            <div class="tech-card p-10 border-purple-500 bg-purple-500/10 text-center flex flex-col">
                <p class="text-4xl font-black mb-8">180.000 Ft</p>
                <button onclick="buy('yearly')" class="mt-auto bg-white text-black py-4 rounded-2xl font-black uppercase">√âves Licenc</button>
            </div>
        </div>
    </div>

    <% if (!user.startingCapital) { %>
    <div class="fixed inset-0 z-[100] bg-black flex items-center justify-center p-6 text-center">
        <div class="max-w-md">
            <h2 class="text-3xl font-black mb-8 uppercase italic">Szoftver Aktiv√°l√°sa</h2>
            <input type="number" id="customCap" placeholder="Kezd≈ë t≈ëke (Ft)" class="w-full bg-zinc-900 border border-zinc-800 p-4 rounded-2xl text-center mb-4 outline-none focus:border-purple-600">
            <button onclick="saveCap()" class="w-full bg-white text-black py-4 rounded-2xl font-black uppercase">Inicializ√°l√°s</button>
        </div>
    </div>
    <% } %>

    <script>
        function updateUI() {
            const now = new Date(); const h = now.getHours();
            if(h >= 8) { document.getElementById('activeTip')?.classList.remove('hidden'); document.getElementById('waiting')?.classList.add('hidden'); }
            const target = new Date(); target.setHours(8,0,0,0); if(now > target) target.setDate(target.getDate()+1);
            const diff = target - now;
            const hours = Math.floor(diff/3600000).toString().padStart(2,'0');
            const mins = Math.floor((diff%3600000)/60000).toString().padStart(2,'0');
            const secs = Math.floor((diff%60000)/1000).toString().padStart(2,'0');
            document.getElementById('countdown').innerText = `${hours}:${mins}:${secs}`;
        }
        setInterval(updateUI, 1000); updateUI();

        function openPricing() { document.getElementById('pricingModal').classList.remove('hidden'); }
        async function buy(plan) {
            const res = await fetch('/api/activate-license', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({plan}) });
            if((await res.json()).success) location.reload();
        }
        async function saveCap() {
            const capital = document.getElementById('customCap').value;
            await fetch('/api/set-capital', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({capital}) });
            location.reload();
        }
        document.getElementById('chatForm').onsubmit = async (e) => {
            e.preventDefault();
            const msg = document.getElementById('userInput').value;
            if(!msg) return; document.getElementById('userInput').value = '';
            document.getElementById('chatBox').innerHTML += `<div class="text-right text-purple-500 font-bold mb-4">${msg}</div>`;
            const res = await fetch('/api/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message:msg}) });
            const data = await res.json();
            document.getElementById('chatBox').innerHTML += `<div class="text-zinc-400 italic mb-4">${data.reply}</div>`;
            document.getElementById('chatBox').scrollTop = document.getElementById('chatBox').scrollHeight;
        };
    </script>
</body>
</html>