<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh AI | Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;900&display=swap');
        body { background-color: #050505; color: white; font-family: 'Inter', sans-serif; }
        
        /* Minimalista K√°rty√°k */
        .card { 
            background: #0a0a0a; 
            border: 1px solid #1a1a1a; 
            border-radius: 16px; 
            padding: 24px;
            transition: 0.3s;
        }
        .card:hover { border-color: #333; }

        /* St√°tuszjelz≈ëk */
        .status-dot { height: 8px; width: 8px; border-radius: 50%; display: inline-block; margin-right: 6px; }
        .active { background-color: #22c55e; box-shadow: 0 0 10px rgba(34, 197, 94, 0.5); }
        .inactive { background-color: #ef4444; box-shadow: 0 0 10px rgba(239, 68, 68, 0.5); }

        /* Gombok */
        .btn-buy { 
            background: white; color: black; 
            font-weight: 900; text-transform: uppercase; letter-spacing: 1px; font-size: 12px;
            padding: 12px 24px; border-radius: 8px; width: 100%; transition: 0.2s;
        }
        .btn-buy:hover { background: #e5e5e5; transform: scale(1.02); }

        .btn-admin {
            background: linear-gradient(90deg, #f59e0b, #d97706); color: black;
            font-weight: 900; text-transform: uppercase; letter-spacing: 2px; font-size: 10px;
            padding: 10px; border-radius: 8px; display: block; text-align: center; margin-bottom: 20px;
        }

        /* Chat bubor√©k */
        .chat-bubble { background: #111; border: 1px solid #222; padding: 15px; border-radius: 12px; font-size: 13px; color: #ccc; line-height: 1.6; margin-bottom: 10px; }
        .ai-label { color: #a855f7; font-weight: 900; font-size: 10px; text-transform: uppercase; margin-bottom: 4px; display: block; }
    </style>
</head>
<body class="p-4 md:p-8 max-w-5xl mx-auto">

    <header class="flex justify-between items-center mb-10">
        <div>
            <h1 class="text-xl font-bold tracking-tight text-white"><%= user.fullname %></h1>
            <p class="text-xs text-zinc-500 uppercase tracking-widest">Skyhigh AI Partner</p>
        </div>
        <div class="flex items-center gap-4">
            <div class="px-3 py-1 bg-zinc-900 rounded-full border border-zinc-800 text-[10px] font-bold uppercase text-zinc-400">
                <span class="status-dot <%= user.hasLicense ? 'active' : 'inactive' %>"></span>
                <%= user.hasLicense ? 'Rendszer Akt√≠v' : 'Inakt√≠v' %>
            </div>
            <a href="/logout" class="text-zinc-500 hover:text-white"><i class="fas fa-sign-out-alt"></i></a>
        </div>
    </header>

    <% if (isAdmin) { %>
        <a href="/admin" class="btn-admin">üëë Igazgat√≥i Vez√©rl≈ëpult</a>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">

        <div class="space-y-6">
            
            <% if (!user.hasLicense) { %>
                <div class="card border-red-900/30 bg-red-900/5">
                    <div class="flex items-center justify-between mb-4">
                        <h3 class="text-sm font-bold text-red-500 uppercase">Licenc Sz√ºks√©ges</h3>
                        <i class="fas fa-lock text-red-500"></i>
                    </div>
                    <p class="text-xs text-zinc-400 mb-6 leading-relaxed">
                        A profi elemz√©sek √©s a napi tippek jelenleg z√°rolva vannak. Aktiv√°ld a rendszert a profit termel√©shez.
                    </p>
                    <a href="/fizetes" class="btn-buy text-center block">Licenc Aktiv√°l√°sa</a>
                </div>
            <% } %>

            <div class="card relative overflow-hidden <%= !user.hasLicense ? 'opacity-30 blur-[2px]' : '' %>">
                <h3 class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-2">Napi Elemz√©s</h3>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-white">---</span>
                    <span class="text-xs text-green-500 font-bold">V√°rakoz√°s...</span>
                </div>
                <div class="mt-4 h-1 w-full bg-zinc-800 rounded-full"><div class="h-1 bg-zinc-600 w-0"></div></div>
            </div>

            <div class="card relative overflow-hidden <%= !user.hasLicense ? 'opacity-30 blur-[2px]' : '' %>">
                <h3 class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-2">Havi Hozam</h3>
                <div class="flex items-baseline gap-2">
                    <span class="text-3xl font-black text-white">0%</span>
                </div>
                <p class="text-[10px] text-zinc-600 mt-2">A ciklus ind√≠t√°sa ut√°n friss√ºl.</p>
            </div>

        </div>

        <div class="md:col-span-2">
            <div class="card h-[500px] flex flex-col relative">
                
                <div class="border-b border-zinc-800 pb-4 mb-4 flex justify-between items-center">
                    <div class="flex items-center gap-3">
                        <div class="w-8 h-8 rounded-full bg-purple-600 flex items-center justify-center shadow-[0_0_15px_rgba(168,85,247,0.4)]">
                            <i class="fas fa-robot text-white text-xs"></i>
                        </div>
                        <span class="text-xs font-bold uppercase tracking-widest text-zinc-300">Skyhigh Assistant</span>
                    </div>
                    <span class="text-[9px] text-green-500 font-bold uppercase animate-pulse">‚óè Online</span>
                </div>

                <div id="chatBox" class="flex-1 overflow-y-auto pr-2 space-y-3">
                    </div>

                <div class="mt-4 pt-4 border-t border-zinc-800 relative">
                    <% if (!user.hasLicense) { %>
                        <div class="absolute inset-0 bg-black/60 backdrop-blur-[1px] flex items-center justify-center z-10">
                            <span class="text-[10px] font-bold uppercase text-zinc-400"><i class="fas fa-lock mr-1"></i> Aktiv√°ld a licencet a cseveg√©shez</span>
                        </div>
                    <% } %>
                    <input type="text" placeholder="√çrj √ºzenetet..." class="w-full bg-zinc-900 border border-zinc-800 rounded-lg px-4 py-3 text-xs text-white focus:outline-none focus:border-purple-600 transition">
                </div>
            </div>
        </div>

    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const chatBox = document.getElementById('chatBox');
            const userName = "<%= user.fullname %>";
            
            // A k√©rt sz√∂vegez√©s:
            const messages = [
                { text: `√údv√∂z√∂llek, ${userName}.`, delay: 500 },
                { text: "√ân vagyok a Skyhigh AI, a Te profi sportfogad√≥ AI asszisztens robotod.", delay: 2000 },
                { text: "A rendszer k√©szenl√©tben √°ll. Elemzem a mai piacokat...", delay: 4000 },
                <% if (!user.hasLicense) { %>
                { text: "Figyelem: Az elemz√©sek megtekint√©s√©hez aktiv√°lnod kell a licencet. K√©rlek, haszn√°ld a bal oldali gombot.", delay: 6000 }
                <% } else { %>
                { text: "Minden felt√©tel adott a profithoz. K√©szen √°llsz a mai tipp fogad√°s√°ra?", delay: 6000 }
                <% } %>
            ];

            function addMessage(text) {
                const bubble = document.createElement('div');
                bubble.className = 'chat-bubble opacity-0 transition-opacity duration-500'; // Anim√°lt megjelen√©s
                bubble.innerHTML = `<span class="ai-label">Skyhigh AI</span>${text}`;
                chatBox.appendChild(bubble);
                
                // Fade in effekt
                setTimeout(() => bubble.classList.remove('opacity-0'), 100);
                chatBox.scrollTop = chatBox.scrollHeight;
            }

            // √úzenetek lej√°tsz√°sa
            messages.forEach((msg) => {
                setTimeout(() => {
                    addMessage(msg.text);
                }, msg.delay);
            });
        });
    </script>
</body>
</html>