            margin-top: 20px;
        }

        /* T√∂bbi elem st√≠lusa (Eredeti) */
        .stat-box {
            background: #222;
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            border: 1px solid #333;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand text-warning fw-bold" href="#"><i class="fas fa-fox me-2"></i>Rafin√°lt R√≥ka</a>
            <div class="d-flex">
                <% if(user.isAdmin) { %> <a href="/admin" class="btn btn-sm btn-outline-warning me-2">ADMIN</a> <% } %>
