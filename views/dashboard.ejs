<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dashboard | Rafin√°lt R√≥ka</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; padding-bottom: 40px; overflow-x: hidden; }
        
        /* --- V√âKONY LILA-R√ìZSASZ√çN KERET (BRAND STANDARD) --- */
        .thin-purple-border {
            border: 1px solid transparent; 
            background: linear-gradient(#111, #111) padding-box, 
                        linear-gradient(to right, #a855f7, #ec4899) border-box;
            box-shadow: 0 0 20px rgba(168, 85, 247, 0.2); 
        }

        /* NEON NARANCS SZ√ñVEG */
        .orange-neon { color: #FF9F43; text-shadow: 0 0 5px rgba(255, 159, 67, 0.5); font-weight: 600; }
        .orange-neon-xl { color: #FF9F43; text-shadow: 0 0 15px rgba(255, 159, 67, 0.8), 0 0 30px rgba(255, 159, 67, 0.4); }
        .purple-pink-text-gradient { background: linear-gradient(to right, #a855f7, #ff77e9); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 600; filter: drop-shadow(0 0 8px rgba(168, 85, 247, 0.3)); }

        .marquee-container { overflow: hidden; white-space: nowrap; position: relative; mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent); }
        .marquee-text { display: inline-block; padding-left: 100%; animation: marquee 20s linear infinite; }
        @keyframes marquee { 0% { transform: translateX(0); } 100% { transform: translateX(-100%); } }

        .fox-pulse { animation: pulse-fox 3s infinite ease-in-out; }
        @keyframes pulse-fox { 0%, 100% { transform: scale(1); filter: drop-shadow(0 0 5px rgba(168, 85, 247, 0.4)); } 50% { transform: scale(1.1); filter: drop-shadow(0 0 15px rgba(236, 72, 153, 0.6)); } }
        
        .fox-glow { box-shadow: 0 0 25px rgba(168, 85, 247, 0.2); }
        .toast { position: fixed; bottom: -100px; left: 50%; transform: translateX(-50%); background: #7c3aed; color: white; padding: 12px 24px; border-radius: 50px; font-size: 12px; font-weight: bold; box-shadow: 0 10px 20px rgba(124, 58, 237, 0.4); z-index: 100; transition: bottom 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275); display: flex; align-items: center; gap: 10px; width: 90%; max-width: 350px; justify-content: center; }
        .toast.show { bottom: 20px; }

        /* VISSZASZ√ÅML√ÅL√ì ST√çLUS */
        .timer-glow { text-shadow: 0 0 10px rgba(255, 159, 67, 0.6); font-family: 'Orbitron', sans-serif; }
    </style>
</head>
<body class="p-5 max-w-lg mx-auto">

    <header class="flex justify-between items-center mb-6 pt-2">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-xl flex items-center justify-center text-xl shadow-lg fox-glow">ü¶ä</div>
            <div>
                <h1 class="text-sm font-bold text-white tracking-wide">RAFIN√ÅLT R√ìKA</h1>
                <p class="text-[10px] text-zinc-400 font-medium">Priv√°t Csoport</p>
            </div>
        </div>

        <div class="flex gap-2">
            <a href="/stats" class="thin-purple-border text-purple-300 px-3 py-2 rounded-lg text-[10px] font-bold transition flex items-center gap-1 hover:text-white hover:shadow-[0_0_15px_rgba(168,85,247,0.4)]">
                <span>üìä</span> STATS
            </a>

            <% if (user.isAdmin || user.email === 'stylefaqu@gmail.com') { %>
                <a href="/admin" class="thin-purple-border text-purple-300 px-3 py-2 rounded-lg text-[10px] font-bold transition flex items-center gap-1 hover:text-white hover:shadow-[0_0_15px_rgba(168,85,247,0.4)]">
                    <span>‚ö°</span> HQ
                </a>
            <% } %>

            <a href="/logout" class="thin-purple-border text-purple-300 px-4 py-2 rounded-full text-[10px] font-bold transition flex items-center hover:text-white hover:shadow-[0_0_15px_rgba(168,85,247,0.4)]">
                EXIT
            </a>
        </div>
    </header>

    <div class="mb-8 p-[1px] rounded-xl bg-gradient-to-r from-purple-600/50 to-pink-600/50">
        <div class="bg-black/90 rounded-xl py-3 px-4 flex justify-between items-center">
            <div class="flex flex-col">
                <span id="timerLabel" class="text-[9px] text-zinc-400 font-bold uppercase tracking-widest">Kezd√©sig h√°tral√©v≈ë id≈ë</span>
                <span class="text-[8px] text-purple-400 font-medium italic" id="timerStatus">A R√≥ka figyeli az √≥r√°t...</span>
            </div>
            <div class="timer-glow text-xl font-black orange-neon" id="countdownDisplay">
                00:00:00
            </div>
        </div>
    </div>

    <div class="mb-10 relative"> 
        <p class="text-zinc-500 text-xs font-bold uppercase mb-1"><%= displayDate %></p>
        <h2 class="text-2xl font-bold text-white mb-6">Szia, <span class="text-purple-400"><%= user.fullname.split(' ')[0] %></span>! üëã</h2>

        <div class="relative mt-4">
            <div class="absolute -top-4 right-2 z-50 fox-pulse">
                <div class="w-8 h-8 bg-gradient-to-br from-purple-600 to-pink-600 rounded-lg flex items-center justify-center text-lg shadow-lg fox-glow border border-white/10">
                    ü¶ä
                </div>
            </div>

            <div class="thin-purple-border p-3 rounded-xl w-full overflow-hidden bg-[#0a0a0a] relative z-0">
                <div class="marquee-container">
                    <p id="dynamicQuote" class="text-xs orange-neon italic marquee-text">
                        "<%= foxQuotes[0] %>"
                    </p>
                </div>
            </div>
        </div>
    </div>

    <% if (dailyTip && dailyTip.isPublished) { %>
        <div class="thin-purple-border bg-[#111] p-6 mb-8 relative overflow-hidden rounded-2xl">
            <div class="absolute top-0 right-0 bg-purple-600/20 text-purple-300 text-[9px] font-bold px-3 py-1 rounded-bl-xl border-l border-b border-purple-500/30">MAI FIX</div>
            <div class="text-center mb-6 mt-2">
                <p class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-2"><%= dailyTip.league %></p>
                <h3 class="text-lg font-black text-white leading-tight mb-4"><%= dailyTip.match %></h3>
                <div class="bg-zinc-900/80 inline-block px-6 py-3 rounded-2xl border border-zinc-800 w-full">
                    <p class="text-[10px] text-zinc-500 uppercase font-bold mb-1">A R√≥ka Tippje</p>
                    <p class="text-2xl font-black orange-neon-xl tracking-wide"><%= dailyTip.prediction %></p>
                    <p class="text-xs font-bold text-white mt-2">Odds: <span class="text-purple-400"><%= dailyTip.odds %></span></p>
                </div>
            </div>
            
            <div class="bg-zinc-950 border border-zinc-800 p-5 rounded-xl relative shadow-inner mt-4">
                <span class="absolute -top-3 left-4 bg-[#111] px-2 text-xl border border-zinc-800 rounded-full">ü¶ä</span>
                <p class="text-sm purple-pink-text-gradient italic leading-relaxed mt-2 tracking-wide">
                    "<%= dailyTip.memberMessage ? dailyTip.memberMessage : 'A R√≥ka √©pp fogalmazza az √ºzenetet...' %>"
                </p>
            </div>
            
            <div class="mt-4 flex justify-between items-center border-t border-white/5 pt-4">
                <span class="text-[10px] text-zinc-500 font-bold uppercase">Aj√°nlott T√©t</span>
                <span class="text-sm font-bold text-white bg-zinc-800 px-3 py-1 rounded-lg"><%= dailyTip.recommendedStake %></span>
            </div>
        </div>
    <% } else { %>
        <div class="thin-purple-border bg-[#111] p-8 text-center mb-8 rounded-2xl">
            <div class="w-16 h-16 bg-zinc-900 rounded-full flex items-center justify-center mx-auto mb-4 text-3xl animate-pulse">‚è≥</div>
            <h3 class="text-lg font-bold text-white mb-2">A R√≥ka m√©g dolgozik...</h3>
            <p class="text-xs text-zinc-500 leading-relaxed">Az AI √©ppen a piacot elemzi. Hamarosan j√∂n a fix profit!</p>
        </div>
    <% } %>

    <div class="mt-8 text-center">
        <a href="/stats" class="text-xs font-bold text-zinc-500 hover:text-white transition uppercase border-b border-zinc-700 pb-1">Megn√©zem a teljes statisztik√°t -></a>
    </div>

    <div id="toast" class="toast"><span>üöÄ</span><span>Cs√∫cstechnol√≥gia. Fix Profit.</span></div>

    <script>
        // --- DINAMIKUS VISSZASZ√ÅML√ÅL√ì LOGIKA ---
        function startTimer() {
            const countdownDisplay = document.getElementById('countdownDisplay');
            const timerLabel = document.getElementById('timerLabel');
            const timerStatus = document.getElementById('timerStatus');
            
            // Backend v√°ltoz√≥k beolvas√°sa
            const hasTip = <%= (dailyTip && dailyTip.isPublished) ? "true" : "false" %>;
            const matchTimeStr = "<%= (dailyTip && dailyTip.matchTime) ? dailyTip.matchTime : '' %>";
            
            function update() {
                const now = new Date();
                let targetDate = new Date();

                if (hasTip && matchTimeStr) {
                    // 1. HA VAN TIPP: A meccs kezdet√©ig sz√°molunk
                    timerLabel.innerText = "Kezd√©sig h√°tral√©v≈ë id≈ë";
                    timerStatus.innerText = "Siess, a buki m√°r izzad!";
                    
                    const [hours, minutes] = matchTimeStr.split(':');
                    targetDate.setHours(parseInt(hours), parseInt(minutes), 0, 0);
                    
                    // Ha a meccs m√°r elm√∫lt ma, ne mutassunk negat√≠vot
                    if (now > targetDate) {
                        countdownDisplay.innerText = "√âL≈ê MECCS";
                        timerStatus.innerText = "A vad√°szat elkezd≈ëd√∂tt!";
                        return;
                    }
                } else {
                    // 2. HA NINCS TIPP: A k√∂vetkez≈ë napi vad√°szatig (pl. holnap 11:00)
                    timerLabel.innerText = "K√∂vetkez≈ë tipp √©rkezik";
                    timerStatus.innerText = "A R√≥ka az oddsokat szagl√°ssza...";
                    
                    targetDate.setHours(11, 0, 0, 0); // Alap√©rtelmezett napi elemz√©s ideje
                    if (now > targetDate) {
                        targetDate.setDate(targetDate.getDate() + 1);
                    }
                }

                const diff = targetDate - now;
                const h = Math.floor(diff / (1000 * 60 * 60));
                const m = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                const s = Math.floor((diff % (1000 * 60)) / 1000);

                countdownDisplay.innerText = 
                    `${h.toString().padStart(2, '0')}:${m.toString().padStart(2, '0')}:${s.toString().padStart(2, '0')}`;
            }

            setInterval(update, 1000);
            update();
        }

        window.addEventListener('load', () => {
            // Toast √©rtes√≠t√©s ind√≠t√°sa
            const toast = document.getElementById('toast');
            setTimeout(() => { toast.classList.add('show'); }, 500);
            setTimeout(() => { toast.classList.remove('show'); }, 4000);

            // Visszasz√°ml√°l√≥ ind√≠t√°sa
            startTimer();

            // Zsiv√°ny id√©zetek l√©ptet√©se
            const quotes = <%- JSON.stringify(foxQuotes) %>;
            const quoteElement = document.getElementById('dynamicQuote');
            let index = 0;

            quoteElement.addEventListener('animationiteration', () => {
                index = (index + 1) % quotes.length;
                quoteElement.innerText = '"' + quotes[index] + '"';
            });
        });
    </script>
</body>
</html>