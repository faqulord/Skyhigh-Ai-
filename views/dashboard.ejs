            <% if (user.isAdmin || user.email === 'stylefaqu@gmail.com') { %>
                <a href="/admin" class="bg-purple-900/50 hover:bg-purple-600 text-purple-200 border border-purple-500/30 px-3 py-2 rounded-lg text-[10px] font-bold transition flex items-center gap-1"><span>‚ö°</span> HQ</a>
            <% } %>
            <a href="/logout" class="bg-zinc-900 hover:bg-zinc-800 text-zinc-400 px-4 py-2 rounded-full text-[10px] font-bold transition flex items-center">EXIT</a>
        </div>
    </header>

    <div class="mb-10 relative" style="margin-top: 4rem;"> <p class="text-zinc-500 text-xs font-bold uppercase mb-1"><%= displayDate %></p>
        <h2 class="text-2xl font-bold text-white mb-6">Szia, <span class="text-purple-400"><%= user.fullname.split(' ')[0] %></span>! üëã</h2>
        
        <div class="relative">
            <div class="absolute -top-12 right-0 z-50 fox-pulse cursor-default">
                <svg width="70" height="70" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <defs>
                        <linearGradient id="foxHeadGrad" x1="0" y1="0" x2="1" y2="1">
                            <stop offset="0%" stop-color="#FF9F43"/>
                            <stop offset="100%" stop-color="#a855f7"/>
                        </linearGradient>
                    </defs>
                    <path d="M12 2L3 7L6 22H18L21 7L12 2Z" fill="url(#foxHeadGrad)" stroke="#111" stroke-width="0.5"/>
                    <path d="M12 13C13.6569 13 15 11.6569 15 10C15 8.34315 13.6569 7 12 7C10.3431 7 9 8.34315 9 10C9 11.6569 10.3431 13 12 13Z" fill="#111"/>
                    <path d="M17 8L20 3L22 8H17Z" fill="#FF9F43" fill-opacity="0.9"/>
                    <path d="M7 8L4 3L2 8H7Z" fill="#FF9F43" fill-opacity="0.9"/>
                </svg>
            </div>

            <div class="thin-purple-border p-3 rounded-xl w-full overflow-hidden bg-[#0a0a0a] relative z-0">
                <div class="marquee-container">
                    <p id="dynamicQuote" class="text-xs orange-neon italic marquee-text">
                        "<%= foxQuotes[0] %>"
                    </p>
                </div>
            </div>
        </div>
    </div>

    <% if (dailyTip && dailyTip.isPublished) { %>
        <div class="startup-card p-6 mb-8 relative overflow-hidden border-t-2 border-t-purple-500">
            <div class="absolute top-0 right-0 bg-purple-600/20 text-purple-300 text-[9px] font-bold px-3 py-1 rounded-bl-xl border-l border-b border-purple-500/30">MAI FIX</div>
            <div class="text-center mb-6 mt-2">
                <p class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-2"><%= dailyTip.league %></p>
                <h3 class="text-lg font-black text-white leading-tight mb-4"><%= dailyTip.match %></h3>
                <div class="bg-zinc-900/80 inline-block px-6 py-3 rounded-2xl border border-zinc-800 w-full">
                    <p class="text-[10px] text-zinc-500 uppercase font-bold mb-1">A R√≥ka Tippje</p>
                    
                    <p class="text-2xl font-black orange-neon-xl tracking-wide"><%= dailyTip.prediction %></p>
                    
                    <p class="text-xs font-bold text-white mt-2">Odds: <span class="text-purple-400"><%= dailyTip.odds %></span></p>
                </div>
            </div>
            
            <div class="bg-zinc-950 border border-zinc-800 p-5 rounded-xl relative shadow-inner mt-4">
