<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Dashboard | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; padding-bottom: 40px; overflow-x: hidden; }
        .thin-purple-border { border: 1px solid transparent; background: linear-gradient(#111, #111) padding-box, linear-gradient(to right, #a855f7, #ec4899) border-box; box-shadow: 0 0 20px rgba(168, 85, 247, 0.2); }
        .orange-neon { color: #FF9F43; text-shadow: 0 0 5px rgba(255, 159, 67, 0.5); font-weight: 600; }
        .orange-neon-xl { color: #FF9F43; text-shadow: 0 0 15px rgba(255, 159, 67, 0.8), 0 0 30px rgba(255, 159, 67, 0.4); }
        .purple-pink-text-gradient { background: linear-gradient(to right, #a855f7, #ff77e9); -webkit-background-clip: text; -webkit-text-fill-color: transparent; font-weight: 600; }
        .marquee-container { overflow: hidden; white-space: nowrap; position: relative; mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent); margin-bottom: 15px; }
        .marquee-text { display: inline-block; padding-left: 100%; animation: marquee 300s linear infinite; }
        @keyframes marquee { 0% { transform: translateX(0); } 100% { transform: translateX(-100%); } }
        .fox-pulse { animation: pulse-fox 3s infinite ease-in-out; }
        @keyframes pulse-fox { 0%, 100% { transform: scale(1); filter: drop-shadow(0 0 5px rgba(168, 85, 247, 0.4)); } 50% { transform: scale(1.1); filter: drop-shadow(0 0 15px rgba(236, 72, 153, 0.6)); } }
        .timer-glow { text-shadow: 0 0 10px rgba(255, 159, 67, 0.6); font-family: 'Orbitron', sans-serif; }
    </style>
</head>
<body class="p-5 max-w-lg mx-auto">

    <header class="flex justify-between items-center mb-6 pt-2">
        <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-purple-600 to-pink-600 rounded-xl flex items-center justify-center text-xl shadow-lg fox-pulse">ü¶ä</div>
            <div>
                <h1 class="text-sm font-bold text-white tracking-wide uppercase"><%= brandName %></h1>
                <p class="text-[10px] text-zinc-400 font-medium">Priv√°t AI Club</p>
            </div>
        </div>
        <div class="flex gap-2">
            <% if (user.isAdmin || user.email === ownerEmail) { %>
                <a href="/admin" class="thin-purple-border text-purple-300 px-3 py-2 rounded-lg text-[10px] font-bold">HQ</a>
            <% } %>
            <a href="/logout" class="thin-purple-border text-purple-300 px-4 py-2 rounded-full text-[10px] font-bold">EXIT</a>
        </div>
    </header>

    <div class="marquee-container">
        <div class="marquee-text text-[10px] font-black uppercase tracking-widest text-purple-400">
            <% foxQuotes.forEach(quote => { %> <span class="mx-10">‚ö° <%= quote %></span> <% }) %>
        </div>
    </div>

    <div class="mb-6 p-[1px] rounded-xl bg-gradient-to-r from-purple-600/50 to-pink-600/50">
        <div class="bg-black/90 rounded-xl py-3 px-4 flex justify-between items-center">
            <div class="flex flex-col">
                <span id="timerLabel" class="text-[9px] text-zinc-400 font-bold uppercase tracking-widest">Kezd√©sig</span>
                <span class="text-[8px] text-purple-400 font-medium italic" id="timerStatus">A R√≥ka az √≥r√°t figyeli...</span>
            </div>
            <div class="timer-glow text-xl font-black orange-neon" id="countdownDisplay">00:00:00</div>
        </div>
    </div>

    <div class="thin-purple-border bg-[#0a0a0a] p-5 rounded-2xl mb-8 shadow-2xl">
        <div class="flex justify-between items-center mb-4">
            <div>
                <h4 class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-1">A Te Vagyonod</h4>
                <p class="text-2xl font-black orange-neon"><%= userBank.toLocaleString() %> Ft</p>
            </div>
            <div class="text-right">
                <h4 class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest mb-1">Havi Profit</h4>
                <p class="text-sm font-black <%= monthlyProfit >= 0 ? 'text-green-500' : 'text-red-500' %>">
                    <%= monthlyProfit > 0 ? '+' : '' %><%= monthlyProfit.toLocaleString() %> Ft
                </p>
            </div>
        </div>
        <div class="bg-zinc-900/50 p-3 rounded-xl flex justify-between items-center border border-white/5">
            <span class="text-[9px] text-zinc-400 font-bold uppercase">Aj√°nlott mai t√©t:</span>
            <span class="text-xs font-bold text-white"><%= suggestedStake.toLocaleString() %> Ft</span>
        </div>
    </div>

    <% if (dailyTip && dailyTip.isPublished) { %>
        <div class="thin-purple-border bg-[#111] p-6 mb-8 relative overflow-hidden rounded-2xl">
            <div class="absolute top-0 right-0 bg-purple-600/20 text-purple-300 text-[9px] font-bold px-3 py-1 rounded-bl-xl border-l border-b border-purple-500/30 uppercase tracking-widest">Live</div>
            <div class="text-center mb-6">
                <p class="text-[10px] text-zinc-500 font-bold uppercase mb-2"><%= dailyTip.league %></p>
                <h3 class="text-lg font-black text-white leading-tight mb-4"><%= dailyTip.match %></h3>
                <div class="bg-zinc-900/80 px-6 py-4 rounded-2xl border border-zinc-800 w-full shadow-inner">
                    <p class="text-2xl font-black orange-neon-xl tracking-widest uppercase"><%= dailyTip.prediction %></p>
                    <p class="text-xs font-bold text-white mt-2 uppercase tracking-widest">Odds: <span class="text-purple-400"><%= dailyTip.odds %></span></p>
                </div>
            </div>
            <div class="bg-zinc-950 border border-zinc-800 p-4 rounded-xl italic">
                <p class="text-xs purple-pink-text-gradient leading-relaxed">"<%= dailyTip.memberMessage %>"</p>
            </div>
        </div>
    <% } else { %>
        <div class="thin-purple-border bg-[#111] p-10 text-center mb-8 rounded-2xl opacity-60">
            <div class="text-4xl mb-4">ü¶ä</div>
            <% if(!user.hasLicense) { %>
                <h3 class="text-sm font-bold text-red-400 uppercase tracking-widest">Nincs akt√≠v licenszed!</h3>
                <p class="text-[10px] text-zinc-500 mt-2">K√©rd az aktiv√°l√°st az admint√≥l.</p>
            <% } else { %>
                <h3 class="text-sm font-bold text-zinc-400 uppercase tracking-widest">A R√≥ka elemz√©st tart...</h3>
            <% } %>
        </div>
    <% } %>

    <script>
        function startTimer() {
            const countdownDisplay = document.getElementById('countdownDisplay');
            // Biztons√°gos adat√°tad√°s a szerverr≈ël
            const hasTip = <%= (dailyTip && dailyTip.isPublished) ? "true" : "false" %>;
            const tipDateStr = "<%= (dailyTip && dailyTip.date) ? dailyTip.date : '' %>"; // Pl: 2026-01-16
            let tipTimeStr = "<%= (dailyTip && dailyTip.matchTime) ? dailyTip.matchTime : '' %>"; // Pl: 20:30
            
            // Biztons√°gi csere: pont (.) helyett kett≈ëspont (:)
            tipTimeStr = tipTimeStr.replace('.', ':');

            // Debuggol√°s a konzolra (F12)
            console.log("R√≥ka Timer - D√°tum:", tipDateStr, "| Id≈ë:", tipTimeStr);

            function update() {
                const now = new Date();
                let targetDate = new Date();

                if (hasTip && tipTimeStr.includes(':') && tipDateStr) {
                    try {
                        // K√âZI D√ÅTUM √ñSSZERAK√ÅS (B√∂ng√©sz≈ëf√ºggetlen megold√°s)
                        
                        // 1. D√°tum sz√©tszed√©se (pl. 2026-01-16)
                        const dateParts = tipDateStr.split('-');
                        const year = parseInt(dateParts[0]);
                        const month = parseInt(dateParts[1]) - 1; // JS-ben a Janu√°r = 0!
                        const day = parseInt(dateParts[2]);

                        // 2. Id≈ë sz√©tszed√©se (pl. 20:30)
                        const timeParts = tipTimeStr.split(':');
                        const hour = parseInt(timeParts[0]);
                        const min = parseInt(timeParts[1]);

                        // 3. √öj d√°tum objektum l√©trehoz√°sa
                        targetDate = new Date(year, month, day, hour, min, 0);
                        
                    } catch (err) {
                        console.error("Timer Hiba:", err);
                        // Ha hiba van, √°lljon be holnap 11:00-ra
                        targetDate = new Date();
                        targetDate.setHours(11, 0, 0, 0);
                        targetDate.setDate(targetDate.getDate() + 1);
                    }
                } else {
                    // Ha nincs tipp, sz√°moljunk holnap 11:00-ig
                    targetDate.setHours(11, 0, 0, 0);
                    if (now > targetDate) targetDate.setDate(targetDate.getDate() + 1);
                }

                const diff = targetDate - now;

                // Ha lej√°rt az id≈ë (vagy m√°r megy a meccs)
                if (diff <= 0) {
                    countdownDisplay.innerText = "√âL≈ê";
                    countdownDisplay.classList.add("text-red-500");
                    document.getElementById('timerStatus').innerText = "A vad√°szat zajlik...";
                    return;
                }

                // H√°tral√©v≈ë id≈ë kisz√°mol√°sa
                const hrs = Math.floor(diff / 3600000);
                const min = Math.floor((diff % 3600000) / 60000);
                const sec = Math.floor((diff % 60000) / 1000);

                // Kijelz√©s (mindig k√©t sz√°mjegy)
                countdownDisplay.innerText = `${hrs.toString().padStart(2, '0')}:${min.toString().padStart(2, '0')}:${sec.toString().padStart(2, '0')}`;
            }

            setInterval(update, 1000);
            update();
        }
        window.addEventListener('load', startTimer);
    </script>
</body>
</html>