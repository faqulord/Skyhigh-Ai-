<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #000000; color: #fff; font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .tech-card { background: #0a0a0a; border: 1px solid #222; border-radius: 20px; margin-bottom: 20px; box-shadow: 0 4px 20px rgba(0,0,0,0.5); }
        .hidden { display: none !important; }
        #sidebar { position: fixed; top: 0; left: 0; width: 260px; height: 100vh; background: #09090b; border-right: 1px solid #222; z-index: 50; padding-top: 80px; transform: translateX(-100%); transition: transform 0.3s ease; }
        #sidebar.open { transform: translateX(0); }
        @media (min-width: 1024px) { #sidebar { transform: translateX(0); } }
        #overlay { display: none; position: fixed; inset: 0; background: rgba(0,0,0,0.8); z-index: 40; backdrop-filter: blur(5px); }
        #overlay.show { display: block; }
        .menu-item { display: flex; align-items: center; gap: 15px; width: 100%; padding: 18px 25px; color: #666; font-size: 11px; font-weight: 800; text-transform: uppercase; border-left: 3px solid transparent; transition: all 0.2s; cursor: pointer; }
        .menu-item:hover, .menu-item.active { color: #fff; background: #111; border-left-color: #c084fc; }
        .chat-container { height: 400px; overflow-y: auto; display: flex; flex-direction: column; gap: 10px; padding: 10px; background: #050505; border: 1px solid #222; border-radius: 12px; }
        .msg { padding: 10px 15px; border-radius: 12px; font-size: 12px; max-width: 80%; }
        .msg-me { align-self: flex-end; background: #2563eb; color: white; }
        .msg-ai { align-self: flex-start; background: #222; border: 1px solid #333; color: #ccc; }
        .orange-neon { color: #FF9F43; text-shadow: 0 0 10px rgba(255, 159, 67, 0.4); }
        .custom-scrollbar::-webkit-scrollbar { width: 5px; }
        .custom-scrollbar::-webkit-scrollbar-track { background: #050505; }
        .custom-scrollbar::-webkit-scrollbar-thumb { background: #222; border-radius: 10px; }
    </style>
    <script>
        function toggleSidebar() { document.getElementById('sidebar').classList.toggle('open'); document.getElementById('overlay').classList.toggle('show'); }
        function switchTab(id) { 
            document.querySelectorAll('.page-section').forEach(e => e.classList.add('hidden')); 
            document.querySelectorAll('.menu-item').forEach(b => b.classList.remove('active')); 
            document.getElementById('tab-' + id).classList.remove('hidden'); 
            document.getElementById('btn-' + id).classList.add('active'); 
            if(window.innerWidth < 1024) { toggleSidebar(); } window.scrollTo(0,0); 
        }
    </script>
</head>
<body class="min-h-screen">
    <div id="overlay" onclick="toggleSidebar()"></div>
    
    <nav id="sidebar">
        <div class="px-6 mb-6">
            <h2 class="text-white font-black text-xl tracking-widest uppercase">HQ <span class="text-purple-500">CONTROL</span></h2>
            <p class="text-[10px] text-zinc-500 font-bold uppercase tracking-widest">Zsiv√°ny R√≥ka v72 Final</p>
        </div>
        <div onclick="switchTab('dashboard')" id="btn-dashboard" class="menu-item active"><span>üìä</span> VEZ√âRL≈êPULT</div>
        <div onclick="switchTab('users')" id="btn-users" class="menu-item"><span>üë•</span> TAGOK</div>
        <div onclick="switchTab('marketing')" id="btn-marketing" class="menu-item"><span>üì¢</span> MARKETING</div>
        <div onclick="switchTab('chat')" id="btn-chat" class="menu-item"><span>ü§ñ</span> R√ìKA AGYA</div>
        <div onclick="switchTab('finance')" id="btn-finance" class="menu-item"><span>üí∞</span> P√âNZ√úGY</div>
        <div class="absolute bottom-10 left-0 w-full px-6">
            <a href="/logout" class="block w-full text-center border border-red-900/50 text-red-500 py-3 rounded-xl text-[10px] font-black uppercase hover:bg-red-900/20 transition">Kijelentkez√©s</a>
        </div>
    </nav>

    <header class="fixed top-0 left-0 w-full bg-black/90 border-b border-zinc-800 p-4 z-40 flex justify-between items-center h-[70px] backdrop-blur-md lg:hidden">
        <button onclick="toggleSidebar()" class="text-white bg-zinc-900 px-3 py-2 rounded-lg border border-zinc-700 font-bold text-xs">‚ò∞ MEN√ú</button>
        <span class="font-black text-white tracking-widest uppercase tracking-tighter">ZSIV√ÅNY HQ</span>
        <a href="/dashboard" class="text-[10px] font-bold text-purple-500 border border-purple-500 px-3 py-1 rounded-full uppercase">DASHBOARD ‚û§</a>
    </header>

    <main class="pt-[90px] lg:pt-[40px] px-4 pb-10 w-full lg:pl-[280px] max-w-6xl mx-auto">
        
        <div id="tab-dashboard" class="page-section">
            <h2 class="text-xl font-black mb-6 text-white border-l-4 border-purple-500 pl-4">Aktu√°lis √©s F√ºgg≈ë meccsek</h2>
            
            <div class="tech-card p-6 border-t-2 border-t-orange-500">
                <div class="flex justify-between items-center mb-5 text-[11px] font-bold text-zinc-500 uppercase tracking-widest">
                    <span>Aktu√°lis Strat√©gia:</span>
                    <span class="orange-neon text-sm uppercase"><%= strategyMode %></span>
                </div>
                <form action="/admin/update-settings" method="POST" class="grid grid-cols-3 gap-3">
                    <button name="mode" value="recovery" class="py-4 rounded-xl text-[10px] font-black border transition hover:scale-105 <%= strategyMode === 'recovery' ? 'bg-blue-600 border-blue-400 text-white' : 'bg-zinc-900 border-zinc-800 text-zinc-500' %>">üõ°Ô∏è √ìVATOS</button>
                    <button name="mode" value="normal" class="py-4 rounded-xl text-[10px] font-black border transition hover:scale-105 <%= strategyMode === 'normal' ? 'bg-purple-600 border-purple-400 text-white' : 'bg-zinc-900 border-zinc-800 text-zinc-500' %>">ü¶ä NORM√ÅL</button>
                    <button name="mode" value="aggressive" class="py-4 rounded-xl text-[10px] font-black border transition hover:scale-105 <%= strategyMode === 'aggressive' ? 'bg-orange-600 border-orange-400 text-white' : 'bg-zinc-900 border-zinc-800 text-zinc-500' %>">üî• ZSIV√ÅNY</button>
                </form>
            </div>

            <% if (pendingTips && pendingTips.length > 0) { %>
                <% pendingTips.forEach(tip => { %>
                    <div class="tech-card p-6 border-b-2 border-zinc-800 mb-4 bg-zinc-900/10">
                        <div class="flex justify-between items-center mb-2">
                            <span class="text-[10px] text-zinc-500 font-bold uppercase"><%= tip.date %> | <%= tip.league %></span>
                            <% if(tip.isPublished) { %> <span class="text-[9px] bg-blue-900 text-blue-300 px-2 py-1 rounded font-black">PUBLIK√ÅLVA</span> <% } %>
                        </div>
                        <h3 class="text-xl font-black text-white mb-1"><%= tip.match %></h3>
                        <p class="text-purple-400 font-bold mb-4"><%= tip.prediction %> (@<%= tip.odds %>)</p>

                        <div class="grid grid-cols-2 gap-4">
                            <form action="/admin/settle-tip" method="POST" onsubmit="return confirm('Biztos WIN?')">
                                <input type="hidden" name="tipId" value="<%= tip._id %>">
                                <input type="hidden" name="status" value="win">
                                <button class="w-full bg-green-900/40 hover:bg-green-600 border border-green-500 text-green-500 hover:text-white py-4 rounded-xl text-xs font-black uppercase transition">WIN ‚úÖ</button>
                            </form>
                            <form action="/admin/settle-tip" method="POST" onsubmit="return confirm('Biztos LOSS?')">
                                <input type="hidden" name="tipId" value="<%= tip._id %>">
                                <input type="hidden" name="status" value="loss">
                                <button class="w-full bg-red-900/40 hover:bg-red-600 border border-red-500 text-red-500 hover:text-white py-4 rounded-xl text-xs font-black uppercase transition">LOSS ‚ùå</button>
                            </form>
                        </div>

                        <% if(!tip.isPublished) { %>
                            <div class="flex gap-2 mt-4">
                                <form action="/admin/publish-tip" method="POST" class="flex-1">
                                    <input type="hidden" name="tipId" value="<%= tip._id %>">
                                    <button class="w-full bg-blue-600 text-white py-3 rounded-xl font-black text-xs uppercase shadow-lg">üì¢ PUBLIK√ÅL√ÅS TAGOKNAK</button>
                                </form>
                                <form action="/admin/run-robot" method="POST">
                                    <button class="bg-zinc-800 hover:bg-zinc-700 text-zinc-400 px-4 py-3 rounded-xl border border-zinc-700 font-black" title="Regener√°l√°s">üîÑ</button>
                                </form>
                            </div>
                        <% } %>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="text-center py-10 tech-card">
                    <div class="text-4xl mb-4">ü§ñ</div>
                    <h3 class="text-zinc-500 font-bold uppercase text-xs mb-4 tracking-widest">Nincs f√ºgg≈ëben l√©v≈ë meccs.</h3>
                    <form action="/admin/run-robot" method="POST">
                        <button class="bg-white hover:bg-zinc-200 text-black px-10 py-4 rounded-2xl font-black uppercase text-xs shadow-lg transition transform hover:scale-105">üöÄ ELEMZ√âS IND√çT√ÅSA</button>
                    </form>
                </div>
            <% } %>
        </div>

        <div id="tab-users" class="page-section hidden">
            <h2 class="text-xl font-black mb-6 text-white border-l-4 border-green-500 pl-4">El≈ëfizet≈ëk Kezel√©se</h2>
            <div class="grid gap-3">
                <% users.forEach(u => { 
                    let expiry = u.licenseExpiresAt ? new Date(u.licenseExpiresAt).toLocaleDateString('hu-HU') : 'NINCS';
                    let isExpired = u.licenseExpiresAt && new Date() > new Date(u.licenseExpiresAt);
                    let bank = (u.currentBankroll && u.currentBankroll > 0) ? u.currentBankroll : u.startingCapital;
                %> 
                    <div class="tech-card p-5 flex flex-col sm:flex-row justify-between items-center gap-4">
                        <div class="w-full">
                            <p class="text-sm font-bold text-white"><%= u.fullname %> <span class="text-[10px] text-zinc-500"><%= u.email %></span></p>
                            <div class="flex gap-4 mt-2">
                                <p class="text-[10px] text-zinc-400">VAGYON: <span class="text-white font-bold"><%= bank.toLocaleString() %> Ft</span></p>
                                <p class="text-[10px] text-zinc-400">LEJ√ÅRAT: <span class="<%= isExpired ? 'text-red-500' : 'text-green-500' %> font-bold"><%= expiry %></span></p>
                            </div>
                        </div>
                        <div class="flex gap-2 w-full sm:w-auto">
                            <form action="/admin/manage-sub" method="POST" class="flex-1">
                                <input type="hidden" name="userId" value="<%= u._id %>">
                                <input type="hidden" name="action" value="add30">
                                <button class="w-full px-4 py-2 rounded-lg text-[9px] font-black uppercase bg-green-900/30 text-green-400 border border-green-600 hover:bg-green-900">+30 NAP</button>
                            </form>
                            <form action="/admin/manage-sub" method="POST" class="flex-1">
                                <input type="hidden" name="userId" value="<%= u._id %>">
                                <input type="hidden" name="action" value="revoke">
                                <button class="w-full px-4 py-2 rounded-lg text-[9px] font-black uppercase bg-red-900/30 text-red-400 border border-red-600 hover:bg-red-900">TILT√ÅS</button>
                            </form>
                        </div>
                    </div> 
                <% }) %>
            </div>
        </div>

        <div id="tab-marketing" class="page-section hidden">
            <h2 class="text-xl font-black mb-6 text-white border-l-4 border-pink-500 pl-4">Marketing & Social</h2>
            <div class="tech-card p-6 mb-4">
                <h3 class="text-xs font-bold mb-4 uppercase text-zinc-500 tracking-widest">Instagram & TikTok Script</h3>
                <div class="flex gap-3 mb-4">
                    <button onclick="generateSocial('win')" class="flex-1 bg-zinc-800 py-3 rounded-xl text-[10px] font-black uppercase hover:bg-green-900 transition">üèÜ NYER≈ê POSZT</button>
                    <button onclick="generateSocial('motivation')" class="flex-1 bg-zinc-800 py-3 rounded-xl text-[10px] font-black uppercase hover:bg-pink-900 transition">üî• MOTIV√ÅCI√ì</button>
                </div>
                <textarea id="social-result" rows="4" class="w-full bg-black border border-zinc-800 rounded-xl p-4 text-xs font-mono text-zinc-300" placeholder="AI √°ltal gener√°lt sz√∂veg..."></textarea>
            </div>
            <div class="tech-card p-6">
                <h3 class="text-xs font-bold mb-4 uppercase text-zinc-500 tracking-widest">H√≠rlev√©l (E-mail)</h3>
                <div class="flex gap-2 mb-4">
                    <input type="text" id="email-topic" class="flex-1 bg-black border border-zinc-800 rounded-xl p-3 text-xs text-white" placeholder="Mir≈ël sz√≥ljon? (Pl. AI j√∂v≈ëje)">
                    <button onclick="draftEmail()" class="bg-blue-600 text-white px-6 py-3 rounded-xl text-[10px] font-black uppercase hover:bg-blue-500">√çR√ÅS ‚úçÔ∏è</button>
                </div>
                <textarea id="email-result" rows="5" class="w-full bg-black border border-zinc-800 rounded-xl p-4 text-xs font-mono text-zinc-300" placeholder="A R√≥ka AI v√°zlata..."></textarea>
            </div>
        </div>

        <div id="tab-chat" class="page-section hidden">
            <h2 class="text-xl font-black mb-6 text-white border-l-4 border-blue-500 pl-4">R√≥ka Agya (Admin Chat)</h2>
            <div class="tech-card p-4 h-[500px] flex flex-col">
                <div id="chat-win" class="chat-container flex-1 mb-4 custom-scrollbar p-4">
                    <% chatHistory.forEach(msg => { %> 
                        <div class="msg <%= msg.sender === 'F≈ën√∂k' ? 'msg-me' : 'msg-ai' %>">
                            <strong class="block mb-1 text-[10px] opacity-50 uppercase"><%= msg.sender %></strong> <%= msg.text %>
                        </div> 
                    <% }) %>
                </div>
                <div class="flex gap-2">
                    <input type="text" id="chat-in" class="flex-1 bg-black border border-zinc-700 rounded-xl px-4 py-3 text-xs text-white outline-none focus:border-purple-500" placeholder="Utas√≠t√°s a R√≥k√°nak..." onkeypress="if(event.key === 'Enter') talk()">
                    <button onclick="talk()" class="bg-purple-600 hover:bg-purple-500 text-white px-6 py-3 rounded-xl font-bold">‚û§</button>
                </div>
            </div>
        </div>

        <div id="tab-finance" class="page-section hidden">
            <h2 class="text-xl font-black mb-6 text-white border-l-4 border-yellow-500 pl-4">P√©nz√ºgyi Admin</h2>
            <div class="tech-card p-6 border border-red-900/40 bg-red-950/10">
                <h3 class="text-sm font-black text-red-500 uppercase mb-2">Havi Statisztik√°k Null√°z√°sa</h3>
                <p class="text-[10px] text-zinc-500 mb-4 uppercase">Ez a funkci√≥ csak a havi profit mutat√≥kat t√∂rli. A t≈ëke megmarad.</p>
                <form action="/admin/reset-monthly" method="POST" onsubmit="return confirm('Biztos null√°zol?')">
                    <button class="w-full bg-red-600 hover:bg-red-500 text-white py-4 rounded-xl font-black text-xs uppercase">üîÑ √öJ H√ìNAP IND√çT√ÅSA</button>
                </form>
            </div>
        </div>

    </main>

    <script>
        const win = document.getElementById('chat-win'); if(win) win.scrollTop = win.scrollHeight;

        async function talk() {
            const i = document.getElementById('chat-in'); if(!i.value) return;
            const msgText = i.value; i.value = '';
            const win = document.getElementById('chat-win');
            win.innerHTML += `<div class="msg msg-me"><strong>F≈ën√∂k:</strong> ${msgText}</div>`;
            win.scrollTop = win.scrollHeight;
            try {
                const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})});
                const d = await r.json();
                win.innerHTML += `<div class="msg msg-ai"><strong>R√≥ka:</strong> ${d.reply}</div>`;
                win.scrollTop = win.scrollHeight;
            } catch (err) { alert("Szerver hiba."); }
        }

        async function generateSocial(type) {
            const area = document.getElementById('social-result'); area.value = "Gener√°l√°s folyamatban... ü¶ä";
            const r = await fetch('/admin/social-content', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ type }) });
            const d = await r.json(); area.value = d.content;
        }

        async function draftEmail() {
            const topic = document.getElementById('email-topic').value;
            const area = document.getElementById('email-result'); area.value = "√çr√°s... ü¶ä";
            const r = await fetch('/admin/draft-email', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ topic }) });
            const d = await r.json(); area.value = d.draft;
        }
    </script>
</body>
</html>