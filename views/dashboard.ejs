<body class="bg-black text-white p-6">
    <h1 class="text-purple-500 font-bold italic">SKYHIGH NEURAL</h1>
    
    <div class="bg-zinc-900 p-6 rounded-3xl mt-6 border border-purple-500/30">
        <p class="text-[10px] uppercase text-zinc-500 tracking-widest">Mai Master Tipp (08:00)</p>
        <% if (dailyTip) { %>
            <h2 class="text-3xl font-black italic uppercase"><%= dailyTip.match %></h2>
            <p class="text-green-500 font-bold">Tipp: <%= dailyTip.prediction %> | Odds: <%= dailyTip.odds %></p>
            <p class="text-xs text-zinc-400 mt-2"><%= dailyTip.reasoning %></p>
        <% } else { %>
            <p class="italic text-zinc-600">Az AI hamarosan elemzi a kínálatot...</p>
        <% } %>
    </div>

    <div class="fixed bottom-6 right-6 w-80 bg-zinc-900 rounded-2xl border border-white/10 overflow-hidden shadow-2xl">
        <div class="bg-purple-600 p-3 text-xs font-bold uppercase">Skyhigh AI Assistant</div>
        <div id="chat-box" class="h-64 p-4 overflow-y-auto text-xs space-y-2"></div>
        <div class="p-2 flex border-t border-white/5">
            <input id="chat-input" class="bg-transparent flex-1 text-xs outline-none" placeholder="Kérdezz valamit...">
            <button onclick="sendChat()" class="text-purple-500 font-bold">Küldés</button>
        </div>
    </div>

    <script>
        async function sendChat() {
            const input = document.getElementById('chat-input');
            const box = document.getElementById('chat-box');
            if(!input.value) return;
            box.innerHTML += `<div class="text-zinc-500">Te: ${input.value}</div>`;
            const res = await fetch('/api/chat', {
                method: 'POST',
                headers: {'Content-Type': 'application/json'},
                body: JSON.stringify({message: input.value})
            });
            const data = await res.json();
            box.innerHTML += `<div class="text-purple-400">AI: ${data.reply}</div>`;
            input.value = '';
            box.scrollTop = box.scrollHeight;
        }
    </script>
</body>