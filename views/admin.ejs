<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skyhigh Admin | Központi Vezérlés</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@900&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; }
        .orbitron { font-family: 'Orbitron', sans-serif; }
        .glass-panel { background: rgba(15, 15, 15, 0.9); border: 1px solid rgba(249, 115, 22, 0.2); }
        .step-active { color: #f97316; font-weight: 900; }
    </style>
</head>
<body class="p-4 md:p-8">
    <div class="max-w-md mx-auto">
        
        <header class="flex justify-between items-center mb-10 pt-4">
            <div>
                <h1 class="orbitron text-xl text-orange-500 italic uppercase">Admin HQ</h1>
                <p class="text-[9px] text-zinc-500 font-mono uppercase tracking-widest">Szerveridő: <%= dbDate %></p>
            </div>
            <a href="/dashboard" class="bg-zinc-800 hover:bg-zinc-700 px-4 py-2 rounded-full text-[10px] font-bold uppercase transition">Vissza</a>
        </header>

        <div class="glass-panel p-6 rounded-3xl mb-8 shadow-2xl">
            <p class="text-[10px] uppercase text-zinc-500 font-black mb-1 tracking-widest">Becsült Havi Bevétel</p>
            <h2 class="text-3xl font-black text-green-500 italic"><%= totalRevenue.toLocaleString() %> Ft</h2>
            <p class="text-[9px] text-zinc-600 mt-2 font-bold uppercase tracking-widest"><%= licensedCount %> aktív licencelt tag</p>
        </div>

        <div class="glass-panel p-6 rounded-3xl mb-8 text-center border-orange-500/40">
            <h3 class="text-[10px] font-black uppercase mb-6 text-zinc-400 tracking-widest">Neural Robot Munkamenet</h3>
            
            <form id="robot-form" action="/admin/run-robot" method="POST" onsubmit="startRobotProcess()">
                <button type="submit" id="run-btn" class="w-full bg-orange-600 hover:bg-orange-700 py-4 rounded-2xl font-black uppercase text-xs shadow-lg shadow-orange-600/30 transition active:scale-95">
                    Elemzés Indítása (Reggel 8:00 Szimuláció)
                </button>
            </form>

            <div id="loading-area" class="hidden py-4">
                <div class="animate-spin h-10 w-10 border-4 border-orange-500 border-t-transparent rounded-full mx-auto mb-6"></div>
                <h4 class="text-orange-500 font-black uppercase text-[10px] mb-4 tracking-widest">Az Öreg Róka Számol...</h4>
                <div class="text-[9px] text-zinc-500 text-left space-y-2 font-mono">
                    <p id="s1" class="opacity-30">● 10 éves H2H adatbázis lekérése...</p>
                    <p id="s2" class="opacity-30">● Poisson-eloszlás és piaci odds-szűrés...</p>
                    <p id="s3" class="opacity-30">● +3 órás kezdési idő ellenőrzése...</p>
                    <p id="s4" class="opacity-30">● Banker tipp és érvelés generálása...</p>
                </div>
            </div>

            <% if (status === 'success') { %>
                <p class="text-green-500 text-[10px] mt-4 font-black uppercase animate-bounce">✅ A mai tipp sikeresen kiment!</p>
            <% } %>
            <% if (status === 'error') { %>
                <p class="text-red-500 text-[10px] mt-4 font-black uppercase">❌ Hiba történt az elemzés során!</p>
            <% } %>
        </div>

        <% if (currentTip && currentTip.status === 'pending') { %>
            <div class="bg-zinc-900 p-6 rounded-3xl border border-white/10 mb-8">
                <h3 class="text-[10px] font-black uppercase text-center text-zinc-400 mb-4 tracking-widest">Mai Tipp Lezárása</h3>
                <div class="bg-black/40 p-3 rounded-xl mb-4 border border-white/5">
                    <p class="text-[10px] font-bold text-white uppercase"><%= currentTip.match %></p>
                    <p class="text-[9px] text-orange-500 uppercase font-black tracking-widest">Tipp: <%= currentTip.prediction %></p>
                </div>
                <div class="flex gap-2">
                    <form action="/admin/settle-tip" method="POST" class="flex-1">
                        <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                        <input type="hidden" name="status" value="win">
                        <button class="w-full bg-green-600 hover:bg-green-700 py-3 rounded-xl text-[10px] font-black uppercase transition">NYERT ✅</button>
                    </form>
                    <form action="/admin/settle-tip" method="POST" class="flex-1">
                        <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                        <input type="hidden" name="status" value="loss">
                        <button class="w-full bg-red-600 hover:bg-red-700 py-3 rounded-xl text-[10px] font-black uppercase transition">VESZTETT ❌</button>
                    </form>
                </div>
            </div>
        <% } %>

        <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5 mb-8">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-6 tracking-widest text-center">Havi Profit Táblázat</h3>
            <div class="overflow-x-auto">
                <table class="w-full text-[10px] text-left">
                    <thead class="text-zinc-600 uppercase">
                        <tr class="border-b border-white/5">
                            <th class="pb-2">Hónap</th>
                            <th class="pb-2 text-center">Tippek</th>
                            <th class="pb-2 text-right text-green-500">Hozam</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-white/5">
                        <% stats.forEach(s => { %>
                            <tr>
                                <td class="py-3 font-mono text-zinc-400"><%= s.month %></td>
                                <td class="py-3 text-center font-bold"><%= s.totalTips %></td>
                                <td class="py-3 text-right font-black text-green-400">+<%= s.totalProfit %>%</td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5">
            <h3 class="text-[10px] font-black uppercase text-zinc-500 mb-4 tracking-widest text-center">Tagok és Tőke</h3>
            <div class="space-y-3">
                <% users.forEach(u => { %>
                    <div class="flex justify-between items-center text-[10px] border-b border-white/5 pb-2">
                        <span class="font-bold"><%= u.fullname %></span>
                        <span class="text-orange-500 font-mono"><%= u.startingCapital.toLocaleString() %> Ft</span>
                    </div>
                <% }) %>
            </div>
        </div>

    </div>

    <script>
        function startRobotProcess() {
            document.getElementById('robot-form').classList.add('hidden');
            document.getElementById('loading-area').classList.remove('hidden');
            
            // Animációs lépcsők a hitelesség kedvéért
            setTimeout(() => { document.getElementById('s1').classList.add('step-active', 'opacity-100'); }, 2000);
            setTimeout(() => { document.getElementById('s2').classList.add('step-active', 'opacity-100'); }, 15000);
            setTimeout(() => { document.getElementById('s3').classList.add('step-active', 'opacity-100'); }, 30000);
            setTimeout(() => { document.getElementById('s4').classList.add('step-active', 'opacity-100'); }, 45000);
        }
    </script>
</body>
</html>