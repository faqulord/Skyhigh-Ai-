<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Skyhigh Admin</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white p-6 md:p-12 max-w-6xl mx-auto">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
        <div class="bg-zinc-900 p-8 rounded-3xl text-center">
            <p class="text-xs text-zinc-500 uppercase mb-2">Tagok</p>
            <p class="text-4xl font-black"><%= stats.totalUsers %></p>
        </div>
        <div class="bg-zinc-900 p-8 rounded-3xl text-center border border-blue-500/20">
            <p class="text-xs text-zinc-500 uppercase mb-2">Aktív Prémium</p>
            <p class="text-4xl font-black text-blue-500"><%= stats.activeSubs %></p>
        </div>
        <div class="bg-zinc-900 p-8 rounded-3xl text-center border border-green-500/20">
            <p class="text-xs text-zinc-500 uppercase mb-2">Bevétel</p>
            <p class="text-4xl font-black text-green-500"><%= stats.revenue.toLocaleString() %> Ft</p>
        </div>
    </div>

    <div class="bg-zinc-900 p-8 rounded-3xl mb-12">
        <form action="/admin/make-admin" method="POST" class="flex gap-4">
            <input type="email" name="email" placeholder="Email" class="flex-1 bg-black border border-zinc-800 p-4 rounded-2xl outline-none">
            <button class="bg-white text-black px-8 rounded-2xl font-bold uppercase">Jogosítás</button>
        </form>
    </div>

    <div class="space-y-4">
        <% users.forEach(u => { %>
        <div class="bg-zinc-900 p-6 rounded-2xl flex justify-between items-center border border-zinc-800">
            <div>
                <p class="font-bold"><%= u.fullname %> <%= u.isAdmin ? '(Tulaj)' : '' %></p>
                <p class="text-xs text-zinc-500 font-mono"><%= u.email %></p>
            </div>
            <div class="text-right">
                <p class="text-green-500 font-bold"><%= (u.startingCapital || 0).toLocaleString() %> Ft</p>
                <p class="text-[10px] uppercase <%= u.hasLicense ? 'text-blue-500' : 'text-zinc-600' %>">
                    <%= u.hasLicense ? 'Premium' : 'Demo' %>
                </p>
            </div>
        </div>
        <% }) %>
    </div>
</body>
</html>