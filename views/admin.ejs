<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-black text-white p-8">
    <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10 text-center">
            <div class="bg-zinc-900 p-6 rounded-3xl border border-purple-500/30">
                <p class="text-xs text-zinc-500 uppercase">Bevétel</p>
                <h3 class="text-2xl font-black text-green-500 italic">€<%= totalRevenue %></h3>
            </div>
            <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5">
                <p class="text-xs text-zinc-500 uppercase">Tagok</p>
                <h3 class="text-2xl font-black"><%= licensedCount %></h3>
            </div>
            <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5">
                <form action="/admin/run-robot" method="POST">
                    <button type="submit" class="bg-purple-600 px-6 py-2 rounded-full text-xs font-black uppercase">Robot Indítása</button>
                </form>
            </div>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-zinc-900/50 p-6 rounded-3xl">
                <h3 class="mb-4 font-bold text-purple-500">Users</h3>
                <% users.forEach(u => { %> <p class="text-sm border-b border-white/5 py-1"><%= u.fullname %> - <%= u.startingCapital %> EUR</p> <% }) %>
            </div>
            <div class="bg-zinc-900/50 p-6 rounded-3xl">
                <h3 class="mb-4 font-bold text-purple-500">Profit 30 Days</h3>
                <% tips.forEach(t => { %> <p class="text-[10px]"><%= t.date %>: +<%= t.profitPercent %>%</p> <% }) %>
            </div>
        </div>
    </div>
</body>
</html>