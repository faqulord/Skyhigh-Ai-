<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Admin HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; padding-bottom: 50px; }
        .fox-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 1.5rem; }
        .chat-bubble { padding: 10px 15px; border-radius: 15px; font-size: 11px; line-height: 1.4; max-width: 85%; }
        .chat-boss { background: #7c3aed; color: white; border-bottom-right-radius: 2px; margin-left: auto; }
        .chat-ai { background: #27272a; color: #d4d4d8; border-bottom-left-radius: 2px; margin-right: auto; }
        /* Anim√°ci√≥ a t√∂lt√©shez */
        .loading { opacity: 0.5; pointer-events: none; }
    </style>
</head>
<body class="p-4 flex justify-center min-h-screen">
    <div class="max-w-md w-full pb-20">

        <header class="flex justify-between items-center mb-8 pt-4 border-b border-white/5 pb-4">
            <div>
                <p class="text-[9px] text-purple-500 font-black uppercase tracking-[3px]">System Control</p>
                <h1 style="font-family: 'Orbitron';" class="text-lg font-bold text-white uppercase"><%= brandName %> HQ</h1>
            </div>
            <a href="/dashboard" class="bg-zinc-900 px-4 py-2 rounded-xl text-[10px] font-bold uppercase text-zinc-400 border border-white/5">Dash</a>
        </header>

        <div class="fox-card p-5 mb-6 relative overflow-hidden shadow-2xl shadow-purple-900/10">
            <h3 class="text-[10px] font-black uppercase text-zinc-500 mb-4 text-center tracking-widest">Mai Hadm≈±velet (<%= dbDate %>)</h3>

            <% if (currentTip) { %>
                <div class="bg-purple-900/20 border border-purple-500/30 p-4 rounded-xl mb-4 text-center">
                    <h2 class="text-sm font-black text-white uppercase mb-1"><%= currentTip.match %></h2>
                    <p class="text-xs text-purple-400 font-bold"><%= currentTip.prediction %> (@<%= currentTip.odds %>)</p>
                </div>

                <div class="grid grid-cols-2 gap-3">
                    <form action="/admin/settle-tip" method="POST">
                        <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                        <input type="hidden" name="status" value="win">
                        <button class="w-full bg-green-900/30 border border-green-500/50 text-green-500 py-3 rounded-xl font-black uppercase text-xs hover:bg-green-600 hover:text-white transition">WIN ‚úÖ</button>
                    </form>
                    
                    <form action="/admin/settle-tip" method="POST">
                        <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                        <input type="hidden" name="status" value="loss">
                        <button class="w-full bg-red-900/30 border border-red-500/50 text-red-500 py-3 rounded-xl font-black uppercase text-xs hover:bg-red-600 hover:text-white transition">LOSS ‚ùå</button>
                    </form>
                </div>
                <p class="text-[9px] text-zinc-600 text-center mt-3 italic">Eredm√©ny r√∂gz√≠t√©se friss√≠ti a Dashboardot</p>

            <% } else { %>
                <div class="text-center py-4">
                    <p class="text-xs text-zinc-400 mb-4">A rendszer v√°rakozik...</p>
                    <form action="/admin/run-robot" method="POST">
                        <button type="submit" class="w-full bg-white text-black py-4 rounded-xl font-black uppercase text-xs shadow-lg hover:scale-[1.02] transition">üöÄ Elemz√©s Ind√≠t√°sa</button>
                    </form>
                </div>
            <% } %>
        </div>

        <div class="fox-card p-5 mb-6 border border-blue-500/20">
            <h3 class="text-[10px] font-black uppercase text-blue-400 mb-4 text-center tracking-widest">üìß H√≠rlev√©l & √ârtes√≠t√©s</h3>
            
            <div class="mb-4">
                <label class="text-[9px] text-zinc-500 font-bold uppercase">Mir≈ël sz√≥ljon a lev√©l?</label>
                <div class="flex gap-2 mt-1">
                    <input type="text" id="email-topic" class="flex-1 bg-black border border-zinc-800 rounded-xl p-2 text-xs text-white" placeholder="Pl. Heti √∂sszegz√©s, profit...">
                    <button onclick="draftEmail()" id="draft-btn" class="bg-blue-600 px-3 rounded-xl text-[10px] font-bold uppercase">Var√°zslat ‚ú®</button>
                </div>
            </div>

            <form action="/admin/send-email" method="POST">
                <div class="mb-3">
                    <input type="text" name="subject" id="email-subject" class="w-full bg-zinc-900/50 border border-zinc-800 rounded-lg p-2 text-xs font-bold text-white mb-2" placeholder="T√°rgy (Automatikusan kit√∂ltve...)">
                    <textarea name="messageBody" id="email-body" rows="6" class="w-full bg-zinc-900/50 border border-zinc-800 rounded-lg p-2 text-xs text-zinc-300" placeholder="Itt jelenik meg az AI √°ltal √≠rt sz√∂veg, amit szerkeszthetsz..."></textarea>
                </div>
                <button type="submit" onclick="return confirm('Biztosan kik√ºld√∂d minden tagnak?')" class="w-full bg-white text-black py-3 rounded-xl font-black uppercase text-xs hover:bg-zinc-200 transition">‚úâÔ∏è K√ºld√©s Minden Tagnak üöÄ</button>
            </form>
        </div>

        <div class="fox-card p-5 mb-6">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-4 text-center tracking-widest">K√∂zvetlen Kapcsolat</h3>
            <div id="chat-win" class="h-40 overflow-y-auto mb-4 space-y-3 pr-1 scrollbar-hide">
                <% chatHistory.forEach(msg => { %>
                    <div class="flex w-full">
                        <div class="chat-bubble <%= msg.sender === 'F≈ën√∂k' ? 'chat-boss' : 'chat-ai' %>">
                            <strong><%= msg.sender %>:</strong> <%= msg.text %>
                        </div>
                    </div>
                <% }) %>
            </div>
            <div class="flex gap-2 relative">
                <input type="text" id="chat-in" class="flex-1 bg-black border border-zinc-800 rounded-xl p-3 pl-4 text-xs text-white focus:outline-none focus:border-purple-600" placeholder="Utas√≠t√°s a R√≥k√°nak...">
                <button onclick="talk()" class="bg-purple-600 text-white p-3 rounded-xl font-bold uppercase text-xs">‚û§</button>
            </div>
        </div>

        <div class="fox-card p-5 border border-purple-500/20">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-4 border-b border-white/5 pb-2">Havi Profit (Jav√≠tva)</h3>
            <div class="space-y-1 max-h-40 overflow-y-auto pr-2">
                <% if(calculatorData && calculatorData.length > 0) { %>
                    <% calculatorData.forEach(row => { %>
                        <div class="flex justify-between text-[10px] py-1 border-b border-white/5">
                            <span class="text-zinc-500"><%= row.date %></span>
                            <span class="truncate w-32 font-medium text-zinc-300"><%= row.match %></span>
                            <span class="font-black <%= row.totalRunning > 0 ? 'text-green-400' : 'text-red-400' %>"><%= row.totalRunning.toFixed(1) %>%</span>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center text-[10px] text-zinc-600 italic">M√©g nincs adat ebben a h√≥napban.</p>
                <% } %>
            </div>
        </div>
        
        <div class="fox-card p-5 mt-6">
                <h3 class="text-[10px] font-black uppercase text-zinc-500 mb-4 border-b border-white/5 pb-2">Tagok Kezel√©se</h3>
                <div class="space-y-3">
                <% users.forEach(u => { %>
                    <div class="flex justify-between items-center bg-white/5 p-2 rounded-lg">
                        <div>
                            <p class="text-[10px] font-bold text-white"><%= u.fullname %></p>
                            <p class="text-[8px] text-zinc-500"><%= u.email %></p>
                        </div>
                        <% if (!u.hasLicense) { %>
                            <form action="/admin/activate-user" method="POST">
                                <input type="hidden" name="userId" value="<%= u._id %>">
                                <button class="bg-green-600 text-white text-[9px] px-3 py-1.5 rounded-lg uppercase font-bold shadow-md">Enged√©lyez</button>
                            </form>
                        <% } else { %>
                            <span class="text-green-500 text-[8px] font-black uppercase bg-green-500/10 px-2 py-1 rounded">Akt√≠v</span>
                        <% } %>
                    </div>
                <% }) %>
                </div>
            </div>

    </div>

    <script>
        const win = document.getElementById('chat-win'); 
        win.scrollTop = win.scrollHeight;

        // CHAT FUNKCI√ì
        async function talk() {
            const i = document.getElementById('chat-in'); 
            if(!i.value) return;
            const msgText = i.value; i.value = '';
            win.innerHTML += `<div class="flex w-full"><div class="chat-bubble chat-boss"><strong>F≈ën√∂k:</strong> ${msgText}</div></div>`;
            win.scrollTop = win.scrollHeight;
            try {
                const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})});
                const d = await r.json(); 
                win.innerHTML += `<div class="flex w-full"><div class="chat-bubble chat-ai"><strong>R√≥ka:</strong> ${d.reply}</div></div>`;
                win.scrollTop = win.scrollHeight;
            } catch (err) { console.error(err); }
        }

        // EMAIL GENER√ÅL√ì FUNKCI√ì
        async function draftEmail() {
            const topic = document.getElementById('email-topic').value;
            if(!topic) return alert("√çrj be egy t√©m√°t!");
            
            const btn = document.getElementById('draft-btn');
            btn.innerHTML = "√çr√°s..."; btn.classList.add('loading');

            try {
                const res = await fetch('/admin/draft-email', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ topic })
                });
                const data = await res.json();
                
                // Az els≈ë sort megpr√≥b√°ljuk t√°rgynak be√°ll√≠tani
                const lines = data.draft.split('\n');
                let subject = "H√≠rlev√©l a R√≥k√°t√≥l";
                let body = data.draft;

                if(lines[0].toLowerCase().includes("t√°rgy") || lines[0].toLowerCase().includes("subject")) {
                    subject = lines[0].replace(/T√°rgy:|Subject:/i, '').trim();
                    body = lines.slice(1).join('\n').trim();
                }

                document.getElementById('email-subject').value = subject;
                document.getElementById('email-body').value = body;
            } catch(e) { alert("Hiba az AI gener√°l√°sn√°l."); }
            
            btn.innerHTML = "Var√°zslat ‚ú®"; btn.classList.remove('loading');
        }
    </script>
</body>
</html>