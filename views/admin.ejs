<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&display=swap" rel="stylesheet">
    <style>
        body { background: #000; color: #fff; font-family: 'Inter', sans-serif; }
        .tech-card { background: #0a0a0a; border: 1px solid #222; border-radius: 15px; margin-bottom: 20px; }
        #sidebar { position: fixed; top: 0; left: 0; width: 250px; height: 100vh; background: #09090b; border-right: 1px solid #222; padding-top: 20px; }
        .menu-item { padding: 15px 25px; color: #666; font-size: 11px; font-weight: 800; text-transform: uppercase; cursor: pointer; border-left: 3px solid transparent; }
        .menu-item.active { color: #fff; background: #111; border-left-color: #c084fc; }
        .hidden { display: none !important; }
        .msg-ai { background: #1e1b4b; padding: 10px; border-radius: 10px; font-size: 11px; margin-bottom: 5px; }
    </style>
    <script>
        function switchTab(id) {
            document.querySelectorAll('.page-section').forEach(e => e.classList.add('hidden'));
            document.querySelectorAll('.menu-item').forEach(b => b.classList.remove('active'));
            document.getElementById('tab-' + id).classList.remove('hidden');
            document.getElementById('btn-' + id).classList.add('active');
        }
    </script>
</head>
<body>
    <nav id="sidebar">
        <div class="px-6 mb-10 text-white font-black uppercase tracking-tighter text-xl">FOX HQ</div>
        <div onclick="switchTab('dashboard')" id="btn-dashboard" class="menu-item active">üìä Dashboard</div>
        <div onclick="switchTab('chat')" id="btn-chat" class="menu-item">ü§ñ R√≥ka Agya</div>
        <div onclick="switchTab('users')" id="btn-users" class="menu-item">üë• Tagok</div>
        <div onclick="switchTab('finance')" id="btn-finance" class="menu-item">üí∞ P√©nz√ºgy</div>
        <div onclick="switchTab('insta')" id="btn-insta" class="menu-item">üì∏ Instagram</div>
        <div onclick="switchTab('email')" id="btn-email" class="menu-item">üì© Email</div>
    </nav>

    <main class="ml-[250px] p-10 max-w-5xl">
        <div class="grid grid-cols-4 gap-4 mb-10">
            <div class="bg-zinc-900 p-4 rounded-xl border border-zinc-800">
                <p class="text-[10px] text-zinc-500 font-bold uppercase">√Åtvizsg√°lt</p>
                <p class="text-2xl font-black text-purple-500"><%= scannedCount %></p>
            </div>
            <div class="bg-zinc-900 p-4 rounded-xl border border-zinc-800">
                <p class="text-[10px] text-zinc-500 font-bold uppercase">√ñsszes Tag</p>
                <p class="text-2xl font-black"><%= users.length %></p>
            </div>
        </div>

        <div id="tab-dashboard" class="page-section">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-2xl font-black uppercase">V√°rakoz√≥ Tippek</h2>
                <form action="/admin/run-robot" method="POST">
                    <button class="bg-white text-black px-6 py-2 rounded-lg font-black text-[10px] uppercase">üöÄ √öj Elemz√©s</button>
                </form>
            </div>
            <% pendingTips.forEach(tip => { %>
                <div class="tech-card p-6">
                    <h3 class="text-xl font-black"><%= tip.match %></h3>
                    <p class="text-purple-400 font-bold mb-4"><%= tip.prediction %> (@<%= tip.odds %>)</p>
                    <div class="bg-zinc-900 p-4 rounded-lg text-xs italic text-zinc-400 mb-6"><%= tip.reasoning %></div>
                    <div class="flex gap-4">
                        <form action="/admin/settle-tip" method="POST" class="flex-1"><input type="hidden" name="tipId" value="<%= tip._id %>"><input type="hidden" name="status" value="win"><button class="w-full bg-green-600 py-3 rounded-xl font-bold uppercase text-[10px]">Nyert</button></form>
                        <form action="/admin/settle-tip" method="POST" class="flex-1"><input type="hidden" name="tipId" value="<%= tip._id %>"><input type="hidden" name="status" value="loss"><button class="w-full bg-red-600 py-3 rounded-xl font-bold uppercase text-[10px]">Vesztett</button></form>
                    </div>
                    <% if(!tip.isPublished) { %><form action="/admin/publish-tip" method="POST" class="mt-4"><input type="hidden" name="tipId" value="<%= tip._id %>"><button class="w-full border border-blue-500 text-blue-500 py-3 rounded-xl font-bold uppercase text-[10px]">üì¢ Publik√°l√°s</button></form><% } %>
                </div>
            <% }) %>
        </div>

        <div id="tab-chat" class="page-section hidden">
            <div class="tech-card p-6 h-[500px] flex flex-col">
                <div id="chat-win" class="flex-1 overflow-y-auto mb-4">
                    <% chatHistory.forEach(msg => { %> <div class="msg-ai"><strong><%= msg.sender %>:</strong> <%= msg.text %></div> <% }) %>
                </div>
                <div class="flex gap-2">
                    <input type="text" id="chat-in" class="flex-1 bg-zinc-900 border border-zinc-800 rounded-lg px-4 text-xs" placeholder="Utas√≠t√°s...">
                    <button onclick="talk()" class="bg-purple-600 px-6 py-2 rounded-lg font-bold">‚û§</button>
                </div>
            </div>
        </div>

        <div id="tab-users" class="page-section hidden">
            <div class="tech-card overflow-hidden">
                <table class="w-full text-xs text-left">
                    <thead class="bg-zinc-900 uppercase"><tr><th class="p-4">N√©v</th><th class="p-4">Email</th><th class="p-4">Bankroll</th></tr></thead>
                    <tbody>
                        <% users.forEach(u => { %> <tr class="border-t border-zinc-900"><td class="p-4 font-bold"><%= u.fullname %></td><td class="p-4"><%= u.email %></td><td class="p-4"><%= u.currentBankroll %> Ft</td></tr> <% }) %>
                    </tbody>
                </table>
            </div>
        </div>

        <div id="tab-finance" class="page-section hidden">
            <div class="grid grid-cols-2 gap-6">
                <div class="tech-card p-10 text-center">
                    <p class="text-zinc-500 font-bold uppercase text-[10px]">√ñsszes t≈ëke</p>
                    <h3 class="text-3xl font-black mt-2"><%= users.reduce((s, u) => s + (u.currentBankroll || 0), 0).toLocaleString() %> Ft</h3>
                </div>
                <div class="tech-card p-10 text-center">
                    <p class="text-zinc-500 font-bold uppercase text-[10px]">Havi Profit</p>
                    <h3 class="text-3xl font-black text-green-500 mt-2">+<%= users.reduce((s, u) => s + (u.monthlyProfit || 0), 0).toLocaleString() %> Ft</h3>
                </div>
            </div>
        </div>

        <div id="tab-insta" class="page-section hidden">
            <div class="tech-card p-6">
                <button onclick="generateInsta()" class="w-full bg-pink-600 py-4 rounded-xl font-black uppercase text-xs">Poszt Sz√∂veg Gener√°l√°sa</button>
                <div id="insta-res" class="mt-6 bg-zinc-900 p-4 rounded-lg hidden text-xs whitespace-pre-wrap"></div>
            </div>
        </div>

        <div id="tab-email" class="page-section hidden">
            <div class="tech-card p-6">
                <input type="text" placeholder="T√°rgy" class="w-full bg-zinc-900 border border-zinc-800 p-4 rounded-xl mb-4 text-xs">
                <textarea placeholder="√úzenet..." class="w-full bg-zinc-900 border border-zinc-800 p-4 rounded-xl h-40 text-xs mb-4"></textarea>
                <button class="w-full bg-white text-black py-4 rounded-xl font-black uppercase text-xs">Email k√ºld√©se a Falk√°nak</button>
            </div>
        </div>
    </main>

    <script>
        async function talk() {
            const i = document.getElementById('chat-in'); if(!i.value) return;
            const r = await fetch('/admin/chat', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({message: i.value}) });
            const d = await r.json();
            document.getElementById('chat-win').innerHTML += `<div class="msg-ai"><strong>R√≥ka:</strong> ${d.reply}</div>`;
            i.value = '';
        }
        async function generateInsta() {
            const r = await fetch('/admin/generate-insta', { method: 'POST' });
            const d = await r.json();
            const res = document.getElementById('insta-res');
            res.innerText = d.caption; res.classList.remove('hidden');
        }
    </script>
</body>
</html>