<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #000000; color: #fff; font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .tech-card { background: #111111; border: 1px solid #333; border-radius: 16px; }
        .nav-btn { color: #555; transition: all 0.2s; }
        .nav-btn.active { color: #8b5cf6; }
        .nav-btn.active svg { fill: #8b5cf6; }
        .chat-container { background: #111; border-radius: 12px; height: 400px; display: flex; flex-direction: column; }
        .msg { padding: 8px 12px; border-radius: 12px; font-size: 12px; max-width: 80%; margin-bottom: 8px; }
        .msg-me { background: #8b5cf6; color: white; align-self: flex-end; }
        .msg-ai { background: #333; color: #ddd; align-self: flex-start; }
        .pb-safe { padding-bottom: 90px; }
        .pulse-btn { animation: pulse-border 2s infinite; }
        @keyframes pulse-border { 0% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0.4); } 70% { box-shadow: 0 0 0 10px rgba(139, 92, 246, 0); } 100% { box-shadow: 0 0 0 0 rgba(139, 92, 246, 0); } }
    </style>
</head>
<body class="min-h-screen flex flex-col">

    <header class="p-5 border-b border-zinc-900 bg-black sticky top-0 z-20 flex justify-between items-center">
        <div>
            <div class="flex items-center gap-2">
                <span class="text-2xl">ü¶ä</span>
                <h1 style="font-family: 'Orbitron';" class="text-sm font-bold text-white uppercase tracking-wider"><%= brandName %></h1>
            </div>
            <p class="text-[9px] text-zinc-500 italic mt-0.5 ml-8">Programmed by faqubelord</p>
        </div>
        <div class="bg-zinc-900 px-3 py-1 rounded-full border border-zinc-800">
            <span class="text-[10px] font-bold text-purple-500 uppercase">System Owner</span>
        </div>
    </header>

    <main class="flex-1 p-4 pb-safe">
        
        <div id="section-dashboard" class="page-section">
            <h2 class="text-lg font-bold text-white mb-4">Vez√©rl≈ëpult</h2>
            
            <div class="tech-card p-5 mb-6 relative overflow-hidden">
                <div class="flex justify-between items-start mb-4">
                    <span class="text-[10px] font-bold text-zinc-500 uppercase tracking-widest">Mai Elemz√©s</span>
                    <span class="bg-purple-900/30 text-purple-400 text-[10px] px-2 py-0.5 rounded border border-purple-500/20"><%= dbDate %></span>
                </div>

                <% if (currentTip) { %>
                    <h3 class="text-xl font-black text-white mb-1"><%= currentTip.match %></h3>
                    <p class="text-xs text-purple-400 font-mono mb-4"><%= currentTip.prediction %> (@<%= currentTip.odds %>)</p>

                    <div class="bg-zinc-900/50 p-3 rounded-lg border border-zinc-800 mb-6">
                        <p class="text-[9px] text-zinc-500 font-bold uppercase mb-1">R√≥ka jelent√©se a F≈ën√∂knek:</p>
                        <p class="text-xs text-zinc-300 italic">"<%= currentTip.reasoning %>"</p>
                    </div>

                    <% if (!currentTip.isPublished) { %>
                        <div class="border border-yellow-500/30 bg-yellow-500/10 p-4 rounded-xl text-center mb-4">
                            <p class="text-xs text-yellow-500 font-bold uppercase mb-3">‚ö†Ô∏è J√ìV√ÅHAGY√ÅSRA V√ÅR</p>
                            <form action="/admin/publish-tip" method="POST">
                                <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                                <button class="w-full bg-yellow-500 text-black py-4 rounded-xl font-black uppercase text-xs pulse-btn hover:scale-[1.02] transition">üì¢ PUBLIK√ÅL√ÅS A TAGOKNAK</button>
                            </form>
                             <form action="/admin/run-robot" method="POST" class="mt-2">
                                <button class="text-[9px] text-zinc-500 hover:text-white uppercase font-bold underline">√öjraelemz√©s (Fel√ºl√≠r√°s)</button>
                            </form>
                        </div>
                    <% } else { %>
                        <div class="bg-green-500/10 border border-green-500/30 p-2 rounded mb-4 text-center">
                            <p class="text-[10px] text-green-500 font-bold uppercase">‚úÖ √âLES√çTVE (L√ÅTHAT√ì)</p>
                        </div>

                        <form action="/admin/publish-tip" method="POST" class="mb-4">
                            <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                            <button class="w-full bg-zinc-800 text-zinc-400 border border-zinc-700 py-2 rounded-xl font-bold text-[10px] uppercase hover:bg-zinc-700 hover:text-white transition">
                                üîÑ Sz√∂veg √öjragener√°l√°sa (Ha m√©g "F≈ën√∂k" van ott)
                            </button>
                        </form>

                        <div class="grid grid-cols-2 gap-3">
                            <form action="/admin/settle-tip" method="POST">
                                <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                                <input type="hidden" name="status" value="win">
                                <button class="w-full bg-zinc-800 border border-zinc-700 text-green-500 py-3 rounded-xl font-bold text-xs uppercase hover:bg-green-900/30 transition">WIN ‚úÖ</button>
                            </form>
                            <form action="/admin/settle-tip" method="POST">
                                <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                                <input type="hidden" name="status" value="loss">
                                <button class="w-full bg-zinc-800 border border-zinc-700 text-red-500 py-3 rounded-xl font-bold text-xs uppercase hover:bg-red-900/30 transition">LOSS ‚ùå</button>
                            </form>
                        </div>
                    <% } %>

                <% } else { %>
                    <div class="text-center py-10">
                        <div class="w-16 h-16 bg-zinc-900 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl animate-pulse">üß†</div>
                        <p class="text-xs text-zinc-500 mb-6">A mai strat√©gia m√©g nem k√©sz√ºlt el.</p>
                        <form action="/admin/run-robot" method="POST">
                            <button class="bg-white text-black px-8 py-4 rounded-xl font-black uppercase text-xs shadow-xl hover:scale-105 transition">üöÄ Elemz√©s Ind√≠t√°sa</button>
                        </form>
                    </div>
                <% } %>
            </div>

            <h3 class="text-xs font-bold text-zinc-500 uppercase mb-3 ml-1">El≈ëz≈ë Napok</h3>
            <div class="space-y-3 mb-6">
                <% recentTips.forEach(tip => { %>
                    <div class="tech-card p-4 flex justify-between items-center">
                        <div>
                            <p class="text-[10px] text-zinc-500"><%= tip.date %></p>
                            <p class="text-xs font-bold text-white"><%= tip.match %></p>
                            <p class="text-[9px] font-bold uppercase mt-1 <%= tip.status === 'win' ? 'text-green-500' : (tip.status === 'loss' ? 'text-red-500' : 'text-zinc-500') %>">
                                <%= tip.status %>
                            </p>
                        </div>
                        <div class="grid grid-cols-2 gap-2">
                             <form action="/admin/settle-tip" method="POST">
                                <input type="hidden" name="tipId" value="<%= tip._id %>">
                                <input type="hidden" name="status" value="win">
                                <button class="bg-zinc-800 text-green-500 border border-zinc-700 px-3 py-2 rounded-lg text-[10px] font-bold hover:bg-green-900/20">W</button>
                            </form>
                            <form action="/admin/settle-tip" method="POST">
                                <input type="hidden" name="tipId" value="<%= tip._id %>">
                                <input type="hidden" name="status" value="loss">
                                <button class="bg-zinc-800 text-red-500 border border-zinc-700 px-3 py-2 rounded-lg text-[10px] font-bold hover:bg-red-900/20">L</button>
                            </form>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>

        <div id="section-comm" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4">Strat√©gia & Email</h2>
            <div class="tech-card p-4 mb-6">
                <div id="chat-win" class="chat-container overflow-y-auto mb-4 custom-scrollbar">
                    <% chatHistory.forEach(msg => { %> <div class="msg <%= msg.sender === 'F≈ën√∂k' ? 'msg-me' : 'msg-ai' %>"><strong><%= msg.sender %>:</strong> <%= msg.text %></div> <% }) %>
                </div>
                <div class="flex gap-2"><input type="text" id="chat-in" class="flex-1 bg-black border border-zinc-800 rounded-xl px-4 py-3 text-xs text-white focus:outline-none" placeholder="√úzenet..."><button onclick="talk()" class="bg-purple-600 text-white px-4 py-3 rounded-xl font-bold">‚û§</button></div>
            </div>
            <div class="tech-card p-4 border border-blue-900/30">
                <h3 class="text-xs font-bold text-white mb-2">üì¢ H√≠rlev√©l</h3>
                <input type="text" id="email-topic" class="w-full bg-black border border-zinc-800 rounded-lg p-2 text-xs text-white mb-2" placeholder="T√©ma...">
                <button onclick="draftEmail()" class="bg-zinc-800 text-zinc-300 w-full py-2 rounded-lg text-[10px] font-bold uppercase mb-4">AI V√°zlat</button>
                <form action="/admin/send-email" method="POST">
                    <input type="text" name="subject" id="email-subject" class="w-full bg-black border border-zinc-800 rounded-lg p-2 text-xs text-white mb-2" placeholder="T√°rgy">
                    <textarea name="messageBody" id="email-body" rows="4" class="w-full bg-black border border-zinc-800 rounded-lg p-2 text-xs text-zinc-300 mb-2" placeholder="Sz√∂veg..."></textarea>
                    <button type="submit" onclick="return confirm('Mehet?')" class="w-full bg-blue-600 text-white py-3 rounded-xl font-bold text-xs uppercase">K√ºld√©s</button>
                </form>
            </div>
        </div>

        <div id="section-users" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4">Tagok (<%= users.length %>)</h2>
            <div class="space-y-2">
                <% users.forEach(u => { %>
                    <div class="tech-card p-3 flex justify-between items-center">
                        <div><p class="text-xs font-bold text-white"><%= u.fullname %></p><p class="text-[9px] text-zinc-500"><%= u.email %></p></div>
                        <% if (!u.hasLicense) { %> <form action="/admin/activate-user" method="POST"><input type="hidden" name="userId" value="<%= u._id %>"><button class="bg-green-600 text-white text-[9px] px-3 py-1.5 rounded-lg font-bold">Aktiv√°l</button></form> <% } else { %> <span class="text-green-500 text-[9px] font-bold border border-green-500/30 px-2 py-1 rounded">Akt√≠v</span> <% } %>
                    </div>
                <% }) %>
            </div>
        </div>

        <div id="section-finance" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4">P√©nz√ºgy</h2>
            <div class="tech-card p-4"><div class="space-y-1 max-h-[60vh] overflow-y-auto pr-2 custom-scrollbar"><% if(calculatorData && calculatorData.length > 0) { %> <% calculatorData.forEach(row => { %> <div class="flex justify-between items-center text-[10px] py-3 border-b border-zinc-800"><span class="text-zinc-500 font-mono"><%= row.date %></span><span class="truncate w-32 font-medium text-zinc-300"><%= row.match %></span><span class="font-bold <%= row.dailyProfit > 0 ? 'text-green-500' : (row.dailyProfit < 0 ? 'text-red-500' : 'text-zinc-500') %>"><%= row.dailyProfit > 0 ? '+' : '' %><%= row.dailyProfit %>%</span></div> <% }) %> <% } else { %> <p class="text-center text-[10px] text-zinc-600 italic py-4">Nincs adat.</p> <% } %></div></div>
        </div>

    </main>

    <nav class="fixed bottom-0 left-0 w-full bg-black border-t border-zinc-900 p-2 pb-6 z-50 flex justify-around">
        <button onclick="switchTab('dashboard')" id="btn-dashboard" class="nav-btn active flex flex-col items-center gap-1 p-2"><svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/></svg><span class="text-[9px] font-bold uppercase">Vez√©rl≈ë</span></button>
        <button onclick="switchTab('comm')" id="btn-comm" class="nav-btn flex flex-col items-center gap-1 p-2"><svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/></svg><span class="text-[9px] font-bold uppercase">Comm</span></button>
        <button onclick="switchTab('users')" id="btn-users" class="nav-btn flex flex-col items-center gap-1 p-2"><svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg><span class="text-[9px] font-bold uppercase">Tagok</span></button>
        <button onclick="switchTab('finance')" id="btn-finance" class="nav-btn flex flex-col items-center gap-1 p-2"><svg class="w-5 h-5 fill-current" viewBox="0 0 24 24"><path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/></svg><span class="text-[9px] font-bold uppercase">P√©nz√ºgy</span></button>
    </nav>

    <script>
        function switchTab(tabId) { document.querySelectorAll('.page-section').forEach(el => el.classList.add('hidden')); document.querySelectorAll('.nav-btn').forEach(btn => btn.classList.remove('active')); document.getElementById('section-' + tabId).classList.remove('hidden'); document.getElementById('btn-' + tabId).classList.add('active'); }
        const win = document.getElementById('chat-win'); if(win) win.scrollTop = win.scrollHeight;
        async function talk() { const i = document.getElementById('chat-in'); if(!i.value) return; const msgText = i.value; i.value = ''; win.innerHTML += `<div class="msg msg-me"><strong>F≈ën√∂k:</strong> ${msgText}</div>`; win.scrollTop = win.scrollHeight; try { const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})}); const d = await r.json(); win.innerHTML += `<div class="msg msg-ai"><strong>R√≥ka:</strong> ${d.reply}</div>`; win.scrollTop = win.scrollHeight; } catch (err) { console.error(err); } }
        async function draftEmail() { const topic = document.getElementById('email-topic').value; if(!topic) return alert("√çrj t√©m√°t!"); try { const res = await fetch('/admin/draft-email', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ topic }) }); const data = await res.json(); const lines = data.draft.split('\n'); let subject = "H√≠rlev√©l"; let body = data.draft; if(lines[0].toLowerCase().includes("t√°rgy")) { subject = lines[0].replace(/T√°rgy:/i, '').trim(); body = lines.slice(1).join('\n').trim(); } document.getElementById('email-subject').value = subject; document.getElementById('email-body').value = body; } catch(e) { alert("AI Hiba"); } }
    </script>
</body>
</html>