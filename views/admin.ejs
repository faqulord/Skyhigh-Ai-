                overlay.classList.remove('show');
            } else {
                menu.classList.add('open');
                overlay.classList.add('show');
            }
        }

        function selectTab(tabId) {
            document.querySelectorAll('.content-tab').forEach(el => el.classList.add('hidden-section'));
            document.querySelectorAll('.sidebar-btn').forEach(btn => btn.classList.remove('active'));
            
            document.getElementById('tab-' + tabId).classList.remove('hidden-section');
            document.getElementById('btn-' + tabId).classList.add('active');
            
            // Mobilon bez√°rjuk a men√ºt kattint√°s ut√°n
            toggleMenu();
            window.scrollTo(0,0);
        }

        const win = document.getElementById('chat-win'); if(win) win.scrollTop = win.scrollHeight;
