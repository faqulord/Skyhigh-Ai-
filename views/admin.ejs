<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-[#050505] text-white p-8">
    <div class="max-w-6xl mx-auto">
        <div class="flex justify-between items-center mb-10 border-b border-white/5 pb-6">
            <h1 class="text-2xl font-black italic text-purple-500 uppercase tracking-tighter">Admin Control Panel</h1>
            <form action="/admin/run-robot" method="POST">
                <button type="submit" class="bg-red-600 hover:bg-red-700 text-white px-6 py-2 rounded-full font-bold uppercase text-xs">Robot Kényszerített Indítása</button>
            </form>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="bg-zinc-900/50 p-6 rounded-3xl border border-white/5">
                <h3 class="text-xs font-black uppercase tracking-widest text-zinc-500 mb-6">User Database</h3>
                <div class="space-y-4">
                    <% users.forEach(u => { %>
                        <div class="flex justify-between items-center border-b border-white/5 pb-2">
                            <span class="text-sm font-bold"><%= u.fullname %></span>
                            <span class="text-purple-500 font-mono text-sm"><%= u.startingCapital %> EUR</span>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="bg-zinc-900/50 p-6 rounded-3xl border border-white/5">
                <h3 class="text-xs font-black uppercase tracking-widest text-zinc-500 mb-6">Profit History (30 Days)</h3>
                <div class="space-y-2">
                    <% tips.forEach(t => { %>
                        <div class="flex items-center gap-4 text-[10px]">
                            <span class="w-20 text-zinc-600"><%= t.date %></span>
                            <div class="flex-1 bg-zinc-800 h-2 rounded-full">
                                <div class="bg-purple-600 h-full rounded-full" style="width: <%= t.profitPercent * 5 %>%"></div>
                            </div>
                            <span class="text-purple-400 font-bold">+<%= t.profitPercent %>%</span>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>