<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Admin HQ | Skyhigh</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; }
        .fox-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 1.5rem; }
        .chat-box::-webkit-scrollbar { width: 3px; }
        .chat-box::-webkit-scrollbar-thumb { background: #8b5cf6; border-radius: 10px; }
    </style>
</head>
<body class="p-4 flex justify-center min-h-screen">
    <div class="w-full max-w-md pb-12">
        <header class="flex justify-between items-center mb-6 pt-2">
            <h1 style="font-family: 'Orbitron';" class="text-lg font-bold text-purple-500 uppercase italic">Admin HQ</h1>
            <a href="/dashboard" class="bg-zinc-900 px-4 py-1 rounded-full text-[9px] font-bold uppercase text-zinc-400">Dash</a>
        </header>

        <div class="fox-card p-5 mb-6 text-center">
            <% if (tipExists) { %>
                <h2 class="text-[10px] font-black text-purple-400 uppercase tracking-widest animate-pulse">A Napi Fix √©les√≠tve! ü¶ä</h2>
            <% } else { %>
                <form action="/admin/run-robot" method="POST">
                    <button type="submit" class="w-full bg-purple-600 py-4 rounded-xl font-black uppercase text-[10px]">Elemz√©s Ind√≠t√°sa</button>
                </form>
            <% } %>
        </div>

        <div class="fox-card p-5 mb-6">
            <h3 class="text-[9px] font-black uppercase text-purple-500 mb-4 text-center tracking-[2px]">Profit Kalkul√°tor</h3>
            <div class="space-y-2 max-h-40 overflow-y-auto chat-box pr-2">
                <% calculatorData.forEach(row => { %>
                    <div class="flex justify-between text-[9px] border-b border-white/5 pb-1">
                        <span class="text-zinc-500 font-mono"><%= row.date.split('-')[2] %>.</span>
                        <span class="truncate w-24 text-left"><%= row.match %></span>
                        <span class="<%= row.dailyProfit >= 0 ? 'text-green-500' : 'text-red-500' %> font-bold"><%= row.dailyProfit %>%</span>
                        <span class="font-black text-white"><%= row.totalRunning.toFixed(1) %>%</span>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="fox-card p-5 mb-6 border border-purple-500/20">
            <div id="chat-window" class="chat-box h-32 overflow-y-auto mb-4 space-y-2 text-[9px] p-2 bg-black rounded-lg">
                <% chatHistory.forEach(msg => { %>
                    <div class="<%= msg.sender === 'Admin' ? 'text-right' : 'text-left' %>">
                        <p class="text-zinc-400"><%= msg.text %></p>
                    </div>
                <% }) %>
            </div>
            <div class="flex gap-2">
                <input type="text" id="chat-msg" class="flex-1 bg-zinc-900 rounded-lg p-3 text-[10px] text-white outline-none border-none" placeholder="√úzenet...">
                <button onclick="send()" class="bg-purple-600 px-4 rounded-lg font-bold text-[10px]">K√úLD</button>
            </div>
        </div>

        <div class="fox-card p-5">
            <h3 class="text-[9px] font-black uppercase text-zinc-500 mb-4 text-center">Tags√°gok</h3>
            <div class="space-y-3">
                <% users.forEach(u => { %>
                    <div class="flex justify-between items-center text-[10px] border-b border-white/5 pb-2">
                        <div class="truncate w-32 font-bold"><%= u.fullname %></div>
                        <% if (!u.hasLicense) { %>
                            <form action="/admin/activate-user" method="POST"><input type="hidden" name="userId" value="<%= u._id %>"><button class="bg-green-600 text-[8px] px-3 py-1 rounded font-black">AKTIV√ÅL</button></form>
                        <% } else { %><span class="text-green-500 text-[8px] font-black uppercase">Akt√≠v</span><% } %>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script>
        const win = document.getElementById('chat-window'); win.scrollTop = win.scrollHeight;
        async function send() {
            const input = document.getElementById('chat-msg'); if(!input.value) return;
            win.innerHTML += `<div class="text-right text-zinc-500">${input.value}</div>`;
            const res = await fetch('/admin/chat', {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message:input.value})});
            const data = await res.json();
            win.innerHTML += `<div class="text-left text-purple-400 italic font-bold">${data.reply}</div>`;
            input.value = ''; win.scrollTop = win.scrollHeight;
        }
    </script>
</body>
</html>