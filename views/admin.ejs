<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Admin HQ | Skyhigh</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; }
        .fox-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 1.5rem; }
    </style>
</head>
<body class="p-4 md:p-8 flex justify-center min-h-screen">
    <div class="max-w-md w-full pb-20">
        <header class="flex justify-between items-center mb-10 pt-4">
            <h1 style="font-family: 'Orbitron';" class="text-xl font-bold text-purple-500 uppercase">Admin HQ</h1>
            <a href="/dashboard" class="bg-zinc-900 px-4 py-1 rounded-full text-[10px] font-bold uppercase text-zinc-400">Dash</a>
        </header>

        <div class="fox-card p-6 mb-8 text-center">
            <% if (tipExists) { %>
                <h2 class="text-xs font-black text-purple-400 uppercase tracking-widest animate-pulse">A Napi Fix élesítve!</h2>
            <% } else { %>
                <form action="/admin/run-robot" method="POST">
                    <button type="submit" class="w-full bg-purple-600 py-4 rounded-2xl font-black uppercase text-xs">Elemzés Indítása (08:00)</button>
                </form>
            <% } %>
        </div>

        <div class="fox-card p-6 mb-8 border border-purple-500/20 shadow-lg overflow-hidden">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-6 text-center">Profit Kalkulátor</h3>
            <div class="space-y-2 max-h-40 overflow-y-auto pr-2">
                <% calculatorData.forEach(row => { %>
                    <div class="flex justify-between text-[10px] border-b border-white/5 pb-2">
                        <span class="text-zinc-500"><%= row.date.split('-')[2] %>.</span>
                        <span class="truncate w-32 font-bold"><%= row.match %></span>
                        <span class="font-black"><%= row.totalRunning.toFixed(1) %>%</span>
                    </div>
                <% }) %>
            </div>
        </div>

        <div class="fox-card p-6 mb-8">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-4 text-center">Róka Stratégiai Napló</h3>
            <div id="chat-win" class="h-40 overflow-y-auto mb-4 space-y-2 text-[10px] bg-black p-3 rounded-xl">
                <% chatHistory.forEach(msg => { %>
                    <div class="<%= msg.sender === 'Admin' ? 'text-right' : 'text-left' %>">
                        <p class="<%= msg.sender === 'Admin' ? 'text-zinc-500' : 'text-purple-400 italic font-bold' %>"><%= msg.text %></p>
                    </div>
                <% }) %>
            </div>
            <div class="flex gap-2">
                <input type="text" id="chat-in" class="flex-1 bg-zinc-900 rounded-xl p-3 text-[10px] text-white" placeholder="Üzenet...">
                <button onclick="talk()" class="bg-purple-600 px-4 rounded-xl text-[10px] font-bold uppercase">Küld</button>
            </div>
        </div>

        <div class="fox-card p-6">
            <h3 class="text-[10px] font-black uppercase text-zinc-500 mb-6 text-center">Tagok Aktiválása</h3>
            <% users.forEach(u => { %>
                <div class="flex justify-between items-center border-b border-white/5 pb-2 mb-2">
                    <span class="text-[10px] font-bold"><%= u.fullname %></span>
                    <% if (!u.hasLicense) { %>
                        <form action="/admin/activate-user" method="POST"><input type="hidden" name="userId" value="<%= u._id %>"><button class="bg-green-600 text-[8px] px-2 py-1 rounded-lg uppercase font-bold">Aktivál</button></form>
                    <% } else { %><span class="text-green-500 text-[8px] font-bold uppercase">Aktív</span><% } %>
                </div>
            <% }) %>
        </div>
    </div>
    <script>
        const win = document.getElementById('chat-win'); win.scrollTop = win.scrollHeight;
        async function talk() {
            const i = document.getElementById('chat-in'); if(!i.value) return;
            win.innerHTML += `<div class="text-right text-zinc-500">${i.value}</div>`;
            const r = await fetch('/admin/chat', {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message:i.value})});
            const d = await r.json(); win.innerHTML += `<div class="text-left text-purple-400 font-bold italic">${d.reply}</div>`;
            i.value = ''; win.scrollTop = win.scrollHeight;
        }
    </script>
</body>
</html>