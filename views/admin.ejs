<div class="startup-card p-6 mb-8 border-t-2 border-t-yellow-500">
    <h3 class="text-white font-bold mb-4">Mérkőzés Eredményezése</h3>
    
    <% activeTips.forEach(tip => { %>
        <div class="bg-zinc-900 p-4 rounded-xl mb-3 border border-zinc-800">
            <p class="text-xs font-bold text-zinc-400 mb-2"><%= tip.match %></p>
            <div class="grid grid-cols-2 gap-2">
                <form action="/admin/settle-tip/<%= tip._id %>" method="POST">
                    <input type="hidden" name="status" value="win">
                    <button class="w-full bg-green-600/20 hover:bg-green-600 text-green-500 hover:text-white py-2 rounded-lg text-[10px] font-bold transition">NYERT</button>
                </form>
                <form action="/admin/settle-tip/<%= tip._id %>" method="POST">
                    <input type="hidden" name="status" value="loss">
                    <button class="w-full bg-red-600/20 hover:bg-red-600 text-red-500 hover:text-white py-2 rounded-lg text-[10px] font-bold transition">VESZTETT</button>
                </form>
            </div>
        </div>
    <% }) %>

    <hr class="border-zinc-800 my-6">

    <h3 class="text-white font-bold mb-2">Hónap végi zárás</h3>
    <form action="/admin/close-month" method="POST">
        <button class="w-full bg-purple-600 hover:bg-purple-500 text-white py-3 rounded-xl text-xs font-bold transition uppercase">Zárás és Publikálás</button>
    </form>
</div>