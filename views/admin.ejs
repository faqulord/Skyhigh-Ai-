<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body { background: #000000; color: #fff; font-family: sans-serif; }
        .tech-card { background: #0a0a0a; border: 1px solid #222; border-radius: 20px; margin-bottom: 20px; }
        .hidden { display: none !important; }
        .menu-item.active { color: #c084fc; border-left: 3px solid #c084fc; background: #111; }
        .orange-neon { color: #FF9F43; }
    </style>
    <script>
        function switchTab(id) {
            document.querySelectorAll('.page-section').forEach(e => e.classList.add('hidden'));
            document.querySelectorAll('.menu-item').forEach(b => b.classList.remove('active'));
            document.getElementById('tab-' + id).classList.remove('hidden');
            document.getElementById('btn-' + id).classList.add('active');
        }
    </script>
</head>
<body class="flex min-h-screen">
    <nav class="w-64 bg-zinc-950 border-r border-zinc-800 p-5 hidden lg:block">
        <h2 class="text-xl font-black mb-10">HQ <span class="text-purple-500">CONTROL</span></h2>
        <button onclick="switchTab('dashboard')" id="btn-dashboard" class="menu-item active block w-full text-left p-3 mb-2 font-bold text-xs uppercase text-zinc-500 hover:text-white">üìä Vez√©rl≈ëpult</button>
        <button onclick="switchTab('marketing')" id="btn-marketing" class="menu-item block w-full text-left p-3 mb-2 font-bold text-xs uppercase text-zinc-500 hover:text-white">üì¢ Marketing</button>
        <button onclick="switchTab('users')" id="btn-users" class="menu-item block w-full text-left p-3 mb-2 font-bold text-xs uppercase text-zinc-500 hover:text-white">üë• Tagok & Licensz</button>
        <a href="/logout" class="block mt-10 text-red-500 text-xs font-bold uppercase">Kijelentkez√©s</a>
    </nav>

    <main class="flex-1 p-8">
        <div id="tab-dashboard" class="page-section">
            <h2 class="text-2xl font-black mb-6">Vez√©rl≈ëpult</h2>
            
            <div class="tech-card p-6 mb-6">
                <p class="text-xs text-zinc-500 font-bold uppercase mb-4">Strat√©gia: <span class="orange-neon"><%= strategyMode.toUpperCase() %></span></p>
                <form action="/admin/update-settings" method="POST" class="grid grid-cols-3 gap-3">
                    <button name="mode" value="recovery" class="p-3 bg-zinc-900 border border-zinc-800 rounded text-xs font-bold text-blue-400">üõ°Ô∏è √ìvatos</button>
                    <button name="mode" value="normal" class="p-3 bg-zinc-900 border border-zinc-800 rounded text-xs font-bold text-purple-400">ü¶ä Norm√°l</button>
                    <button name="mode" value="aggressive" class="p-3 bg-zinc-900 border border-zinc-800 rounded text-xs font-bold text-orange-400">üî• Zsiv√°ny</button>
                </form>
            </div>

            <div class="tech-card p-6">
                <% if (currentTip) { %>
                    <h3 class="text-xl font-bold"><%= currentTip.match %></h3>
                    <p class="text-purple-400 font-bold mb-4"><%= currentTip.prediction %> (@<%= currentTip.odds %>)</p>
                    
                    <% if(!currentTip.isPublished) { %>
                        <form action="/admin/publish-tip" method="POST" class="mb-4">
                            <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                            <button class="w-full bg-blue-600 text-white p-3 rounded font-bold uppercase">üì¢ Publik√°l√°s</button>
                        </form>
                    <% } %>

                    <div class="grid grid-cols-2 gap-4">
                        <form action="/admin/settle-tip" method="POST" onsubmit="return confirm('Biztos WIN?')">
                            <input type="hidden" name="status" value="win">
                            <button class="w-full bg-green-900 text-green-400 border border-green-700 p-3 rounded font-black">WIN ‚úÖ</button>
                        </form>
                        <form action="/admin/settle-tip" method="POST" onsubmit="return confirm('Biztos LOSS?')">
                            <input type="hidden" name="status" value="loss">
                            <button class="w-full bg-red-900 text-red-400 border border-red-700 p-3 rounded font-black">LOSS ‚ùå</button>
                        </form>
                    </div>
                <% } else { %>
                    <form action="/admin/run-robot" method="POST">
                        <button class="bg-white text-black px-6 py-3 rounded font-black uppercase">üöÄ Elemz√©s Ind√≠t√°sa</button>
                    </form>
                <% } %>
            </div>
        </div>

        <div id="tab-marketing" class="page-section hidden">
            <h2 class="text-2xl font-black mb-6">Marketing</h2>
            <div class="tech-card p-6">
                <div class="flex gap-3 mb-4">
                    <button onclick="generateSocial('win')" class="flex-1 bg-zinc-800 text-white p-3 rounded text-xs font-bold uppercase">üèÜ Nyer≈ë Poszt</button>
                    <button onclick="generateSocial('motivation')" class="flex-1 bg-zinc-800 text-white p-3 rounded text-xs font-bold uppercase">üî• Motiv√°ci√≥</button>
                </div>
                <textarea id="social-result" rows="5" class="w-full bg-black border border-zinc-800 rounded p-4 text-xs text-white" placeholder="Ide gener√°lja a sz√∂veget..."></textarea>
            </div>
        </div>

        <div id="tab-users" class="page-section hidden">
            <h2 class="text-2xl font-black mb-6">Tagok</h2>
            <div class="grid gap-3">
                <% users.forEach(u => { %> 
                    <div class="tech-card p-5 flex justify-between items-center">
                        <div>
                            <p class="font-bold"><%= u.fullname %> <span class="text-xs text-zinc-500">(<%= u.email %>)</span></p>
                            <p class="text-xs text-zinc-400">Bank: <%= u.currentBankroll %> Ft | Havi: <%= u.monthlyProfit %> Ft</p>
                            <p class="text-[10px] mt-1 <%= u.hasLicense ? 'text-green-500' : 'text-red-500' %> font-bold">
                                √ÅLLAPOT: <%= u.hasLicense ? 'AKT√çV' : 'INAKT√çV' %>
                            </p>
                        </div>
                        
                        <form action="/admin/toggle-license" method="POST">
                            <input type="hidden" name="userId" value="<%= u._id %>">
                            <button class="text-[10px] font-bold uppercase px-3 py-2 rounded <%= u.hasLicense ? 'bg-red-900 text-red-400' : 'bg-green-900 text-green-400' %>">
                                <%= u.hasLicense ? 'ELV√âTEL ‚õî' : 'AKTIV√ÅL√ÅS ‚úÖ' %>
                            </button>
                        </form>
                    </div> 
                <% }) %>
            </div>
        </div>
    </main>

    <script>
        async function generateSocial(type) { 
            const textarea = document.getElementById('social-result');
            textarea.value = "Gener√°l√°s folyamatban... ü¶ä";
            try { 
                const res = await fetch('/admin/social-content', { 
                    method: 'POST', 
                    headers: {'Content-Type': 'application/json'}, 
                    body: JSON.stringify({ type }) 
                }); 
                const data = await res.json(); 
                textarea.value = data.content; 
            } catch(e) { textarea.value = "Hiba t√∂rt√©nt."; } 
        }
    </script>
</body>
</html>