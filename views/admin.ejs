<body class="bg-black text-white p-8">
    <h1 class="text-3xl font-black text-purple-500 mb-8 uppercase">Neural Admin Control</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5">
            <h2 class="text-xl font-bold mb-4">Users & Capital</h2>
            <% users.forEach(u => { %>
                <div class="flex justify-between p-2 border-b border-white/5">
                    <span><%= u.fullname %></span>
                    <span class="text-green-500 font-mono"><%= u.startingCapital %> EUR</span>
                </div>
            <% }) %>
        </div>

        <div class="bg-zinc-900 p-6 rounded-3xl border border-white/5">
            <h2 class="text-xl font-bold mb-4">30 Days Profit Scale (%)</h2>
            <div class="space-y-2">
                <% tips.forEach(t => { %>
                    <div class="flex items-center gap-4">
                        <span class="text-xs text-zinc-500"><%= t.date %></span>
                        <div class="flex-1 bg-zinc-800 h-4 rounded-full overflow-hidden">
                            <div class="bg-purple-600 h-full" style="width: <%= t.profitPercent %>%"></div>
                        </div>
                        <span class="text-xs font-bold">+<%= t.profitPercent %>%</span>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</body>