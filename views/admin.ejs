<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin HQ | Skyhigh Lila R√≥ka</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; }
        .fox-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 2rem; }
        .purple-neon { border-color: #8b5cf6; box-shadow: 0 0 15px rgba(139, 92, 246, 0.2); }
    </style>
</head>
<body class="p-4 md:p-8 flex justify-center min-h-screen">
    <div class="max-w-md w-full pb-20">
        <header class="flex justify-between items-center mb-10 pt-4">
            <h1 style="font-family: 'Orbitron';" class="text-xl font-bold text-purple-500 uppercase">Admin HQ</h1>
            <a href="/dashboard" class="bg-zinc-900 px-4 py-1 rounded-full text-[10px] font-bold uppercase text-zinc-400">Dashboard</a>
        </header>

        <div class="fox-card p-6 mb-8 text-center <%= tipExists ? 'purple-neon border-2' : '' %>">
            <% if (tipExists) { %>
                <div class="text-3xl mb-2">ü¶äüíú</div>
                <h2 class="text-xs font-black text-purple-400 uppercase tracking-widest animate-pulse">A Napi Fix √©les√≠tve van!</h2>
            <% } else { %>
                <form action="/admin/run-robot" method="POST">
                    <button type="submit" class="w-full bg-purple-600 py-4 rounded-2xl font-black uppercase text-xs">Elemz√©s Ind√≠t√°sa (08:00)</button>
                </form>
            <% } %>
        </div>

        <div class="fox-card p-6 mb-8 border border-purple-500/20 shadow-lg overflow-hidden">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-6 text-center tracking-widest">Profit Kalkul√°tor (<%= currentMonthName %>)</h3>
            <table class="w-full text-[9px] text-left">
                <thead class="text-zinc-600 uppercase"><tr><th>Nap</th><th>Meccs</th><th class="text-right">Profit</th><th class="text-right">Havi</th></tr></thead>
                <tbody class="divide-y divide-white/5 text-zinc-300">
                    <% calculatorData.forEach(row => { %>
                        <tr><td class="py-2"><%= row.date.split('-')[2] %>.</td><td class="py-2 truncate max-w-[80px]"><%= row.match %></td><td class="py-2 text-right <%= row.dailyProfit >= 0 ? 'text-green-500' : 'text-red-500' %>"><%= row.dailyProfit %>%</td><td class="py-2 text-right font-black"><%= row.totalRunning.toFixed(1) %>%</td></tr>
                    <% }) %>
                </tbody>
            </table>
        </div>

        <div class="fox-card p-6 mb-8 border border-purple-500/30">
            <h3 class="text-[10px] font-black uppercase text-purple-500 mb-4 text-center tracking-widest italic">R√≥ka Strat√©giai Napl√≥</h3>
            <div id="chat-window" class="h-48 overflow-y-auto mb-4 space-y-3 text-[10px] p-3 bg-black rounded-xl">
                <% chatHistory.forEach(msg => { %>
                    <div class="<%= msg.sender === 'Admin' ? 'text-right' : 'text-left' %>">
                        <p class="text-[8px] text-zinc-600 font-bold uppercase"><%= msg.sender %></p>
                        <p class="<%= msg.sender === 'Admin' ? 'text-zinc-400' : 'text-purple-400 font-bold italic' %>"><%= msg.text %></p>
                    </div>
                <% }) %>
            </div>
            <div class="flex gap-2">
                <input type="text" id="chat-in" class="flex-1 bg-zinc-900 rounded-xl p-3 text-[10px] text-white" placeholder="√úzenet...">
                <button onclick="send()" class="bg-purple-600 px-4 rounded-xl font-bold text-xs uppercase">Ok</button>
            </div>
        </div>

        <div class="fox-card p-6">
            <h3 class="text-[10px] font-black uppercase text-zinc-500 mb-6 text-center">Tagok Aktiv√°l√°sa</h3>
            <div class="space-y-4">
                <% users.forEach(u => { %>
                    <div class="flex justify-between items-center border-b border-white/5 pb-2">
                        <span class="text-[10px] truncate w-32"><%= u.fullname %></span>
                        <% if (!u.hasLicense) { %>
                            <form action="/admin/activate-user" method="POST"><input type="hidden" name="userId" value="<%= u._id %>"><button class="bg-green-600 text-[8px] px-2 py-1 rounded uppercase font-bold">Aktiv√°l</button></form>
                        <% } else { %><span class="text-green-500 text-[8px] font-bold">TAG</span><% } %>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
    <script>
        const win = document.getElementById('chat-window'); win.scrollTop = win.scrollHeight;
        async function send() {
            const i = document.getElementById('chat-in'); if(!i.value) return;
            win.innerHTML += `<div class="text-right"><p class="text-[8px] text-zinc-600 font-bold uppercase">Admin</p><p class="text-zinc-400">${i.value}</p></div>`;
            const res = await fetch('/admin/chat', {method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message:i.value})});
            const d = await res.json(); win.innerHTML += `<div class="text-left"><p class="text-[8px] text-zinc-600 font-bold uppercase">R√≥ka</p><p class="text-purple-400 font-bold italic">${d.reply}</p></div>`;
            i.value = ''; win.scrollTop = win.scrollHeight;
        }
    </script>
</body>
</html>