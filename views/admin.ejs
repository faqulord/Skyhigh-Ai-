<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #000; color: #fff; font-family: 'Inter', sans-serif; }
        .tech-card { background: #0a0a0a; border: 1px solid #222; border-radius: 20px; margin-bottom: 20px; }
        .hidden { display: none !important; }
        #sidebar { position: fixed; top: 0; left: 0; width: 260px; height: 100vh; background: #09090b; border-right: 1px solid #222; z-index: 9999; transform: translateX(-100%); transition: 0.3s ease; padding-top: 80px; }
        #sidebar.open { transform: translateX(0); }
        #overlay { position: fixed; inset: 0; background: rgba(0,0,0,0.8); z-index: 9998; display: none; backdrop-filter: blur(5px); }
        #overlay.show { display: block; }
        @media (min-width: 1024px) { #sidebar { transform: translateX(0); } #overlay { display: none !important; } }
        .menu-item { display: flex; align-items: center; gap: 15px; width: 100%; padding: 18px 25px; color: #666; font-size: 11px; font-weight: 800; text-transform: uppercase; cursor: pointer; border-left: 3px solid transparent; }
        .menu-item.active { color: #fff; background: #111; border-left-color: #c084fc; }
        .msg { padding: 10px; border-radius: 12px; font-size: 11px; margin-bottom: 8px; border: 1px solid #111; }
        .msg-ai { background: #1e1b4b; border-color: #312e81; color: #c7d2fe; }
        .msg-me { background: #2563eb; color: #fff; align-self: flex-end; }
    </style>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('open');
            document.getElementById('overlay').classList.toggle('show');
        }
        function switchTab(id) {
            document.querySelectorAll('.page-section').forEach(e => e.classList.add('hidden'));
            document.querySelectorAll('.menu-item').forEach(b => b.classList.remove('active'));
            document.getElementById('tab-' + id).classList.remove('hidden');
            document.getElementById('btn-' + id).classList.add('active');
            
            const sidebar = document.getElementById('sidebar');
            if (window.innerWidth < 1024 && sidebar.classList.contains('open')) {
                toggleSidebar();
            }
            window.scrollTo(0,0);
        }
    </script>
</head>
<body class="min-h-screen">
    <div id="overlay" onclick="toggleSidebar()"></div>

    <nav id="sidebar">
        <div class="px-6 mb-6"><h2 class="text-white font-black text-xl uppercase tracking-widest">HQ CONTROL</h2><p class="text-[10px] text-zinc-500">v81 Fixed</p></div>
        <div onclick="switchTab('dashboard')" id="btn-dashboard" class="menu-item active">üìä VEZ√âRL≈êPULT</div>
        <div onclick="switchTab('chat')" id="btn-chat" class="menu-item">ü§ñ R√ìKA AGYA</div>
        <div onclick="switchTab('users')" id="btn-users" class="menu-item">üë• TAGOK</div>
        <div onclick="switchTab('finance')" id="btn-finance" class="menu-item">üí∞ P√âNZ√úGY</div>
        <div class="absolute bottom-10 left-0 w-full px-6"><a href="/logout" class="block text-center border border-red-900/50 text-red-500 py-3 rounded-xl text-[10px] font-black uppercase">Kil√©p√©s</a></div>
    </nav>

    <header class="fixed top-0 left-0 w-full bg-black/90 border-b border-zinc-800 p-4 z-40 flex justify-between items-center h-[70px] lg:hidden">
        <button onclick="toggleSidebar()" class="text-white bg-zinc-900 px-3 py-2 rounded-lg border border-zinc-700 font-bold">‚ò∞</button>
        <span class="font-black text-white uppercase tracking-widest"><%= brandName %> HQ</span>
        <a href="/dashboard" class="text-[10px] font-bold text-purple-500 uppercase border border-purple-500 px-3 py-1 rounded-full">DASH ‚û§</a>
    </header>

    <main class="pt-[90px] lg:pt-[40px] px-4 pb-10 w-full lg:pl-[280px] max-w-4xl mx-auto">
        <div id="tab-dashboard" class="page-section">
            <div class="flex justify-between items-center mb-6">
                <h2 class="text-xl font-black text-white border-l-4 border-purple-500 pl-4 uppercase">Elemz√©sek</h2>
                <form action="/admin/run-robot" method="POST" onsubmit="this.querySelector('button').innerText='ü¶ä Szimatol√°s...'">
                    <button class="bg-white text-black px-6 py-3 rounded-xl font-black uppercase text-[10px]">üöÄ √öJ ELEMZ√âS</button>
                </form>
            </div>
            <% pendingTips.forEach(tip => { %>
                <div class="tech-card p-6 mb-4">
                    <p class="text-[10px] text-zinc-500 font-bold uppercase mb-2"><%= tip.date %></p>
                    <h3 class="text-xl font-black"><%= tip.match %></h3>
                    <p class="text-purple-400 font-bold mb-4"><%= tip.prediction %> (@<%= tip.odds %>)</p>
                    <div class="grid grid-cols-2 gap-4">
                        <form action="/admin/settle-tip" method="POST"><input type="hidden" name="tipId" value="<%= tip._id %>"><input type="hidden" name="status" value="win"><button class="w-full bg-green-900/40 text-green-500 py-3 rounded-xl font-black text-xs uppercase">NYER≈ê ‚úÖ</button></form>
                        <form action="/admin/settle-tip" method="POST"><input type="hidden" name="tipId" value="<%= tip._id %>"><input type="hidden" name="status" value="loss"><button class="w-full bg-red-900/40 text-red-500 py-3 rounded-xl font-black text-xs uppercase">VESZTETT ‚ùå</button></form>
                    </div>
                    <% if(!tip.isPublished) { %><form action="/admin/publish-tip" method="POST" class="mt-4"><input type="hidden" name="tipId" value="<%= tip._id %>"><button class="w-full bg-blue-600 text-white py-3 rounded-xl font-black text-xs uppercase">üì¢ PUBLIK√ÅL√ÅS</button></form><% } %>
                </div>
            <% }) %>
        </div>

        <div id="tab-chat" class="page-section hidden">
            <div class="tech-card p-4 h-[500px] flex flex-col">
                <div id="chat-win" class="flex-1 overflow-y-auto pr-2 mb-4">
                    <% chatHistory.forEach(msg => { %> <div class="msg msg-ai"><strong><%= msg.sender %>:</strong> <%= msg.text %></div> <% }) %>
                </div>
                <div class="flex gap-2">
                    <input type="text" id="chat-in" class="flex-1 bg-black border border-zinc-700 rounded-xl px-4 py-3 text-xs text-white outline-none" placeholder="Utas√≠t√°s magyarul..." onkeypress="if(event.key === 'Enter') talk()">
                    <button onclick="talk()" class="bg-purple-600 text-white px-5 py-3 rounded-xl font-bold">‚û§</button>
                </div>
            </div>
        </div>
    </main>
    <script>
        const win = document.getElementById('chat-win'); if(win) win.scrollTop = win.scrollHeight;
        async function talk() {
            const i = document.getElementById('chat-in'); if(!i.value) return;
            const msgText = i.value; i.value = '';
            win.innerHTML += `<div class="msg msg-me"><strong>F≈ën√∂k:</strong> ${msgText}</div>`;
            win.scrollTop = win.scrollHeight;
            try {
                const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})});
                const d = await r.json();
                win.innerHTML += `<div class="msg msg-ai"><strong>R√≥ka:</strong> ${d.reply}</div>`;
                win.scrollTop = win.scrollHeight;
            } catch (err) { console.error(err); }
        }
    </script>
</body>
</html>