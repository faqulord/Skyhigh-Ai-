<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8"><meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Owner HQ | <%= brandName %></title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <script>
        function toggleSidebar() {
            const sb = document.getElementById('sidebar');
            const ov = document.getElementById('overlay');
            if (sb.classList.contains('open')) { sb.classList.remove('open'); ov.classList.remove('show'); }
            else { sb.classList.add('open'); ov.classList.add('show'); }
        }
        function switchTab(id) {
            document.querySelectorAll('.page-section').forEach(e => e.classList.add('hidden'));
            document.querySelectorAll('.menu-item').forEach(b => b.classList.remove('active'));
            document.getElementById('tab-'+id).classList.remove('hidden');
            document.getElementById('btn-'+id).classList.add('active');
            toggleSidebar(); window.scrollTo(0,0);
        }
        function startAnalysis(form) {
            const btn = document.getElementById('analyzeBtn');
            btn.innerHTML = '<span class="inline-block animate-spin mr-2">ü¶ä</span> A R√≥ka szimatol... (Kb. 1 perc)';
            btn.classList.add('opacity-50', 'cursor-not-allowed');
        }
        function startRefine(btn) {
            btn.innerHTML = '‚è≥ T√∂m√∂r√≠t√©s...';
            btn.classList.add('opacity-50');
        }
    </script>
    <style>
        body { background: #000000; color: #fff; font-family: 'Inter', sans-serif; overflow-x: hidden; }
        .tech-card { background: #111; border: 1px solid #333; border-radius: 16px; margin-bottom: 20px; }
        .hidden { display: none !important; }
        
        #sidebar { position: fixed; top: 0; left: 0; width: 260px; height: 100vh; background: #09090b; border-right: 1px solid #333; z-index: 99999; transform: translateX(-100%); transition: 0.3s; padding-top: 80px; box-shadow: 10px 0 50px rgba(0,0,0,0.8); }
        #sidebar.open { transform: translateX(0); }
        #overlay { position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.8); backdrop-filter: blur(3px); z-index: 99998; display: none; }
        #overlay.show { display: block; }
        
        .menu-item { display: flex; align-items: center; gap: 15px; width: 100%; padding: 18px 25px; color: #888; font-size: 11px; font-weight: bold; text-transform: uppercase; border-bottom: 1px solid #1c1c1c; }
        .menu-item.active { color: #c084fc; border-left: 4px solid #c084fc; background: #18181b; }
        .menu-item svg { width: 18px; fill: currentColor; }
        
        .pulse-btn { animation: pulse 2s infinite; } @keyframes pulse { 0% { box-shadow: 0 0 0 0 rgba(168, 85, 247, 0.4); } 70% { box-shadow: 0 0 0 10px rgba(0,0,0,0); } 100% { box-shadow: 0 0 0 0 rgba(0,0,0,0); } }
        .gold-text { color: #fbbf24; text-shadow: 0 0 10px rgba(251, 191, 36, 0.5); }
        .orange-neon { color: #FF9F43; text-shadow: 0 0 5px rgba(255, 159, 67, 0.5); }
    </style>
</head>
<body class="min-h-screen">

    <div id="overlay" onclick="toggleSidebar()"></div>

    <nav id="sidebar">
        <div class="absolute top-6 left-6"><h2 class="text-white font-bold orbitron">MEN√ú</h2></div>
        <button onclick="switchTab('dashboard')" id="btn-dashboard" class="menu-item active"><svg viewBox="0 0 24 24"><path d="M3 13h8V3H3v10zm0 8h8v-6H3v6zm10 0h8V11h-8v10zm0-18v6h8V3h-8z"/></svg> VEZ√âRL≈êPULT</button>
        <button onclick="switchTab('chat')" id="btn-chat" class="menu-item"><svg viewBox="0 0 24 24"><path d="M20 2H4c-1.1 0-2 .9-2 2v18l4-4h14c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2z"/></svg> STRAT√âGIA CHAT</button>
        <button onclick="switchTab('marketing')" id="btn-marketing" class="menu-item"><svg viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1 15h-2v-6h2v6zm0-8h-2V7h2v2z"/></svg> MARKETING</button>
        <button onclick="switchTab('users')" id="btn-users" class="menu-item"><svg viewBox="0 0 24 24"><path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg> TAGOK</button>
        <button onclick="switchTab('finance')" id="btn-finance" class="menu-item"><svg viewBox="0 0 24 24"><path d="M11.8 10.9c-2.27-.59-3-1.2-3-2.15 0-1.09 1.01-1.85 2.7-1.85 1.78 0 2.44.85 2.5 2.1h2.21c-.07-1.72-1.12-3.3-3.21-3.81V3h-3v2.16c-1.94.42-3.5 1.68-3.5 3.61 0 2.31 1.91 3.46 4.7 4.13 2.5.6 3 1.48 3 2.41 0 .69-.49 1.79-2.7 1.79-2.06 0-2.87-.92-2.98-2.1h-2.2c.12 2.19 1.76 3.42 3.68 3.83V21h3v-2.15c1.95-.37 3.5-1.5 3.5-3.55 0-2.84-2.43-3.81-4.7-4.4z"/></svg> P√âNZ√úGY</button>
        <div class="absolute bottom-5 left-0 w-full text-center"><a href="/logout" class="text-red-500 text-xs font-bold uppercase border border-red-900/30 px-6 py-2 rounded bg-red-900/10">Kijelentkez√©s</a></div>
    </nav>

    <header class="fixed top-0 left-0 w-full bg-black/90 backdrop-blur border-b border-zinc-900 p-3 z-[5000] flex justify-between items-center h-[70px]">
        <div class="flex items-center gap-4">
            <button onclick="toggleSidebar()" class="text-white bg-zinc-900 border border-zinc-700 p-3 rounded-xl active:scale-95"><svg width="24" height="24" viewBox="0 0 24 24" fill="white"><path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/></svg></button>
            <span class="text-2xl">ü¶ä</span>
        </div>
        <div class="bg-yellow-900/20 px-3 py-1.5 rounded-full border border-yellow-500/60 shadow-[0_0_10px_rgba(234,179,8,0.3)]"><span class="text-[9px] font-black text-yellow-400 uppercase tracking-widest gold-text">SYSTEM OWNER</span></div>
        <a href="/dashboard" class="bg-zinc-900 text-white text-[10px] font-bold px-3 py-2 rounded-lg border border-zinc-600">DASH</a>
    </header>

    <main class="pt-[90px] px-4 pb-10 w-full max-w-3xl mx-auto">

        <div id="tab-dashboard" class="page-section">
            <h2 class="text-lg font-bold text-white mb-4 border-l-4 border-purple-500 pl-3">Vez√©rl≈ëpult</h2>
            <div class="tech-card p-5 mb-6 border-t-2 border-t-purple-500">
                <div class="flex justify-between items-start mb-4"><span class="text-[10px] font-bold text-zinc-500 uppercase">Mai Elemz√©s</span><span class="bg-zinc-800 text-zinc-400 text-[10px] px-2 py-0.5 rounded border border-zinc-700"><%= dbDate %></span></div>

                <% if (currentTip) { %>
                    <h3 class="text-xl font-black text-white mb-1"><%= currentTip.match %></h3>
                    <p class="text-xs text-purple-400 font-mono mb-4 font-bold"><%= currentTip.prediction %> (@<%= currentTip.odds %>)</p>
                    <div class="bg-zinc-900/50 p-3 rounded-lg border border-zinc-800 mb-6"><p class="text-[9px] text-zinc-500 font-bold uppercase mb-1">Jelent√©s:</p><p class="text-xs text-zinc-300 italic">"<%= currentTip.reasoning %>"</p></div>
                    
                    <% if (!currentTip.isPublished) { %>
                        <div class="border border-yellow-500/30 bg-yellow-500/10 p-4 rounded-xl text-center mb-4">
                            <p class="text-xs text-yellow-500 font-bold uppercase mb-3">‚ö†Ô∏è J√ìV√ÅHAGY√ÅSRA V√ÅR</p>
                            <form action="/admin/publish-tip" method="POST"><input type="hidden" name="tipId" value="<%= currentTip._id %>"><button class="w-full bg-yellow-500 text-black py-4 rounded-xl font-black uppercase text-xs pulse-btn">üì¢ PUBLIK√ÅL√ÅS</button></form>
                            <form action="/admin/delete-today" method="POST" class="mt-4"><button class="text-[10px] text-red-500 hover:text-red-300 uppercase font-bold border-b border-red-500 pb-1" onclick="return confirm('Biztos t√∂rl√∂d? √öjra kell elemezni mindent!')">üóëÔ∏è TIPP ELDOB√ÅSA & √öJRAKEZD√âS</button></form>
                        </div>
                    <% } else { %>
                        <div class="bg-green-500/10 border border-green-500/30 p-2 rounded mb-4 text-center"><p class="text-[10px] text-green-500 font-bold uppercase">‚úÖ √âLES√çTVE</p></div>
                        
                        <form action="/admin/refine-text" method="POST" class="mb-4" onsubmit="startRefine(this.querySelector('button'))">
                            <input type="hidden" name="tipId" value="<%= currentTip._id %>">
                            <button class="w-full bg-zinc-800 text-white border border-zinc-700 py-3 rounded-xl font-bold text-[10px] uppercase hover:bg-zinc-700 transition flex justify-center items-center gap-2">
                                <span>üìù</span> SZ√ñVEG JAV√çT√ÅSA (R√ñVID + D√ÅTUM)
                            </button>
                        </form>

                        <p class="text-[9px] text-zinc-500 font-bold uppercase mb-2 text-center tracking-widest">üí∞ Profit Elsz√°mol√°sa a Bankokban</p>
                        <div class="grid grid-cols-2 gap-3">
                            <form action="/admin/settle-tip" method="POST"><input type="hidden" name="status" value="win"><button class="w-full bg-zinc-800 border border-zinc-700 text-green-500 py-3 rounded-xl font-bold text-xs uppercase hover:bg-green-900/30">WIN ‚úÖ</button></form>
                            <form action="/admin/settle-tip" method="POST"><input type="hidden" name="status" value="loss"><button class="w-full bg-zinc-800 border border-zinc-700 text-red-500 py-3 rounded-xl font-bold text-xs uppercase hover:bg-red-900/30">LOSS ‚ùå</button></form>
                        </div>
                        <form action="/admin/delete-today" method="POST" class="mt-6 text-center"><button class="text-[9px] text-red-500 hover:text-red-300 uppercase font-bold border-b border-red-500 pb-1" onclick="return confirm('Biztos? Leveszed a tippet a Dashboardr√≥l!')">üóëÔ∏è V√âSZHELYZET: MAI TIPP T√ñRL√âSE</button></form>
                    <% } %>
                <% } else { %>
                    <div class="text-center py-10">
                        <div class="w-16 h-16 bg-zinc-900 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl animate-pulse text-purple-500">üß†</div>
                        <p class="text-xs text-zinc-500 mb-6">Nincs akt√≠v elemz√©s.</p>
                        <form action="/admin/run-robot" method="POST" onsubmit="startAnalysis(this)">
                            <button id="analyzeBtn" class="bg-white text-black px-8 py-4 rounded-xl font-black uppercase text-xs shadow-xl hover:scale-105 transition">
                                üöÄ Elemz√©s Ind√≠t√°sa
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>

        <div id="tab-marketing" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4 border-l-4 border-pink-500 pl-3">Marketing</h2>
            <div class="tech-card p-5 mb-6 border border-pink-900/30">
                <div class="flex items-center gap-2 mb-4"><span class="text-xl">üì±</span><h3 class="text-xs font-bold text-white uppercase">Insta Poszt</h3></div>
                <div class="flex gap-2 mb-4"><button onclick="generateSocial('win')" class="flex-1 bg-zinc-800 text-green-400 border border-green-900/30 py-3 rounded-lg text-[10px] font-bold uppercase">üèÜ Nyer≈ë</button><button onclick="generateSocial('motivation')" class="flex-1 bg-zinc-800 text-pink-400 border border-pink-900/30 py-3 rounded-lg text-[10px] font-bold uppercase">üî• Motiv√°ci√≥</button></div>
                <textarea id="social-result" rows="4" class="w-full bg-black border border-zinc-800 rounded-lg p-3 text-xs text-white focus:border-pink-500 outline-none" placeholder="Gener√°lt sz√∂veg..."></textarea>
                <button onclick="copySocial()" class="w-full bg-pink-600 text-white mt-2 py-3 rounded-lg text-[10px] font-bold uppercase hover:bg-pink-500">M√°sol√°s</button>
            </div>
        </div>

        <div id="tab-users" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4 border-l-4 border-green-500 pl-3">Tagok</h2>
            <div class="space-y-2">
                <% users.forEach(u => { %> 
                    <div class="tech-card p-3 flex justify-between items-center">
                        <div>
                            <p class="text-xs font-bold text-white"><%= u.fullname %></p>
                            <p class="text-[9px] text-zinc-500"><%= u.email %></p>
                            
                            <p class="text-[9px] orange-neon font-black mt-1">
                                Bank: <%= (u.currentBankroll || u.startingCapital || 0).toLocaleString() %> Ft
                            </p>

                            <% if(u.licenseExpiresAt && u.hasLicense) { %>
                                <p class="text-[9px] text-purple-400 font-bold mt-1">Lej√°rat: <%= new Date(u.licenseExpiresAt).toLocaleDateString('hu-HU') %></p>
                            <% } %>
                        </div>
                        <% if (!u.hasLicense) { %> 
                            <form action="/admin/activate-user" method="POST">
                                <input type="hidden" name="userId" value="<%= u._id %>">
                                <button class="bg-green-600 text-white text-[9px] px-3 py-1.5 rounded-lg font-bold border border-green-400 hover:bg-green-500 transition shadow-[0_0_10px_rgba(74,222,128,0.3)]">Aktiv√°l (+30 Nap)</button>
                            </form> 
                        <% } else { %> 
                            <div class="text-right">
                                <span class="text-green-500 text-[9px] font-bold border border-green-500/30 px-2 py-1 rounded block mb-1">Akt√≠v</span> 
                            </div>
                        <% } %>
                    </div> 
                <% }) %>
            </div>
        </div>

        <div id="tab-chat" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4 border-l-4 border-fuchsia-500 pl-3">Strat√©gia</h2>
            <div class="tech-card p-4">
                <div id="chat-win" class="chat-container overflow-y-auto mb-4 custom-scrollbar" style="height:350px"><% chatHistory.forEach(msg => { %> <div class="msg <%= msg.sender === 'F≈ën√∂k' ? 'msg-me' : 'msg-ai' %>"><strong><%= msg.sender %>:</strong> <%= msg.text %></div> <% }) %></div>
                <div class="flex gap-2"><input type="text" id="chat-in" class="flex-1 bg-black border border-zinc-800 rounded-xl px-4 py-3 text-xs text-white focus:outline-none focus:border-purple-500" placeholder="√çrj..."><button onclick="talk()" class="bg-purple-600 text-white px-4 py-3 rounded-xl font-bold">‚û§</button></div>
            </div>
        </div>

        <div id="tab-finance" class="page-section hidden">
            <h2 class="text-lg font-bold text-white mb-4 border-l-4 border-blue-500 pl-3">P√©nz√ºgy</h2>
            <div class="tech-card p-4 mb-6 border border-purple-500/30 bg-purple-900/10"><div class="flex justify-between items-center mb-3"><h3 class="text-xs font-bold text-white uppercase">Havi Z√°r√°s</h3></div><% if(stats && stats.length > 0) { %> <% stats.forEach(stat => { %> <div class="flex justify-between items-center bg-black/50 p-3 rounded-xl mb-2 border border-zinc-800"><div><p class="text-xs font-bold text-white"><%= stat.month %></p><p class="text-[9px] text-zinc-500"><%= stat.totalTips %> tipp</p></div><% if (!stat.isPublished) { %> <form action="/admin/publish-stat" method="POST"><input type="hidden" name="statId" value="<%= stat._id %>"><button class="bg-blue-600 text-white text-[9px] px-3 py-2 rounded-lg font-bold uppercase hover:bg-blue-500">Publik√°l</button></form> <% } else { %> <span class="text-green-500 text-[9px] font-bold">Publik√°lva ‚úÖ</span> <% } %></div> <% }) %> <% } else { %> <p class="text-[10px] text-zinc-500 italic">Nincs adat.</p> <% } %></div>
        </div>

    </main>
    <script>
        const win = document.getElementById('chat-win'); if(win) win.scrollTop = win.scrollHeight;
        async function talk() { const i = document.getElementById('chat-in'); if(!i.value) return; const msgText = i.value; i.value = ''; win.innerHTML += `<div class="msg msg-me"><strong>F≈ën√∂k:</strong> ${msgText}</div>`; win.scrollTop = win.scrollHeight; try { const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})}); const d = await r.json(); win.innerHTML += `<div class="msg msg-ai"><strong>R√≥ka:</strong> ${d.reply}</div>`; win.scrollTop = win.scrollHeight; } catch (err) { console.error(err); } }
        async function generateSocial(type) { const btn = event.target; const originalText = btn.innerText; btn.innerText = "‚è≥ Gener√°l√°s..."; try { const res = await fetch('/admin/social-content', { method: 'POST', headers: {'Content-Type': 'application/json'}, body: JSON.stringify({ type }) }); const data = await res.json(); document.getElementById('social-result').value = data.content; } catch(e) { alert('Hiba!'); } btn.innerText = originalText; }
        function copySocial() { const copyText = document.getElementById("social-result"); copyText.select(); document.execCommand("copy"); alert("Sz√∂veg m√°solva!"); }
        async function draftEmail() { const topic = document.getElementById('email-topic').value; if(!topic) return alert("√çrj t√©m√°t!"); try { const res = await fetch('/admin/draft-email', { method: 'POST', headers: { 'Content-Type': 'application/json' }, body: JSON.stringify({ topic }) }); const data = await res.json(); const lines = data.draft.split('\n'); let subject = "H√≠rlev√©l"; let body = data.draft; if(lines[0].toLowerCase().includes("t√°rgy")) { subject = lines[0].replace(/T√°rgy:/i, '').trim(); body = lines.slice(1).join('\n').trim(); } document.getElementById('email-subject').value = subject; document.getElementById('email-body').value = body; } catch(e) { alert("AI Hiba"); } }
    </script>
</body>
</html>