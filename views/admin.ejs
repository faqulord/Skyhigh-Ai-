<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <title>Skyhigh | Pénzügyi Központ</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>body { background: #000; color: white; padding: 20px; font-family: sans-serif; }</style>
</head>
<body class="bg-black text-white p-6 md:p-10">
    
    <div class="max-w-7xl mx-auto">
        <div class="flex justify-between items-center mb-10">
            <div>
                <h1 class="text-3xl font-black text-white uppercase italic">Igazgatói <span class="text-purple-500">Dashboard</span></h1>
                <p class="text-xs text-zinc-500 uppercase tracking-widest">Valós idejű pénzügyi adatok</p>
            </div>
            <a href="/dashboard" class="bg-zinc-800 hover:bg-zinc-700 px-6 py-3 rounded-lg text-xs uppercase font-bold">Vissza a terminálhoz</a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-10">
            
            <div class="bg-[#0f0f11] border border-zinc-800 p-6 rounded-2xl">
                <div class="flex justify-between items-start mb-4">
                    <p class="text-xs text-zinc-500 uppercase font-bold">Összes Stripe Bevétel</p>
                    <i class="fas fa-dollar-sign text-green-500 bg-green-900/20 p-2 rounded-lg"></i>
                </div>
                <% 
                    let totalRevenue = 0;
                    users.forEach(u => totalRevenue += (u.totalSpent || 0));
                %>
                <h2 class="text-3xl font-black text-white"><%= totalRevenue.toLocaleString() %> Ft</h2>
                <p class="text-[10px] text-green-500 mt-2">+12% a múlt hónaphoz képest</p>
            </div>

            <div class="bg-[#0f0f11] border border-zinc-800 p-6 rounded-2xl">
                <div class="flex justify-between items-start mb-4">
                    <p class="text-xs text-zinc-500 uppercase font-bold">Aktív Előfizetők</p>
                    <i class="fas fa-users text-purple-500 bg-purple-900/20 p-2 rounded-lg"></i>
                </div>
                <% 
                    const activeUsers = users.filter(u => u.hasLicense).length;
                %>
                <h2 class="text-3xl font-black text-white"><%= activeUsers %></h2>
                <p class="text-[10px] text-zinc-500 mt-2">Összes regisztrált: <%= users.length %></p>
            </div>

            <div class="bg-[#0f0f11] border border-zinc-800 p-6 rounded-2xl">
                <div class="flex justify-between items-start mb-4">
                    <p class="text-xs text-zinc-500 uppercase font-bold">Új tagok (Ma)</p>
                    <i class="fas fa-user-plus text-blue-500 bg-blue-900/20 p-2 rounded-lg"></i>
                </div>
                <h2 class="text-3xl font-black text-white">
                    <%= users.filter(u => new Date(u.date).toDateString() === new Date().toDateString()).length %>
                </h2>
            </div>
            
        </div>

        <div class="bg-[#0f0f11] border border-zinc-800 rounded-2xl overflow-hidden">
            <div class="p-6 border-b border-zinc-800 flex justify-between items-center">
                <h3 class="font-bold text-white uppercase">Ügyféladatbázis</h3>
                <span class="text-xs text-zinc-500"><i class="fab fa-stripe mr-1"></i> Stripe szinkronizálva</span>
            </div>
            <div class="overflow-x-auto">
                <table class="w-full text-left text-sm">
                    <thead class="bg-zinc-900/50 text-zinc-500 uppercase text-[10px]">
                        <tr>
                            <th class="p-4">Ügyfél Neve</th>
                            <th class="p-4">Email</th>
                            <th class="p-4">Csomag</th>
                            <th class="p-4">Lejárat</th>
                            <th class="p-4">Költés (HUF)</th>
                            <th class="p-4">Státusz</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-zinc-800 text-zinc-300">
                        <% users.forEach(user => { %>
                        <tr class="hover:bg-zinc-900/30 transition">
                            <td class="p-4 font-bold text-white"><%= user.fullname %></td>
                            <td class="p-4 text-xs"><%= user.email %></td>
                            <td class="p-4 uppercase text-xs font-bold text-purple-400">
                                <%= user.licenseType === 'none' ? '-' : user.licenseType %>
                            </td>
                            <td class="p-4 text-xs">
                                <%= user.licenseExpires ? user.licenseExpires.toISOString().substring(0,10) : '-' %>
                            </td>
                            <td class="p-4 font-mono text-green-500">
                                <%= user.totalSpent ? user.totalSpent.toLocaleString() : '0' %>
                            </td>
                            <td class="p-4">
                                <% if (user.hasLicense) { %>
                                    <span class="bg-green-500/10 text-green-500 px-2 py-1 rounded text-[10px] font-bold uppercase">AKTÍV</span>
                                <% } else { %>
                                    <span class="bg-zinc-800 text-zinc-500 px-2 py-1 rounded text-[10px] font-bold uppercase">INAKTÍV</span>
                                <% } %>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</body>
</html>