    <script>
        // Oldal v√°lt√≥ logika (SPA √©rz√©s)
        function showPage(pageId) {
            // Minden oldalt elrejt√ºnk
            ['dashboard', 'communication', 'users', 'finance'].forEach(id => {
                document.getElementById('page-' + id).classList.add('hidden');
                document.getElementById('btn-' + id).classList.remove('active');
            });

            // Kiv√°lasztottat megjelen√≠tj√ºk
            document.getElementById('page-' + pageId).classList.remove('hidden');
            document.getElementById('btn-' + pageId).classList.add('active');
        }

        // Chat logika
        const win = document.getElementById('chat-win'); 
        if(win) win.scrollTop = win.scrollHeight;

        async function talk() {
            const i = document.getElementById('chat-in'); 
            if(!i.value) return;
            const msgText = i.value; i.value = '';
            
            win.innerHTML += `<div class="flex w-full"><div class="chat-bubble chat-boss"><strong>F≈ën√∂k:</strong> ${msgText}</div></div>`;
            win.scrollTop = win.scrollHeight;
            
            try {
                const r = await fetch('/admin/chat', { method:'POST', headers:{'Content-Type':'application/json'}, body:JSON.stringify({message: msgText})});
                const d = await r.json(); 
                win.innerHTML += `<div class="flex w-full"><div class="chat-bubble chat-ai"><strong>R√≥ka:</strong> ${d.reply}</div></div>`;
                win.scrollTop = win.scrollHeight;
            } catch (err) { console.error(err); }
        }

        // Email AI logika
        async function draftEmail() {
            const topic = document.getElementById('email-topic').value;
            if(!topic) return alert("√çrj be egy t√©m√°t!");
            
            const btn = document.getElementById('draft-btn');
            btn.innerHTML = "√çr√°s..."; btn.classList.add('loading');

            try {
                const res = await fetch('/admin/draft-email', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
       