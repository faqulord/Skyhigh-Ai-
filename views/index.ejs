<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Skyhigh AI | The Future of Wealth</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;900&display=swap');
        body { font-family: 'Inter', sans-serif; background-color: #000; color: #fff; scroll-behavior: smooth; }
        .startup-card { background: #0a0a0a; border: 1px solid #1a1a1a; border-radius: 24px; }
        .accent-gradient { background: linear-gradient(135deg, #a855f7 0%, #22c55e 100%); }
        .green-button { background: #22c55e; color: #000; font-weight: 800; border-radius: 14px; transition: all 0.3s; }
        .green-button:active { transform: scale(0.95); }
        .slider-track { transition: all 0.6s cubic-bezier(0.23, 1, 0.32, 1); }
        .active-dot { width: 24px !important; background: #22c55e !important; }
        .robot-glow { filter: drop-shadow(0 0 10px rgba(168, 85, 247, 0.5)); }
    </style>
</head>
<body>

    <nav class="fixed top-0 w-full z-50 bg-black/80 backdrop-blur-md border-b border-white/5 px-6 py-4 flex justify-between items-center">
        <div class="flex items-center gap-2">
            <i class="fas fa-robot text-purple-500 robot-glow"></i>
            <span class="font-black tracking-tighter text-xl">SKYHIGH</span>
        </div>
        <button class="text-[10px] font-bold tracking-widest uppercase border border-white/10 px-4 py-2 rounded-lg">Sign In</button>
    </nav>

    <section class="pt-32 pb-12 px-6">
        <div class="overflow-hidden relative">
            <div id="slider" class="flex slider-track">
                <div class="min-w-full">
                    <h1 class="text-4xl font-black tracking-tighter mb-4 leading-none uppercase">A fegyelem <br><span class="text-green-500">algoritmusa.</span></h1>
                    <p class="text-gray-500 text-sm leading-relaxed max-w-[280px]">A Skyhigh AI kiiktatja az emberi hibát. Míg mások dühből fogadnak, a gép csak tiszta matematikát lát.</p>
                </div>
                <div class="min-w-full">
                    <h1 class="text-4xl font-black tracking-tighter mb-4 leading-none uppercase">Vagyonvédelmi <br><span class="text-purple-500">pajzs.</span></h1>
                    <p class="text-gray-500 text-sm leading-relaxed max-w-[280px]">Veszteséges széria esetén a szoftver azonnal visszaveszi a tétet a biztonság érdekében. A tőkéd az első.</p>
                </div>
                <div class="min-w-full">
                    <h1 class="text-4xl font-black tracking-tighter mb-4 leading-none uppercase">Személyi <br><span class="text-white">bookmaker.</span></h1>
                    <p class="text-gray-500 text-sm leading-relaxed max-w-[280px]">Nem csak egy szoftver. A Skyhigh AI a digitális asszisztensed, aki érted dolgozik, nem ellened.</p>
                </div>
            </div>
            <div class="flex gap-2 mt-8">
                <div id="dot0" class="h-1 w-4 rounded-full bg-zinc-800 transition-all active-dot"></div>
                <div id="dot1" class="h-1 w-4 rounded-full bg-zinc-800 transition-all"></div>
                <div id="dot2" class="h-1 w-4 rounded-full bg-zinc-800 transition-all"></div>
            </div>
        </div>
    </section>

    <section class="px-6 py-6">
        <div class="startup-card p-8">
            <div class="flex justify-between items-center mb-10">
                <span class="text-[10px] font-bold tracking-widest text-zinc-500 uppercase">Vagyonépítési terv</span>
                <i class="fas fa-chart-line text-green-500"></i>
            </div>
            
            <div class="space-y-10">
                <div class="relative">
                    <span id="tokeValue" class="text-3xl font-black block mb-4">100.000 Ft</span>
                    <input type="range" min="50000" max="1000000" step="10000" value="100000" class="w-full h-1 bg-zinc-800 rounded-full appearance-none accent-green-500" id="tokeRange">
                </div>

                <div class="flex gap-2">
                    <button onclick="setTerm(6)" id="term6" class="flex-1 py-3 rounded-xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase transition-all">6 Hónap</button>
                    <button onclick="setTerm(12)" id="term12" class="flex-1 py-3 rounded-xl border border-zinc-800 text-[10px] font-black text-zinc-500 uppercase transition-all">12 Hónap</button>
                </div>

                <div class="pt-8 border-t border-zinc-900">
                    <span class="text-[10px] text-zinc-500 uppercase font-bold tracking-widest block mb-1">Ciklus végi egyenleg</span>
                    <div id="eredmeny" class="text-5xl font-black text-white tracking-tighter italic">450.000 Ft</div>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 py-6 pb-24">
        <div class="startup-card p-8 relative overflow-hidden">
            <div class="absolute top-0 right-0 p-6 opacity-10">
                <i class="fas fa-robot text-6xl text-purple-500"></i>
            </div>
            <h3 class="text-xl font-black mb-1 uppercase tracking-tighter">Havi Licenc</h3>
            <p class="text-[10px] text-zinc-500 uppercase tracking-widest mb-8">Full AI Asszisztens</p>
            
            <div class="flex items-baseline gap-2 mb-10">
                <span class="text-5xl font-black">20.000 Ft</span>
                <span class="text-xs text-zinc-600">/hó</span>
            </div>

            <ul class="space-y-4 mb-10">
                <li class="flex items-center gap-3 text-[11px] font-semibold text-zinc-400">
                    <i class="fas fa-check text-green-500"></i> DINAMIKUS TŐKEMENEDZSMENT
                </li>
                <li class="flex items-center gap-3 text-[11px] font-semibold text-zinc-400">
                    <i class="fas fa-check text-green-500"></i> PROGRESS SAVE TECHNOLÓGIA
                </li>
                <li class="flex items-center gap-3 text-[11px] font-semibold text-zinc-400">
                    <i class="fas fa-check text-green-500"></i> NAPI 1 MASTER AI SZELEKCIÓ
                </li>
            </ul>

            <button class="green-button w-full py-5 text-sm uppercase tracking-widest shadow-lg shadow-green-500/20">
                Licenc aktiválása
            </button>
        </div>
    </section>

    <div class="text-center pb-10 opacity-20">
        <p class="text-[8px] font-bold tracking-[0.5em] uppercase">Skyhigh • Architect: faqubelord</p>
    </div>

    <script>
        // SLIDER LOGIC
        let currentSlide = 0;
        const slider = document.getElementById('slider');
        function nextSlide() {
            currentSlide = (currentSlide + 1) % 3;
            slider.style.transform = `translateX(-${currentSlide * 100}%)`;
            for(let i=0; i<3; i++) {
                document.getElementById('dot'+i).classList.toggle('active-dot', i === currentSlide);
            }
        }
        setInterval(nextSlide, 5000);

        // CALC LOGIC
        const range = document.getElementById('tokeRange');
        const tokeDisplay = document.getElementById('tokeValue');
        const eredmeny = document.getElementById('eredmeny');
        let currentTerm = 6;

        function updateCalc() {
            const val = parseInt(range.value);
            tokeDisplay.innerText = val.toLocaleString() + ' Ft';
            const multiplier = currentTerm === 6 ? 4.5 : 14;
            const final = Math.floor(val * multiplier);
            eredmeny.innerText = final.toLocaleString() + ' Ft';
        }

        function setTerm(months) {
            currentTerm = months;
            document.getElementById('term6').classList.toggle('bg-green-500/10', months === 6);
            document.getElementById('term6').classList.toggle('border-green-500', months === 6);
            document.getElementById('term6').classList.toggle('text-white', months === 6);
            
            document.getElementById('term12').classList.toggle('bg-green-500/10', months === 12);
            document.getElementById('term12').classList.toggle('border-green-500', months === 12);
            document.getElementById('term12').classList.toggle('text-white', months === 12);
            updateCalc();
        }

        range.addEventListener('input', updateCalc);
        updateCalc();
    </script>
</body>
</html>