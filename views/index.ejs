<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Skyhigh AI | Advanced Capital Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;700;900&display=swap');
        body { font-family: 'Inter', sans-serif; background-color: #000; color: #fff; scroll-behavior: smooth; }
        
        /* Startup Glassmorphism */
        .bento-card { background: #080808; border: 1px solid #141414; border-radius: 28px; transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275); }
        .bento-card:hover { border-color: #22c55e; transform: translateY(-5px); }
        
        /* Custom Capital Selector */
        .chip-active { background: #22c55e; color: #000; border-color: #22c55e; }
        .chip-inactive { background: transparent; border: 1px solid #1a1a1a; color: #555; }
        
        .purple-glow { filter: drop-shadow(0 0 15px rgba(168, 85, 247, 0.6)); }
        .green-glow { text-shadow: 0 0 20px rgba(34, 197, 94, 0.5); }
        
        .cta-button { background: linear-gradient(90deg, #22c55e, #16a34a); color: #000; font-weight: 900; letter-spacing: 1px; }
    </style>
</head>
<body class="selection:bg-green-500 selection:text-black">

    <nav class="fixed top-0 w-full z-50 bg-black/60 backdrop-blur-xl border-b border-white/5 px-8 py-5 flex justify-between items-center">
        <div class="flex items-center gap-3">
            <i class="fas fa-robot text-purple-500 text-2xl purple-glow"></i>
            <span class="font-black tracking-tighter text-2xl italic">SKYHIGH<span class="text-green-500">.AI</span></span>
        </div>
        <button class="text-[10px] font-bold tracking-[0.2em] border border-white/10 px-5 py-2.5 rounded-full uppercase hover:bg-white hover:text-black transition">Access Portal</button>
    </nav>

    <header class="pt-32 pb-16 px-8 max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-zinc-900 border border-zinc-800 mb-8">
            <span class="relative flex h-2 w-2">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-green-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-2 w-2 bg-green-500"></span>
            </span>
            <span class="text-[9px] font-bold tracking-widest text-zinc-400 uppercase">System Status: Optimal</span>
        </div>
        <h1 class="text-5xl md:text-7xl font-black tracking-tighter mb-8 leading-[0.9] uppercase">
            A pénz nem alszik. <br><span class="text-green-500 green-glow">Az AI sem.</span>
        </h1>
        <p class="text-zinc-500 text-lg md:text-xl font-light mb-12">
            Hagyd abba a reménykedést. A sportfogadás tiszta matematika, ha a megfelelő eszköz van a kezedben. Ismerd meg a szoftvert, ami <span class="text-white font-semibold italic">helyetted gondolkodik</span>.
        </p>
    </header>

    <section class="px-6 py-12 max-w-5xl mx-auto">
        <div class="bento-card p-10 bg-gradient-to-b from-[#0c0c0c] to-black border-zinc-800">
            <div class="flex flex-col md:flex-row justify-between gap-10">
                <div class="flex-1">
                    <h3 class="text-xs font-bold text-zinc-500 uppercase tracking-[0.3em] mb-8">Tőkebeállítás</h3>
                    <div class="grid grid-cols-2 md:grid-cols-4 gap-3 mb-8">
                        <button onclick="setCapital(100000)" id="cap100" class="chip-active py-4 rounded-2xl text-xs font-black transition-all">100K</button>
                        <button onclick="setCapital(250000)" id="cap250" class="chip-inactive py-4 rounded-2xl text-xs font-black transition-all">250K</button>
                        <button onclick="setCapital(500000)" id="cap500" class="chip-inactive py-4 rounded-2xl text-xs font-black transition-all">500K</button>
                        <button onclick="setCapital(1000000)" id="cap1m" class="chip-inactive py-4 rounded-2xl text-xs font-black transition-all">1M</button>
                    </div>
                    <div class="flex gap-4">
                        <button onclick="setTerm(6)" id="term6" class="flex-1 py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase tracking-widest transition-all">6 Hónap</button>
                        <button onclick="setTerm(12)" id="term12" class="flex-1 py-4 rounded-2xl border border-zinc-800 text-[10px] font-black text-zinc-600 uppercase tracking-widest transition-all">12 Hónap</button>
                    </div>
                </div>
                
                <div class="md:w-1/3 flex flex-col justify-end text-center md:text-right">
                    <span class="text-[10px] text-zinc-500 uppercase font-black tracking-widest mb-2">Várható Vagyonérték</span>
                    <div id="eredmeny" class="text-6xl font-black text-white tracking-tighter italic leading-none">450.000 <span class="text-green-500 text-2xl">Ft</span></div>
                    <p class="text-[9px] text-zinc-700 mt-6 uppercase tracking-widest">A számítások a Skyhigh AI tőkevédelmi protokollján alapulnak.</p>
                </div>
            </div>
        </div>
    </section>

    <section class="px-6 py-12 max-w-6xl mx-auto grid md:grid-cols-3 gap-6">
        <div class="bento-card p-8">
            <div class="h-12 w-12 bg-purple-500/10 rounded-2xl flex items-center justify-center mb-6">
                <i class="fas fa-brain text-purple-500 text-xl"></i>
            </div>
            <h4 class="text-lg font-black uppercase tracking-tighter mb-4 leading-none">Zéró <br>Érzelem</h4>
            <p class="text-zinc-500 text-sm leading-relaxed italic">A bukás fő oka a stressz és a remény. A Skyhigh AI-nak nincs pulzusa. Csak hideg adatokkal dolgozik, hogy te mindig a jó oldalon állj.</p>
        </div>

        <div class="bento-card p-8">
            <div class="h-12 w-12 bg-green-500/10 rounded-2xl flex items-center justify-center mb-6">
                <i class="fas fa-shield-alt text-green-500 text-xl"></i>
            </div>
            <h4 class="text-lg font-black uppercase tracking-tighter mb-4 leading-none">Vagyonvédelmi <br>Pajzs</h4>
            <p class="text-zinc-500 text-sm leading-relaxed italic">A profit másodlagos – a biztonság az első. Szoftverünk minden nap újraszámolja a kockázatot, hogy a tőkéd sose kerüljön veszélybe.</p>
        </div>

        <div class="bento-card p-8">
            <div class="h-12 w-12 bg-white/5 rounded-2xl flex items-center justify-center mb-6">
                <i class="fas fa-history text-white text-xl"></i>
            </div>
            <h4 class="text-lg font-black uppercase tracking-tighter mb-4 leading-none">Progress <br>Save</h4>
            <p class="text-zinc-500 text-sm leading-relaxed italic">Nem egy szerencsejáték vagyunk. Ez egy folyamat. Ha megállsz, a gép menti a státuszod. Ha visszatérsz, onnan folytatod az évet.</p>
        </div>
    </section>

    <section class="px-6 py-12 pb-24 max-w-2xl mx-auto">
        <div class="bento-card p-12 relative overflow-hidden text-center border-green-500/30">
            <div class="absolute -top-10 -right-10 opacity-5">
                <i class="fas fa-robot text-[15rem]"></i>
            </div>
            <h2 class="font-black text-4xl mb-2 uppercase italic tracking-tighter">Havi Licenc</h2>
            <p class="text-[10px] text-zinc-500 uppercase tracking-[0.4em] mb-12">Executive AI Access</p>
            
            <div class="text-7xl font-black mb-12 tracking-tighter">20.000<span class="text-2xl text-zinc-700 ml-2">Ft/hó</span></div>
            
            <ul class="text-left space-y-6 mb-16 max-w-xs mx-auto">
                <li class="flex items-center gap-4 text-xs font-bold text-zinc-300 uppercase tracking-widest">
                    <i class="fas fa-check text-green-500"></i> Skyhigh Dashboard v2
                </li>
                <li class="flex items-center gap-4 text-xs font-bold text-zinc-300 uppercase tracking-widest">
                    <i class="fas fa-check text-green-500"></i> Napi 1 Master Szelekció
                </li>
                <li class="flex items-center gap-4 text-xs font-bold text-zinc-300 uppercase tracking-widest">
                    <i class="fas fa-check text-green-500"></i> Dinamikus Bankroll AI
                </li>
            </ul>

            <button class="cta-button w-full py-6 rounded-3xl text-sm uppercase tracking-[0.2em] shadow-[0_0_30px_rgba(34,197,94,0.3)] transition-all active:scale-95">
                Aktiválás Most
            </button>
        </div>
    </section>

    <div class="fixed bottom-6 right-8 text-[7px] text-zinc-700 uppercase tracking-[0.8em] font-black z-10 pointer-events-none">
        Architect: faqubelord
    </div>

    <script>
        let currentCapital = 100000;
        let currentTerm = 6;

        const eredmeny = document.getElementById('eredmeny');

        function setCapital(amount) {
            currentCapital = amount;
            // Update UI Chips
            const ids = ['cap100', 'cap250', 'cap500', 'cap1m'];
            const targetId = amount === 100000 ? 'cap100' : amount === 250000 ? 'cap250' : amount === 500000 ? 'cap500' : 'cap1m';
            
            ids.forEach(id => {
                const el = document.getElementById(id);
                if(id === targetId) {
                    el.classList.add('chip-active');
                    el.classList.remove('chip-inactive');
                } else {
                    el.classList.remove('chip-active');
                    el.classList.add('chip-inactive');
                }
            });
            updateCalc();
        }

        function setTerm(months) {
            currentTerm = months;
            document.getElementById('term6').className = months === 6 ? 'flex-1 py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase tracking-widest transition-all' : 'flex-1 py-4 rounded-2xl border border-zinc-800 text-[10px] font-black text-zinc-600 uppercase tracking-widest transition-all';
            document.getElementById('term12').className = months === 12 ? 'flex-1 py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase tracking-widest transition-all' : 'flex-1 py-4 rounded-2xl border border-zinc-800 text-[10px] font-black text-zinc-600 uppercase tracking-widest transition-all';
            updateCalc();
        }

        function updateCalc() {
            const multiplier = currentTerm === 6 ? 4.5 : 14;
            const final = Math.floor(currentCapital * multiplier);
            eredmeny.innerHTML = final.toLocaleString() + ' <span class="text-green-500 text-2xl">Ft</span>';
        }

        updateCalc();
    </script>
</body>
</html>