<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Skyhigh AI | Személyi Bookmaker</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@900&family=Plus+Jakarta+Sans:wght@300;400;600;800&display=swap');
        body { font-family: 'Plus Jakarta Sans', sans-serif; background-color: #020202; color: #fff; overflow-x: hidden; }
        .font-robot { font-family: 'Orbitron', sans-serif; }
        .green-glow { text-shadow: 0 0 20px rgba(34, 197, 94, 0.8); }
        .purple-robot { color: #a855f7; filter: drop-shadow(0 0 15px rgba(168, 85, 247, 0.9)); }
        .glass-dark { background: rgba(15, 15, 15, 0.7); backdrop-filter: blur(20px); border: 1px solid rgba(255, 255, 255, 0.05); }
        .fade-in { animation: fadeIn 0.8s ease-in-out; }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(10px); } to { opacity: 1; transform: translateY(0); } }
    </style>
</head>
<body class="bg-[radial-gradient(circle_at_50%_-20%,#1e1b4b_0%,#020202_70%)]">

    <nav class="sticky top-0 z-50 glass-dark px-6 py-4 flex justify-between items-center border-b border-white/5">
        <div class="flex items-center gap-2">
            <i class="fas fa-robot purple-robot text-2xl"></i>
            <span class="font-robot text-lg tracking-tighter uppercase">Skyhigh<span class="text-green-500">.Ai</span></span>
        </div>
        <button class="bg-green-600 text-black text-[10px] font-black px-4 py-2 rounded-lg uppercase">Login</button>
    </nav>

    <header class="pt-10 pb-6 px-8 text-center">
        <div class="w-20 h-20 bg-black border border-purple-500/30 rounded-full flex items-center justify-center mx-auto mb-6 shadow-2xl">
            <i class="fas fa-robot text-4xl purple-robot"></i>
        </div>
        <h1 class="font-robot text-3xl font-black mb-4 uppercase tracking-tighter leading-tight">
            Személyi <span class="text-green-500 green-glow">Bookmaker</span>
        </h1>
    </header>

    <section class="px-6 mb-10">
        <div id="marketing-slider" class="glass-dark p-8 rounded-[2.5rem] border-l-4 border-green-500 min-h-[180px] flex flex-col justify-center transition-all duration-500">
            <div id="marketing-content" class="fade-in">
                </div>
        </div>
        <div class="flex justify-center gap-2 mt-4">
            <div id="dot0" class="h-1.5 w-6 rounded-full bg-green-500 transition-all"></div>
            <div id="dot1" class="h-1.5 w-2 rounded-full bg-zinc-700 transition-all"></div>
            <div id="dot2" class="h-1.5 w-2 rounded-full bg-zinc-700 transition-all"></div>
            <div id="dot3" class="h-1.5 w-2 rounded-full bg-zinc-700 transition-all"></div>
        </div>
    </section>

    <section class="px-6 py-6">
        <div class="glass-dark p-8 rounded-[2.5rem] border border-white/5">
            <h2 class="font-robot text-xs text-center text-gray-500 tracking-[0.3em] uppercase mb-8 italic">Vagyonépítési Terv</h2>
            <div class="space-y-8">
                <div>
                    <div class="flex justify-between items-baseline mb-2">
                        <span class="text-[10px] text-gray-500 uppercase font-black">Tőkéd</span>
                        <span id="tokeValue" class="text-2xl font-black text-white">100.000 Ft</span>
                    </div>
                    <input type="range" min="50000" max="1000000" step="10000" value="100000" class="w-full h-1.5 bg-zinc-800 rounded-full appearance-none accent-green-500" id="tokeRange">
                </div>
                <div class="grid grid-cols-2 gap-3">
                    <button onclick="setTerm(6)" id="term6" class="py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase">6 Hónap</button>
                    <button onclick="setTerm(12)" id="term12" class="py-4 rounded-2xl border border-white/5 text-[10px] font-black text-gray-500 uppercase">12 Hónap</button>
                </div>
                <div class="pt-6 border-t border-white/5 text-center">
                    <span class="text-[9px] text-purple-400 uppercase font-black tracking-widest mb-1 block">AI Iránycél:</span>
                    <div id="eredmeny" class="text-5xl font-black text-green-500 tracking-tighter green-glow italic">450.000 Ft</div>
                </div>
            </div>
        </div>
    </section>

    <section class="py-10 px-6">
        <div class="bg-gradient-to-br from-green-600 to-green-900 p-8 rounded-[3rem] shadow-2xl">
            <h3 class="font-robot text-2xl font-black mb-1 uppercase text-black italic">Havi Licenc</h3>
            <p class="text-[10px] font-black text-black/60 uppercase mb-8 tracking-widest italic">A jövőd technológiája</p>
            <div class="text-5xl font-black text-black tracking-tighter mb-8">20.000 Ft<span class="text-sm opacity-60">/hó</span></div>
            
            <div class="bg-black/20 p-4 rounded-2xl mb-8 space-y-2 text-[10px] font-bold text-black uppercase tracking-tight">
                <div><i class="fas fa-check-circle mr-2"></i> Adat alapú tőkekezelés</div>
                <div><i class="fas fa-check-circle mr-2"></i> Mentett haladási napló</div>
                <div><i class="fas fa-check-circle mr-2"></i> Fix profitra optimalizált AI</div>
            </div>

            <button class="w-full bg-black text-white py-5 rounded-2xl font-black text-xs uppercase tracking-[0.2em] shadow-2xl active:scale-95 transition">
                Licenc aktiválása
            </button>
        </div>
    </section>

    <footer class="py-10 text-center opacity-20 border-t border-white/5">
        <p class="text-[8px] tracking-[0.5em] font-bold uppercase text-green-500">Skyhigh AI • Architect: faqubelord</p>
    </footer>

    <script>
        // MARKETING SLIDER LOGIKA
        const marketingData = [
            {
                title: "Érzelemmentes Profit",
                text: "A Skyhigh AI kiiktatja az emberi hibát. Míg mások dühből vagy reményből fogadnak, a gép csak tiszta matematikát lát."
            },
            {
                title: "Vagyonvédelmi Pajzs",
                text: "A szoftver elsődleges feladata a tőkéd megvédése. Veszteséges széria esetén azonnal visszaveszi a tétet a biztonság érdekében."
            },
            {
                title: "Progress Save Tech",
                text: "Sosem kell elölről kezdened. Ha lejár a licenced, a robot megáll. Újraindítás után pontosan onnan folytatja, ahol tartottál."
            },
            {
                title: "Az Idő neked dolgozik",
                text: "A 6 és 12 hónapos tervek a kamatos kamat erejére épülnek. A cél minden hónapban a fix, szoftveres növekedés."
            }
        ];

        let currentIndex = 0;
        const contentDiv = document.getElementById('marketing-content');

        function updateSlider() {
            contentDiv.style.opacity = '0';
            setTimeout(() => {
                const item = marketingData[currentIndex];
                contentDiv.innerHTML = `
                    <h3 class="font-robot text-lg mb-3 uppercase text-green-500 tracking-tighter italic">${item.title}</h3>
                    <p class="text-xs text-gray-400 leading-relaxed font-light">${item.text}</p>
                `;
                contentDiv.style.opacity = '1';
                
                // Pöttyök frissítése
                for(let i=0; i<4; i++) {
                    const dot = document.getElementById('dot' + i);
                    dot.className = i === currentIndex ? 'h-1.5 w-6 rounded-full bg-green-500 transition-all' : 'h-1.5 w-2 rounded-full bg-zinc-700 transition-all';
                }

                currentIndex = (currentIndex + 1) % marketingData.length;
            }, 500);
        }

        setInterval(updateSlider, 5000); // 5 másodpercenként vált
        updateSlider();

        // KALKULÁTOR LOGIKA
        const range = document.getElementById('tokeRange');
        const tokeDisplay = document.getElementById('tokeValue');
        const eredmeny = document.getElementById('eredmeny');
        let currentTerm = 6;

        function updateCalc() {
            const val = parseInt(range.value);
            tokeDisplay.innerText = val.toLocaleString() + ' Ft';
            const multiplier = currentTerm === 6 ? 4.5 : 14;
            const final = Math.floor(val * multiplier);
            eredmeny.innerText = final.toLocaleString() + ' Ft';
        }

        function setTerm(months) {
            currentTerm = months;
            document.getElementById('term6').className = months === 6 ? 'py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase' : 'py-4 rounded-2xl border border-white/5 text-[10px] font-black text-gray-500 uppercase';
            document.getElementById('term12').className = months === 12 ? 'py-4 rounded-2xl border border-green-500 bg-green-500/10 text-[10px] font-black uppercase' : 'py-4 rounded-2xl border border-white/5 text-[10px] font-black text-gray-500 uppercase';
            updateCalc();
        }

        range.addEventListener('input', updateCalc);
        updateCalc();
    </script>
</body>
</html>