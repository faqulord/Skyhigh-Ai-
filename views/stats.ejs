    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@800&family=Inter:wght@400;500;700&display=swap" rel="stylesheet">
    <style>
        body { background: #050505; color: #fff; font-family: 'Inter', sans-serif; }
        .thin-purple-border { border: 1px solid transparent; background: linear-gradient(#111, #111) padding-box, linear-gradient(to right, #a855f7, #ec4899) border-box; }
        .orange-neon { color: #FF9F43; text-shadow: 0 0 8px rgba(255, 159, 67, 0.6); }
    </style>
</head>
<body class="p-5 max-w-lg mx-auto">
    <header class="flex justify-between items-center mb-6">
        <div class="flex items-center gap-3">
            <a href="/dashboard" class="text-2xl">ü¶ä</a>
            <h1 class="font-black text-white uppercase tracking-widest">Statisztika</h1>
